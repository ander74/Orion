<UserControl
    x:Class="Orion.Controls.GrupoOpciones"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="Item">

    <StackPanel>

        <!--  TÍTULO  -->
        <Label
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="{Binding ElementName=Item, Path=AlineacionTitulo}"
            Background="{Binding ElementName=Item, Path=FondoTitulo}"
            BorderBrush="{Binding ElementName=Item, Path=ColorBorde}"
            BorderThickness="0.5,0.5,0.5,0"
            Content="{Binding ElementName=Item, Path=Titulo}"
            FontSize="{Binding ElementName=Item, Path=FontSizeTitulo}"
            FontWeight="Bold" />

        <!--  CONTENIDO  -->
        <Border
            Padding="0,10,0,10"
            Background="{Binding ElementName=Item, Path=Background}"
            BorderBrush="{Binding ElementName=Item, Path=ColorBorde}"
            BorderThickness="0.5">

            <ContentPresenter Content="{Binding ElementName=Item, Path=Contenido}" />

        </Border>

    </StackPanel>
</UserControl>
