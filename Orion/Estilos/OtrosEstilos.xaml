                <Setter Property="Background" Value="{StaticResource orDegradadoAzul}" />
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource orDegradadoVioleta}" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Foreground" Value="{StaticResource GrisMedio}" />
            </Trigger>
        </Style.Triggers>
    </Style>





