                        </TextBlock>
                    </StackPanel.ToolTip>
                </StackPanel>


            </StackPanel>

            <!--  SEPARADOR  -->
            <TextBlock
                Width="2"
                Margin="3,5"
                Background="LightGray" />

            <!--  ANUAL  -->
            <TextBlock
                Margin="3,5"
                FontSize="12"
                Foreground="DarkGray"
