<UserControl
    x:Class="Orion.Views.VistaCalendarios"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ch="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:cnv="clr-namespace:Orion.Convertidores"
    xmlns:controls="clr-namespace:Orion.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:diag="clr-namespace:System.Diagnostics;assembly=mscorlib"
    xmlns:local="clr-namespace:Orion.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:xceed="http://schemas.xceed.com/wpf/xaml/toolkit"
    d:DesignHeight="800"
    d:DesignWidth="1200"
    mc:Ignorable="d">

    <!--  ====================================================================================================  -->
    <!--  RECURSOS  -->
    <!--  ====================================================================================================  -->
    <UserControl.Resources>

        <MenuItem
            x:Key="menuRegenerarCalendario"
            Command="{Binding CalendariosVM.CmdRegenerarCalendario}"
            Header="Regenerar Calendario"
            ToolTip="Regenera todos los gráficos de este calendario." />
        <MenuItem
            x:Key="menuRegenerarTodos"
            Command="{Binding CalendariosVM.CmdRegenerarTodos}"
            Header="Regenerar Todos"
            ToolTip="Regenera todos los gráficos de la tabla." />

        <cnv:ConvertidorPrueba x:Key="cnvPrueba" />
        <cnv:ConvertidorTextoNegrita x:Key="cnvTextoNegrita" />
        <cnv:ConvertidorMinutosToHoraMixta x:Key="cnvMinutosToHoraMixta" />
        <cnv:ConvertidorColorDia x:Key="cnvColorDia" />
        <cnv:ConvertidorColorDiaPijama x:Key="cnvColorDiaPijama" />
        <cnv:ConvertidorColorDiaSinGraficos x:Key="cnvColorDiaSinGraficos" />
        <cnv:ConvertidorColorFecha x:Key="cnvColorFecha" />
        <cnv:ConvertidorNegritaDia x:Key="cnvNegritaDia" />
        <cnv:ConvertidorDecoracionDia x:Key="cnvDecoracionDia" />
        <cnv:ConvertidorHora x:Key="cnvHora" />
        <cnv:ConvertidorSuperHora x:Key="cnvSuperHora" />
        <cnv:ConvertidorHoraMixta x:Key="cnvHoraMixta" />
        <cnv:ConvertidorSuperHoraMixta x:Key="cnvSuperHoraMixta" />
        <cnv:ConvertidorDiasF6 x:Key="cnvDiasF6" />
        <cnv:ConvertidorFecha x:Key="cnvFecha" />
        <cnv:ConvertidorDecimal x:Key="cnvDecimal" />
        <cnv:ConvertidorDecimal6 x:Key="cnvDecimal6" />
        <cnv:ConvertidorDecimalEuro x:Key="cnvDecimalEuro" />
        <cnv:ConvertidorDecimalNulable x:Key="cnvDecimalNulable" />
        <cnv:ConvertidorNumeroGrafico x:Key="cnvNumGrafico" />
        <cnv:ConvertidorNumeroGraficoCalendario x:Key="cnvNumGraficoCalendario" />
        <cnv:ConvertidorNumeroGraficoPijama x:Key="cnvNumGraficoPijama" />
        <cnv:ConvertidorRojoSiTrue x:Key="cnvRojoSiTrue" />
        <BooleanToVisibilityConverter x:Key="cnvBoolToVisibility" />
        <cnv:ConvertidorVisibilityInverter x:Key="cnvVisibilityInverter" />
        <cnv:ConvertidorColorColumnaPijama x:Key="cnvColorColumnaPijama" />
        <cnv:ConvertidorNegritaColumnaPijama x:Key="cnvNegritaColumnaPijama" />
        <cnv:ConvertidorNegritaDiaPijama x:Key="cnvNegritaDiaPijama" />
        <cnv:ConvertidorOcultoSiCero x:Key="cnvOcultoSiCero" />

        <Style x:Key="EstiloGridCalendarios" TargetType="DataGrid">
            <Setter Property="ColumnHeaderStyle" Value="{StaticResource EstiloHeadersVerde}" />
            <Setter Property="RowStyle" Value="{StaticResource EstiloFilasVerde}" />
            <Setter Property="CellStyle" Value="{StaticResource EstiloCeldasCalendarios}" />
        </Style>
        <Style x:Key="EstiloGridPijama" TargetType="DataGrid">
            <Setter Property="ColumnHeaderStyle" Value="{StaticResource EstiloHeadersAzul}" />
            <Setter Property="RowStyle" Value="{StaticResource EstiloFilasAzul}" />
            <Setter Property="CellStyle" Value="{StaticResource EstiloCeldasNormal}" />
        </Style>
        <Style x:Key="TextoPijama1" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Comic Sans MS" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style x:Key="TextoPijama2" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Comic Sans MS" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Width" Value="135" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style x:Key="TextBoxPijama" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Comic Sans MS" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Width" Value="75" />
            <Setter Property="Height" Value="24" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>

        <Style x:Key="EstiloItemResumen" TargetType="controls:ItemResumen">
            <Setter Property="FontFamily" Value="Comic Sans MS" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Margin" Value="5,2" />
            <Setter Property="LineaPuntos" Value="True" />
        </Style>

        <Style x:Key="EstiloItemResumenDoble" TargetType="controls:ItemResumenDoble">
            <Setter Property="FontFamily" Value="Comic Sans MS" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Margin" Value="5,2" />
            <Setter Property="LineaPuntos" Value="True" />
        </Style>

    </UserControl.Resources>


    <!--  ====================================================================================================  -->
    <!--  CONTENIDO  -->
    <!--  ====================================================================================================  -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>


        <!--  ====================================================================================================  -->
        <!--  BARRA DE BOTONES CALENDARIOS  -->
        <!--  ====================================================================================================  -->
        <StackPanel
            x:Name="BotonesCalendarios"
            Height="80"
            Background="{StaticResource DegradadoCeleste0}"
            Orientation="Horizontal"
            Visibility="Visible">

            <!--  BOTON GUARDAR  -->
            <controls:BotonDual
                Command="{Binding cmdGuardarCambios}"
                ImagenActivo="Imagenes/GuardarRojo.png"
                ImagenNormal="Imagenes/Guardar.png"
                IsActivo="{Binding EnOtroCentro}"
                TextoActivo="Guardar"
                TextoNormal="Guardar" />

            <!--  SEPARADOR  -->
            <TextBlock
                Width="2"
                Margin="3,5"
                Background="LightGray" />


            <!--  BOTON RETROCEDE MES  -->
            <controls:BotonBarra
                Command="{Binding CalendariosVM.cmdRetrocedeMes}"
                FontSize="24"
                Foreground="RoyalBlue"
                Imagen="{x:Null}"
                Titulo="&#x25C0;" />

            <!--  ETIQUETA MES  -->
            <StackPanel
                Width="150"
                Margin="6,12,6,6"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <Label
                    HorizontalAlignment="Center"
                    Content="{Binding CalendariosVM.MesActual}"
                    FontFamily="Bookman Old Style"
                    FontSize="20" />
                <Button
                    x:Name="BotonValidezGrupo"
                    Width="Auto"
                    Height="Auto"
                    Padding="15,3"
                    HorizontalAlignment="Center"
                    Click="BtAbrirPanelFecha_Click"
                    Content="{Binding CalendariosVM.AñoActual}"
                    FontFamily="Bookman Old Style"
                    FontSize="20"
                    Style="{StaticResource EstiloBotonValidezFecha}" />
            </StackPanel>

            <!--  BOTON AVANZA MES  -->
            <controls:BotonBarra
                Command="{Binding CalendariosVM.cmdAvanzaMes}"
                FontSize="24"
                Foreground="RoyalBlue"
                Imagen="{x:Null}"
                Titulo="&#x25B6;" />

            <!--  SEPARADOR  -->
            <TextBlock
                Width="2"
                Margin="3,5"
                Background="LightGray" />

            <!--  DESPLEGABLE OTROS CALENDARIOS  -->
            <xceed:DropDownButton
                x:Name="BtDropOtrosCalendarios"
                Width="60"
                Style="{StaticResource EstiloBotonDesplegable}">
                <xceed:DropDownButton.Content>
                    <StackPanel Orientation="Vertical">
                        <Image Source="Imagenes/Calendarios.png" Style="{StaticResource EstiloImagen}" />
                        <TextBlock
                            Name="TxtOtrosCalendarios"
                            FontFamily="Comic Sans MS"
                            FontSize="10"
                            Text="Otros Calendarios"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </xceed:DropDownButton.Content>
                <xceed:DropDownButton.DropDownContent>
                    <Border
                        Background="AliceBlue"
                        BorderBrush="DarkBlue"
                        BorderThickness="2"
                        CornerRadius="5"
                        DataContext="{Binding Source={x:Reference TxtOtrosCalendarios}, Path=DataContext.CalendariosVM}">
                        <Border
                            Margin="3"
                            BorderBrush="DarkGray"
                            BorderThickness="1"
                            CornerRadius="5">
                            <StackPanel Orientation="Vertical">

                                <!--  BOTON ANUALES  -->
                                <Button
                                    Margin="6,6,6,3"
                                    Padding="20,10"
                                    HorizontalAlignment="Stretch"
                                    Click="BtOtrosCalendarios_Click"
                                    Command="{Binding CmdAbrirAnuales}"
                                    Content="Calendarios Anuales"
                                    FontFamily="Comic Sans MS"
                                    FontSize="11"
                                    Style="{StaticResource EstiloBotonBarraPequeña}"
                                    TextBlock.TextAlignment="Center"
                                    ToolTip="Abre el Excel con los calendarios Anuales. Si no existe el Excel, lo crea." />

                                <!--  BOTON VIRTUALES  -->
                                <Button
                                    Margin="6,6,6,3"
                                    Padding="20,10"
                                    HorizontalAlignment="Stretch"
                                    Click="BtOtrosCalendarios_Click"
                                    Command="{Binding CmdAbrirVirtuales}"
                                    Content="Calendarios Virtuales"
                                    FontFamily="Comic Sans MS"
                                    FontSize="11"
                                    Style="{StaticResource EstiloBotonBarraPequeña}"
                                    TextBlock.TextAlignment="Center"
                                    ToolTip="Abre el Excel con los calendarios Virtuales. Si no existe el Excel, lo crea." />

                                <!--  SEPARADOR  -->
                                <TextBlock Height="2" Background="LightGray" />

                                <!--  BOTON COMPARAR CON ANUAL  -->
                                <Button
                                    Margin="6,6,6,3"
                                    Padding="20,10"
                                    HorizontalAlignment="Stretch"
                                    Click="BtOtrosCalendarios_Click"
                                    Command="{Binding CmdCompararConAnual}"
                                    Content="Comparar con Anual"
                                    FontFamily="Comic Sans MS"
                                    FontSize="11"
                                    Style="{StaticResource EstiloBotonBarraPequeña}"
                                    TextBlock.TextAlignment="Center"
                                    ToolTip="Crea un informe comparando el calendario de Orión con el anual guardado en un excel." />

                                <!--  BOTON COMPARAR CON VIRTUAL  -->
                                <Button
                                    Margin="6,6,6,3"
                                    Padding="20,10"
                                    HorizontalAlignment="Stretch"
                                    Click="BtOtrosCalendarios_Click"
                                    Command="{Binding CmdCompararConVirtual}"
                                    Content="Comparar con Virtual"
                                    FontFamily="Comic Sans MS"
                                    FontSize="11"
                                    Style="{StaticResource EstiloBotonBarraPequeña}"
                                    TextBlock.TextAlignment="Center"
                                    ToolTip="Crea un informe comparando el calendario de Orión con el virtual guardado en un excel." />

                                <!--  SEPARADOR  -->
                                <TextBlock Height="2" Background="LightGray" />

                                <!--  BOTON COMPARAR TODOS CON ANUAL  -->
                                <Button
                                    Margin="6,6,6,3"
                                    Padding="20,10"
                                    HorizontalAlignment="Stretch"
                                    Click="BtOtrosCalendarios_Click"
                                    Command="{Binding CmdCompararTodosConAnual}"
                                    Content="Comparar Todos con Anual"
                                    FontFamily="Comic Sans MS"
                                    FontSize="11"
                                    Style="{StaticResource EstiloBotonBarraPequeña}"
                                    TextBlock.TextAlignment="Center"
                                    ToolTip="Crea un informe comparando los calendarios de Orión de todo el año con el anual guardado en un excel." />

                                <!--  BOTON COMPARAR TODOS CON VIRTUAL  -->
                                <Button
                                    Margin="6,6,6,3"
                                    Padding="20,10"
                                    HorizontalAlignment="Stretch"
                                    Click="BtOtrosCalendarios_Click"
                                    Command="{Binding CmdCompararTodosConVirtual}"
                                    Content="Comparar Todos con Virtual"
                                    FontFamily="Comic Sans MS"
                                    FontSize="11"
                                    Style="{StaticResource EstiloBotonBarraPequeña}"
                                    TextBlock.TextAlignment="Center"
                                    ToolTip="Crea un informe comparando los calendarios de Orión de todo el año con el virtual guardado en un excel." />


                            </StackPanel>
                        </Border>
                    </Border>
                </xceed:DropDownButton.DropDownContent>
            </xceed:DropDownButton>

            <!--  SEPARADOR  -->
            <TextBlock
                Width="2"
                Margin="3,5"
                Background="LightGray" />

            <!--  BOTON BORRAR CALENDARIO  -->
            <controls:BotonBarra
                Command="{Binding CalendariosVM.cmdBorrarCalendario}"
                Imagen="Imagenes/BorrarFila.png"
                Titulo="Borrar Calendario" />

            <!--  BOTON DESHACER BORRAR  -->
            <controls:BotonBarra
                Command="{Binding CalendariosVM.cmdDeshacerBorrar}"
                Imagen="Imagenes/ActualizarTabla.png"
                Titulo="Deshacer Borrar" />

            <!--  BOTON BORRAR TODOS  -->
            <controls:BotonBarra
                Command="{Binding CalendariosVM.cmdBorrarTodos}"
                Imagen="Imagenes/BorrarTabla.png"
                Titulo="Borrar Todos" />

            <!--  SEPARADOR  -->
            <TextBlock
                Width="2"
                Margin="3,5"
                Background="LightGray" />

            <!--  DESPLEGABLE ACCIONES  -->
            <xceed:DropDownButton x:Name="BtDropAcciones" Style="{StaticResource EstiloBotonDesplegable}">
                <xceed:DropDownButton.Content>
                    <StackPanel Orientation="Vertical">
                        <Image Source="Imagenes/Engranajes.png" Style="{StaticResource EstiloImagen}" />
                        <TextBlock
                            Name="TxtAcciones"
                            FontFamily="Comic Sans MS"
                            FontSize="10"
                            Text="Acciones"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </xceed:DropDownButton.Content>
                <xceed:DropDownButton.DropDownContent>
                    <Border
                        Background="AliceBlue"
                        BorderBrush="DarkBlue"
                        BorderThickness="2"
                        CornerRadius="5"
                        DataContext="{Binding Source={x:Reference TxtAcciones}, Path=DataContext.CalendariosVM}">
                        <Border
                            Margin="3"
                            Padding="5"
                            BorderBrush="DarkGray"
                            BorderThickness="1"
                            CornerRadius="5">
                            <StackPanel Orientation="Horizontal">

                                <!--  BOTON DETECTAR FALLOS  -->
                                <controls:BotonBarra
                                    Click="BtAcciones_Click"
                                    Command="{Binding cmdDetectarFallos}"
                                    Imagen="Imagenes/ConfigurarTabla.png"
                                    Titulo="Detectar Fallos" />

                                <!--  CAMBIAR JD POR DS  -->
                                <controls:BotonBarra
                                    Click="BtAcciones_Click"
                                    Command="{Binding cmdCambiarJDPorDS}"
                                    Imagen="Imagenes/FlechasCruzadas.png"
                                    Titulo="JDs Sueltos a DS" />

                                <!--  CAMBIAR JD EN FINDE POR FN  -->
                                <controls:BotonBarra
                                    Click="BtAcciones_Click"
                                    Command="{Binding cmdCambiarJDPorFN}"
                                    Imagen="Imagenes/FlechasCruzadas.png"
                                    Titulo="JDs en Finde a FN" />

                                <!--  BOTON ACCIONES POR LOTES  -->
                                <controls:BotonBarra
                                    Click="BtAccionesLotes_Click"
                                    Imagen="Imagenes/Navaja.png"
                                    Titulo="Acciones Por Lotes" />

                                <!--  SEPARADOR  -->
                                <TextBlock
                                    Height="2"
                                    Margin="5,3"
                                    Background="LightGray" />

                            </StackPanel>
                        </Border>
                    </Border>
                </xceed:DropDownButton.DropDownContent>
            </xceed:DropDownButton>

            <!--  SEPARADOR  -->
            <TextBlock
                Width="2"
                Margin="3,5"
                Background="LightGray" />

            <!--  BOTON COPIAR  -->
            <controls:BotonBarra
                Command="{Binding ElementName=TablaCalendarios, Path=ComandoCopiar}"
                Imagen="Imagenes/Copiar.png"
                Titulo="Copiar"
                ToolTip="Sólo funciona si está en modo Selección Celdas." />

            <!--  BOTON PEGAR  -->
            <controls:BotonBarra
                Command="{Binding ElementName=TablaCalendarios, Path=ComandoPegar}"
                Imagen="Imagenes/Pegar.png"
                Titulo="Pegar"
                ToolTip="Sólo funciona si está en modo Selección Celdas." />

            <!--  SEPARADOR  -->
            <TextBlock
                Width="2"
                Margin="3,5"
                Background="LightGray" />

            <!--  DESPLEGABLE FILTRAR TABLA  -->
            <xceed:DropDownButton x:Name="BtDropFiltros" Style="{StaticResource EstiloBotonDesplegable}">
                <xceed:DropDownButton.Content>
                    <StackPanel Orientation="Vertical">
                        <Image Source="Imagenes/Filtrar.png" Style="{StaticResource EstiloImagen}" />
                        <TextBlock
                            Name="TxtFiltrar"
                            FontFamily="Comic Sans MS"
                            FontSize="10"
                            Text="Filtrar Tabla"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </xceed:DropDownButton.Content>
                <xceed:DropDownButton.DropDownContent>
                    <Border
                        Background="AliceBlue"
                        BorderBrush="DarkBlue"
                        BorderThickness="2"
                        CornerRadius="5"
                        DataContext="{Binding Source={x:Reference TxtFiltrar}, Path=DataContext.CalendariosVM}">
                        <Border
                            Margin="3"
                            BorderBrush="DarkGray"
                            BorderThickness="1"
                            CornerRadius="5">
                            <StackPanel Orientation="Vertical">

                                <!--  BOTON INDEFINIDOS  -->
                                <Button
                                    Margin="6,6,6,3"
                                    Padding="20,10"
                                    HorizontalAlignment="Stretch"
                                    Click="BotonFiltrado_Click"
                                    Command="{Binding cmdAplicarFiltro}"
                                    CommandParameter="Indefinidos"
                                    Content="Indefinidos"
                                    FontFamily="Comic Sans MS"
                                    FontSize="11"
                                    Style="{StaticResource EstiloBotonBarraPequeña}"
                                    TextBlock.TextAlignment="Center"
                                    ToolTip="Muestra sólo los conductores indefinidos." />

                                <!--  BOTON EVENTUALES  -->
                                <Button
                                    Margin="6,3,6,3"
                                    Padding="20,10"
                                    HorizontalAlignment="Stretch"
                                    Click="BotonFiltrado_Click"
                                    Command="{Binding cmdAplicarFiltro}"
                                    CommandParameter="Eventuales"
                                    Content="Eventuales"
                                    FontFamily="Comic Sans MS"
                                    FontSize="11"
                                    Style="{StaticResource EstiloBotonBarraPequeña}"
                                    TextBlock.TextAlignment="Center"
                                    ToolTip="Muestra sólo los conductores eventuales" />

                                <!--  BOTON EVENTUALES PARCIAL  -->
                                <Button
                                    Margin="6,3,6,6"
                                    Padding="20,10"
                                    HorizontalAlignment="Stretch"
                                    Click="BotonFiltrado_Click"
                                    Command="{Binding cmdAplicarFiltro}"
                                    CommandParameter="EventualesParcial"
                                    Content="Eventuales Parcial"
                                    FontFamily="Comic Sans MS"
                                    FontSize="11"
                                    Style="{StaticResource EstiloBotonBarraPequeña}"
                                    TextBlock.TextAlignment="Center"
                                    ToolTip="Muestra sólo los conductores eventuales que no trabajen todo el mes." />

                            </StackPanel>
                        </Border>
                    </Border>
                </xceed:DropDownButton.DropDownContent>
            </xceed:DropDownButton>

            <!--  BOTON QUITAR FILTRO  -->
            <controls:BotonBarra
                Command="{Binding CalendariosVM.cmdQuitarFiltro}"
                Imagen="Imagenes/QuitarFiltro.png"
                Titulo="Quitar Filtro" />

            <!--  SEPARADOR  -->
            <TextBlock
                Width="2"
                Margin="3,5"
                Background="LightGray" />

            <!--  BOTON ABRIR PIJAMA  -->
            <controls:BotonBarra
                Click="BtAbrirPijama_Click"
                Command="{Binding CalendariosVM.cmdAbrirPijama}"
                Imagen="Imagenes/HojaPijama.png"
                Titulo="Hoja Pijama" />


            <!--  BOTON RESUMEN AÑO  -->
            <!--<controls:BotonBarra
                Command="{Binding CalendariosVM.cmdMostrarResumenAño}"
                Imagen="Imagenes/TablaDetalle.png"
                Titulo="Resumen Anual" />-->

            <!--  SEPARADOR  -->
            <TextBlock
                Width="2"
                Margin="3,5"
                Background="LightGray" />

            <!--  DESPLEGABLE CREAR PDF  -->
            <xceed:DropDownButton x:Name="BtDropCrearPdf" Style="{StaticResource EstiloBotonDesplegable}">
                <xceed:DropDownButton.Content>
                    <StackPanel Orientation="Vertical">
                        <Image Source="Imagenes/GuardarPDF.png" Style="{StaticResource EstiloImagen}" />
                        <TextBlock
                            Name="TxtCrearPdf"
                            FontFamily="Comic Sans MS"
                            FontSize="10"
                            Text="Crear PDF"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </xceed:DropDownButton.Content>
                <xceed:DropDownButton.DropDownContent>
                    <Border
                        Background="AliceBlue"
                        BorderBrush="DarkBlue"
                        BorderThickness="2"
                        CornerRadius="5"
                        DataContext="{Binding Source={x:Reference TxtCrearPdf}, Path=DataContext.CalendariosVM}">
                        <Border
                            Margin="3"
                            BorderBrush="DarkGray"
                            BorderThickness="1"
                            CornerRadius="5">
                            <StackPanel Orientation="Vertical">

                                <!--  BOTON CREAR PDF  -->
                                <Button
                                    Margin="6,6,6,3"
                                    Padding="20,10"
                                    HorizontalAlignment="Stretch"
                                    Click="BtCreandoPdf_Click"
                                    Command="{Binding cmdCalendariosEnPDF}"
                                    Content="Tabla Calendarios"
                                    FontFamily="Comic Sans MS"
                                    FontSize="11"
                                    Style="{StaticResource EstiloBotonBarraPequeña}"
                                    TextBlock.TextAlignment="Center" />

                                <!--  BOTON PIJAMAS JUNTOS EN  PDF  -->
                                <Button
                                    Margin="6,3,6,3"
                                    Padding="20,10"
                                    HorizontalAlignment="Stretch"
                                    Click="BtCreandoPdf_Click"
                                    Command="{Binding cmdPijamasEnPDF}"
                                    Content="Hojas Pijama Juntas"
                                    FontFamily="Comic Sans MS"
                                    FontSize="11"
                                    Style="{StaticResource EstiloBotonBarraPequeña}"
                                    TextBlock.TextAlignment="Center" />

                                <!--  BOTON PIJAMAS POR SEPARADO EN  PDF  -->
                                <Button
                                    Margin="6,3,6,3"
                                    Padding="20,10"
                                    HorizontalAlignment="Stretch"
                                    Click="BtCreandoPdf_Click"
                                    Command="{Binding cmdPijamasSeparadosEnPdf}"
                                    Content="Hojas Pijama Por Separado"
                                    FontFamily="Comic Sans MS"
                                    FontSize="11"
                                    Style="{StaticResource EstiloBotonBarraPequeña}"
                                    TextBlock.TextAlignment="Center" />

                                <!--  BOTON FALLOS DE CALENDARIO  -->
                                <Button
                                    Margin="6,3,6,6"
                                    Padding="20,10"
                                    HorizontalAlignment="Stretch"
                                    Click="BtCreandoPdf_Click"
                                    Command="{Binding cmdCalendariosEnPdfConFallos}"
                                    Content="Fallos de Calendario"
                                    FontFamily="Comic Sans MS"
                                    FontSize="11"
                                    Style="{StaticResource EstiloBotonBarraPequeña}"
                                    TextBlock.TextAlignment="Center" />

                                <!--  BOTON ESTADÍSTICAS  -->
                                <Button
                                    Margin="6,3,6,6"
                                    Padding="20,10"
                                    HorizontalAlignment="Stretch"
                                    Click="BtCreandoPdf_Click"
                                    Command="{Binding cmdPdfEstadisticas}"
                                    Content="Estadísticas"
                                    FontFamily="Comic Sans MS"
                                    FontSize="11"
                                    Style="{StaticResource EstiloBotonBarraPequeña}"
