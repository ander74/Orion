                    <TextBlock
                        Width="50"
                        Margin="0,5"
                        FontSize="12"
                        Style="{StaticResource TextoPijama1}"
                        Text="O-V: "
                        TextAlignment="Right" />
                    <TextBlock
                        Width="Auto"
                        Margin="0,5"
                        FontSize="12"
                        Style="{StaticResource TextoPijama2}"
