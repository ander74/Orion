        <Image
            Grid.Row="3"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Opacity="0.1"
            Source="Imagenes\Orion.png" />

        <!--  ====================================================================================================  -->
        <!--  PANEL DE CONTENIDO  -->
        <!--  ====================================================================================================  -->

        <!--  PANEL ACCIONES POR LOTES  -->
        <Grid
            x:Name="PanelAccionesPorLotes"
            Grid.Row="1"
            Grid.Column="0"
            Visibility="Visible">

            <Border
                x:Name="BordePanelAccionesLotes"
                Height="Auto"
                Margin="0,3"
                Padding="3"
                Background="{StaticResource DegradadoCeleste2}"
                BorderBrush="DarkBlue"
                BorderThickness="0.5"
                CornerRadius="4"
                Visibility="Collapsed">

                <StackPanel
                    x:Name="PanelAccionesLotes"
                    Margin="5"
                    Orientation="Vertical"
                    Visibility="Collapsed">

                    <!--  TITULO  -->
                    <TextBlock
                        FontFamily="Verdana"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="DarkBlue"
                        Text="ACCIONES POR LOTES" />

                    <!--  CONTENIDO PRINCIPAL  -->
                    <StackPanel
                        Margin="10"
                        DataContext="{Binding CalendariosVM.AccionesLotesVM}"
                        Orientation="Horizontal">

                        <!--  GRÁFICO DE APLICACION  -->
                        <StackPanel
                            Margin="5,0"
                            Orientation="Horizontal">
                            <TextBlock
                                Width="Auto"
                                Style="{StaticResource TextoPijama1}"
                                Text="Aplicar al Gráfico: " />
                            <controls:QTextBox
                                Width="70"
                                Style="{StaticResource TextBoxPijama}"
                                Text="{Binding Grafico, Converter={StaticResource cnvNumGrafico}}" />
                            <ComboBox
                                Width="100"
                                Height="24"
                                Margin="5,0"
                                Padding="6"
                                VerticalAlignment="Center"
                                VerticalContentAlignment="Center"
                                FontSize="12"
                                SelectedIndex="{Binding Codigo}">
                                <ComboBox.Items>
                                    <ComboBoxItem Content="Normal" />
                                    <ComboBoxItem Content="Comite CO" />
                                    <ComboBoxItem Content="Comite CE" />
                                    <ComboBoxItem Content="Trabajo JD" />
                                    <ComboBoxItem Content="Todos" />
                                </ComboBox.Items>
                            </ComboBox>

                        </StackPanel>

                        <!--  DIAS DE APLICACION  -->
                        <StackPanel
                            Margin="5,0"
                            Orientation="Horizontal">
                            <TextBlock
                                Width="Auto"
                                Style="{StaticResource TextoPijama1}"
                                Text="Aplicar a los días: " />
                            <controls:QTextBox
                                Width="40"
                                Style="{StaticResource TextBoxPijama}"
                                Text="{Binding DelDia, StringFormat=00, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock
                                Width="Auto"
                                Style="{StaticResource TextoPijama2}"
                                Text="  Al  " />
                            <controls:QTextBox
                                Width="40"
                                Style="{StaticResource TextBoxPijama}"
                                Text="{Binding AlDia, StringFormat=00, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>

                        <!--  ACCIÓN  -->
                        <StackPanel
                            Margin="5,0"
                            Orientation="Horizontal">
                            <TextBlock
                                Width="Auto"
                                Style="{StaticResource TextoPijama1}"
                                Text="Acción: " />
                            <ComboBox
                                Width="160"
                                Height="24"
                                Padding="3"
                                VerticalAlignment="Center"
                                VerticalContentAlignment="Center"
                                FontSize="12"
                                SelectedIndex="{Binding CodigoAccion}">
                                <ComboBox.Items>
                                    <ComboBoxItem Content="Exceso Jornada" />
                                    <ComboBoxItem Content="Facturado Paquetería" />
                                    <ComboBoxItem Content="Limpieza" />
                                    <ComboBoxItem Content="Media Limpieza" />
                                    <ComboBoxItem Content="Quitar Limpieza" />
                                    <ComboBoxItem Content="Cambiar Número" />
                                    <ComboBoxItem Content="Borrar Notas" />
                                </ComboBox.Items>
                            </ComboBox>
                        </StackPanel>

                        <!--  VALOR PEDIDO  -->
                        <StackPanel
                            Margin="5,0"
                            Orientation="Horizontal">
                            <TextBlock
                                Width="Auto"
                                Style="{StaticResource TextoPijama1}"
                                Text="{Binding TextoValorPedido}" />
                            <controls:QTextBox
                                Width="70"
                                Style="{StaticResource TextBoxPijama}"
                                Text="{Binding Horas, Converter={StaticResource cnvHora}}"
                                Visibility="{Binding VisibilidadHoras}" />
                            <controls:QTextBox
                                Width="80"
                                Style="{StaticResource TextBoxPijama}"
                                Text="{Binding Importe, Converter={StaticResource cnvDecimal}}"
                                Visibility="{Binding VisibilidadImporte}" />
                            <controls:QTextBox
                                Width="70"
                                Style="{StaticResource TextBoxPijama}"
                                Text="{Binding NuevoGrafico, Converter={StaticResource cnvNumGrafico}}"
                                Visibility="{Binding VisibilidadNumero}" />
                            <ComboBox
                                Width="100"
                                Height="24"
                                Margin="5,0"
                                Padding="6"
                                VerticalAlignment="Center"
                                VerticalContentAlignment="Center"
                                FontSize="12"
                                SelectedIndex="{Binding NuevoCodigo}"
                                Visibility="{Binding VisibilidadNumero}">
                                <ComboBox.Items>
                                    <ComboBoxItem Content="Normal" />
                                    <ComboBoxItem Content="Comite CO" />
                                    <ComboBoxItem Content="Comite CE" />
                                    <ComboBoxItem Content="Trabajo JD" />
                                    <ComboBoxItem Content="No cambiar" />
                                </ComboBox.Items>
                            </ComboBox>

                        </StackPanel>

                    </StackPanel>

                    <!--  BOTÓN Y NOTAS  -->
                    <StackPanel
                        Margin="10"
                        Orientation="Horizontal">

                        <!--  BOTÓN APLICAR  -->
                        <Button
                            Margin="5,0"
                            Padding="15,8"
                            Command="{Binding CalendariosVM.cmdAplicarAccionLotes}"
                            Content="Aplicar Acción"
                            Focusable="True"
                            FontSize="12"
                            Style="{StaticResource EstiloBoton}" />

                        <!--  BOTÓN MARCAR  -->
                        <Button
                            Margin="5,0"
                            Padding="15,8"
                            Command="{Binding CalendariosVM.cmdMarcarAccionesLotes}"
                            Content="Marcar"
                            Focusable="True"
                            FontSize="12"
                            Style="{StaticResource EstiloBoton}" />

                        <!--  BOTÓN VACIAR  -->
                        <Button
                            Margin="5,0"
                            Padding="15,8"
                            Command="{Binding CalendariosVM.cmdBorrarAccionLotes}"
                            Content="Vaciar"
                            Focusable="True"
                            FontSize="12"
                            Style="{StaticResource EstiloBoton}" />

                        <!--  NOTAS  -->
                        <StackPanel
                            Margin="20,0,5,0"
                            DataContext="{Binding CalendariosVM.AccionesLotesVM}"
                            Orientation="Horizontal">
                            <CheckBox
                                Margin="10,0"
                                VerticalAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="Sumar Valor"
                                FontFamily="Verdana"
                                FontSize="12"
                                FontWeight="Bold"
                                IsChecked="{Binding SumarValor}" />
                            <TextBlock
                                Width="Auto"
                                Margin="10,0"
                                Style="{StaticResource TextoPijama1}"
                                Text="Notas: " />
                            <controls:QTextBox
                                Width="500"
                                Style="{StaticResource TextBoxPijama}"
                                Text="{Binding Notas, UpdateSourceTrigger=PropertyChanged}"
                                TextAlignment="Left" />
                        </StackPanel>

                    </StackPanel>

                </StackPanel>

            </Border>

            <!--  BOTÓN CERRAR  -->
            <Button
                x:Name="BtCerrarAccionesLotes"
                Margin="5,7"
                Padding="8,5"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Click="BtAccionesLotes_Click"
                Content="X"
                FontSize="14"
                FontWeight="Bold"
                Foreground="Red"
                Style="{StaticResource EstiloBotonBarraPequeña}"
                Visibility="Collapsed" />

        </Grid>


        <!--  PANEL FILTRO APLICADO  -->
        <Grid
            Grid.Row="2"
            Grid.Column="0"
            HorizontalAlignment="Stretch"
            Visibility="{Binding CalendariosVM.HayFiltroAplicado, Converter={StaticResource cnvBoolToVisibility}}">
            <Border
                Height="Auto"
                Margin="0,3"
                Padding="3"
                Background="{StaticResource DegradadoCeleste1}"
                BorderBrush="DarkBlue"
                BorderThickness="0.5"
                CornerRadius="4">

                <Label
                    VerticalContentAlignment="Center"
                    FontFamily="Verdana"
                    FontSize="14"
                    FontWeight="Normal">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Margin="4,0"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Text="Filtro aplicado:" />
                        <TextBlock
                            Width="300"
                            Margin="4,0"
                            VerticalAlignment="Center"
                            Text="{Binding CalendariosVM.FiltroAplicado}" />
                    </StackPanel>
                </Label>

            </Border>
        </Grid>


        <!--  TABLA CALENDARIOS  -->
        <FrameworkElement
            x:Name="ColumnaActual"
            Visibility="Collapsed" />
        <controls:QDataGrid
            x:Name="TablaCalendarios"
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            AlternationCount="2"
            AutoGenerateColumns="False"
            Background="Transparent"
            CanUserReorderColumns="False"
            DobleClick="{Binding CalendariosVM.cmdAbrirPijama}"
            DobleClickParametro="{Binding ElementName=TablaCalendarios, Path=CurrentColumn.Header, Mode=TwoWay}"
            EnableColumnVirtualization="True"
            EnableRowVirtualization="True"
            FontSize="12"
            HeadersVisibility="Column"
            IsReadOnly="False"
            ItemsSource="{Binding CalendariosVM.VistaCalendarios}"
            MouseDoubleClick="TablaCalendarios_MouseDoubleClick"
            SelectedItem="{Binding CalendariosVM.CalendarioSeleccionado}"
            SelectionMode="Extended"
            SelectionUnit="{Binding CalendariosVM.ModoSeleccion}"
            Style="{StaticResource EstiloGridCalendarios}"
            Visibility="Visible">

            <controls:QDataGrid.Resources>
                <SolidColorBrush
                    x:Key="{x:Static SystemColors.HighlightBrushKey}"
                    Color="PaleGoldenrod" />
                <SolidColorBrush
                    x:Key="{x:Static SystemColors.HighlightTextBrushKey}"
                    Color="Black" />
            </controls:QDataGrid.Resources>

            <!--  COLUMNAS  -->
            <controls:QDataGrid.Columns>
                <DataGridTextColumn
                    Width="2*"
                    Binding="{Binding MatriculaConductor}"
                    CanUserSort="True"
                    Header="Conductor">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{Binding HayInforme, Converter={StaticResource cnvRojoSiTrue}}" />
                            <Setter Property="ToolTip" Value="{Binding Informe}" />
                            <Setter Property="ToolTipService.ShowDuration" Value="1000000" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding ListaDias[0].ComboGrafico, Converter={StaticResource cnvNumGraficoCalendario}}"
                    CanUserReorder="False"
                    CanUserResize="false"
                    CanUserSort="False"
                    Header="01">
