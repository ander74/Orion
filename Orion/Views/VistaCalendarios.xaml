                                    Descripcion="TOTAL FINDES"
                                    Style="{StaticResource EstiloItemResumen}"
                                    ToolTip="Suma de todos los pluses de fin de semana y festivos."
                                    Valor="{Binding CalendariosVM.Pijama.ImporteTotalFindes, Converter={StaticResource cnvDecimalEuro}}"
                                    Visibility="{Binding CalendariosVM.Pijama.ImporteTotalFindes, Converter={StaticResource cnvOcultoSiCero}}" />
                            </StackPanel>
                        </Grid>


                        <!--  DIETAS Y PLUSES  -->
                        <ToggleButton
                            x:Name="BtDietasMes"
                            Margin="5,10,5,0"
                            Padding="5,0"
                            Content="Dietas y Pluses Mes Actual"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="DarkRed"
                            Style="{StaticResource EstiloToggleBarraPequeña}"
                            ToolTip="Mostrar/Ocultar" />

                        <Grid
                            Margin="5,0"
                            Visibility="{Binding ElementName=BtDietasMes, Path=IsChecked, Converter={StaticResource cnvVisibilityInverter}}">
                            <Border
                                Background="AliceBlue"
                                BorderBrush="DarkGray"
                                BorderThickness="1"
                                CornerRadius="5" />
                            <StackPanel
                                Margin="0,4"
                                Orientation="Vertical">

                                <!--  DIETAS  -->
                                <controls:ItemResumen
                                    Descripcion="Dietas Desayuno"
                                    Style="{StaticResource EstiloItemResumen}"
                                    ToolTip="Dieta de desayuno, sin aplicar el porcentaje de descuento."
                                    Valor="{Binding CalendariosVM.Pijama.DietaDesayuno, Converter={StaticResource cnvDecimal}}"
                                    Visibility="{Binding CalendariosVM.Pijama.DietaDesayuno, Converter={StaticResource cnvOcultoSiCero}}" />
                                <controls:ItemResumen
                                    Descripcion="Dietas Comida"
                                    Style="{StaticResource EstiloItemResumen}"
                                    Valor="{Binding CalendariosVM.Pijama.DietaComida, Converter={StaticResource cnvDecimal}}"
                                    Visibility="{Binding CalendariosVM.Pijama.DietaComida, Converter={StaticResource cnvOcultoSiCero}}" />
                                <controls:ItemResumen
                                    Descripcion="Dietas Cena"
                                    Style="{StaticResource EstiloItemResumen}"
                                    Valor="{Binding CalendariosVM.Pijama.DietaCena, Converter={StaticResource cnvDecimal}}"
                                    Visibility="{Binding CalendariosVM.Pijama.DietaCena, Converter={StaticResource cnvOcultoSiCero}}" />
                                <controls:ItemResumen
                                    Descripcion="Plus Cena"
                                    Style="{StaticResource EstiloItemResumen}"
                                    ToolTip="Dieta de plus cena (con el porcentaje ya aplicado)."
                                    Valor="{Binding CalendariosVM.Pijama.DietaPlusCena, Converter={StaticResource cnvDecimal}}"
                                    Visibility="{Binding CalendariosVM.Pijama.DietaPlusCena, Converter={StaticResource cnvOcultoSiCero}}" />

                                <!--  PLUSES  -->
                                <controls:ItemResumen
                                    Descripcion="Plus Menor Descanso"
                                    Style="{StaticResource EstiloItemResumen}"
                                    Valor="{Binding CalendariosVM.Pijama.PlusMenorDescanso, Converter={StaticResource cnvDecimalEuro}}"
                                    Visibility="{Binding CalendariosVM.Pijama.PlusMenorDescanso, Converter={StaticResource cnvOcultoSiCero}}" />
                                <controls:ItemResumen
                                    Descripcion="Plus Limpieza"
                                    Style="{StaticResource EstiloItemResumen}"
                                    ToolTip="Suma de los pluses de limpieza (fijos y variables)."
                                    Valor="{Binding CalendariosVM.Pijama.PlusLimpieza, Converter={StaticResource cnvDecimalEuro}}"
                                    Visibility="{Binding CalendariosVM.Pijama.PlusLimpieza, Converter={StaticResource cnvOcultoSiCero}}" />
                                <controls:ItemResumen
                                    Descripcion="Plus Paquetería"
                                    Style="{StaticResource EstiloItemResumen}"
                                    ToolTip="Suma de los pluses de paquetería (fijos y variables)."
                                    Valor="{Binding CalendariosVM.Pijama.PlusPaqueteria, Converter={StaticResource cnvDecimalEuro}}"
                                    Visibility="{Binding CalendariosVM.Pijama.PlusPaqueteria, Converter={StaticResource cnvOcultoSiCero}}" />
                                <controls:ItemResumen
                                    Descripcion="Otros Pluses"
                                    Style="{StaticResource EstiloItemResumen}"
                                    ToolTip="{Binding CalendariosVM.Pijama.ToolTipOtrosPluses}"
                                    Valor="{Binding CalendariosVM.Pijama.OtrosPluses, Converter={StaticResource cnvDecimalEuro}}"
                                    Visibility="{Binding CalendariosVM.Pijama.OtrosPluses, Converter={StaticResource cnvOcultoSiCero}}" />

                                <!--  TOTALES  -->
                                <controls:ItemResumenDoble
                                    Margin="5,10,5,2"
                                    Descripcion="TOTAL DIETAS / IMPORTE"
                                    Separador=" / "
                                    Style="{StaticResource EstiloItemResumenDoble}"
                                    ToolTip="Suma de todas las dietas y el importe que representa."
                                    Valor1="{Binding CalendariosVM.Pijama.TotalDietas, Converter={StaticResource cnvDecimal}}"
                                    Valor2="{Binding CalendariosVM.Pijama.ImporteTotalDietas, Converter={StaticResource cnvDecimalEuro}}"
                                    Visibility="{Binding CalendariosVM.Pijama.TotalDietas, Converter={StaticResource cnvOcultoSiCero}}" />
                                <controls:ItemResumen
                                    Descripcion="TOTAL PLUSES"
                                    Style="{StaticResource EstiloItemResumen}"
                                    ToolTip="Suma de todos los pluses (excepto los de fin de semana y festivos)."
                                    Valor="{Binding CalendariosVM.Pijama.ImporteTotalPluses, Converter={StaticResource cnvDecimalEuro}}"
                                    Visibility="{Binding CalendariosVM.Pijama.ImporteTotalPluses, Converter={StaticResource cnvOcultoSiCero}}" />

                                <!--  IMPORTE TOTAL FINDES + DIETAS + PLUSES  -->
                                <controls:ItemResumen
                                    Margin="5,10,5,2"
                                    Descripcion="IMPORTE TOTAL A PERCIBIR"
                                    Style="{StaticResource EstiloItemResumen}"
                                    ToolTip="Importe total a cobrar por dietas y pluses."
                                    Valor="{Binding CalendariosVM.Pijama.ImporteTotal, Converter={StaticResource cnvDecimalEuro}}" />

                            </StackPanel>
                        </Grid>

                    </StackPanel>


                    <!--  PANEL GRAFICOS PIJAMA  -->
                    <StackPanel
                        x:Name="PanelGraficosPijama"
                        Width="320"
                        Orientation="Vertical"
                        ScrollViewer.VerticalScrollBarVisibility="Hidden"
                        Visibility="Collapsed">

                        <!--  TURNOS  -->
                        <Label
                            Margin="5,10,5,5"
                            Padding="5,0"
                            HorizontalAlignment="Left"
                            Content="Turnos"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="DarkRed"
                            ToolTip="Mostrar/Ocultar" />

                        <Grid Margin="5,0">
                            <Border
                                Background="AliceBlue"
                                BorderBrush="DarkGray"
                                BorderThickness="1"
                                CornerRadius="5" />
                            <ch:CartesianChart
                                Height="100"
                                Margin="10"
                                Background="Transparent"
                                Foreground="DarkBlue"
                                LegendLocation="None">

                                <!--  SERIES  -->
                                <ch:CartesianChart.Series>
                                    <ch:StepLineSeries
                                        Title="Turnos"
                                        AlternativeStroke="LightGray"
                                        Fill="Transparent"
                                        PointGeometrySize="0"
                                        Stroke="DarkBlue"
                                        StrokeThickness="2"
                                        Values="{Binding CalendariosVM.Pijama.SerieTurnos}" />
                                </ch:CartesianChart.Series>
                                <!--  EJE X  -->
                                <ch:CartesianChart.AxisX>
                                    <ch:Axis
                                        Title="Días"
                                        Foreground="DarkBlue"
                                        LabelFormatter="{Binding CalendariosVM.Pijama.DiaFormatter}"
                                        Position="LeftBottom">
                                        <ch:Axis.Separator>
                                            <ch:Separator Step="2" />
                                        </ch:Axis.Separator>
                                    </ch:Axis>
                                </ch:CartesianChart.AxisX>
                                <!--  EJE Y  -->
                                <ch:CartesianChart.AxisY>
                                    <ch:Axis
                                        Title="Turno"
                                        Foreground="DarkBlue"
                                        LabelFormatter="{Binding CalendariosVM.Pijama.TurnoFormatter}"
                                        MaxValue="5"
                                        MinValue="0">
                                        <ch:Axis.Separator>
                                            <ch:Separator
                                                Step="1"
                                                Stroke="PaleGoldenrod" />
                                        </ch:Axis.Separator>
                                    </ch:Axis>
                                </ch:CartesianChart.AxisY>

                            </ch:CartesianChart>
                        </Grid>


                        <!--  INICIOS - HORAS  -->
                        <Label
                            Margin="5,10,5,5"
                            Padding="5,0"
                            HorizontalAlignment="Left"
                            Content="Inicio / Horas Trabajadas"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="DarkRed"
                            ToolTip="Mostrar/Ocultar" />

                        <Grid Margin="5,0">
                            <Border
                                Background="AliceBlue"
                                BorderBrush="DarkGray"
                                BorderThickness="1"
                                CornerRadius="5" />
                            <ch:CartesianChart
                                Height="300"
                                Margin="10"
                                Background="Transparent"
                                DataTooltip="{x:Null}"
                                Foreground="DarkBlue"
                                LegendLocation="None">
                                <!--  SERIES  -->
                                <ch:CartesianChart.Series>
                                    <ch:OhlcSeries
                                        Title="Horario"
                                        DecreaseBrush="DarkOliveGreen"
                                        IncreaseBrush="IndianRed"
                                        Stroke="DarkBlue"
                                        StrokeThickness="6"
                                        Values="{Binding CalendariosVM.Pijama.SerieHorarios}" />
                                </ch:CartesianChart.Series>
                                <!--  EJE X  -->
                                <ch:CartesianChart.AxisX>
                                    <ch:Axis
                                        Title="Días"
                                        Foreground="DarkBlue"
                                        LabelFormatter="{Binding CalendariosVM.Pijama.DiaFormatter}"
                                        Position="LeftBottom">
                                        <ch:Axis.Separator>
                                            <ch:Separator Step="3" />
                                        </ch:Axis.Separator>
                                    </ch:Axis>
                                </ch:CartesianChart.AxisX>
                                <!--  EJE Y  -->
                                <ch:CartesianChart.AxisY>
                                    <ch:Axis
                                        Title="Hora"
                                        Foreground="DarkBlue"
                                        LabelFormatter="{Binding CalendariosVM.Pijama.TimeFormatter}"
                                        MaxValue="1620"
                                        MinValue="60">
                                        <ch:Axis.Separator>
                                            <ch:Separator
                                                Step="60"
                                                Stroke="PaleGoldenrod" />
                                        </ch:Axis.Separator>
                                    </ch:Axis>
                                </ch:CartesianChart.AxisY>


                            </ch:CartesianChart>

                        </Grid>


                    </StackPanel>

                </Grid>


            </ScrollViewer>


            <!--  PENDIENTE HASTA MES ACTUAL  -->
            <StackPanel
                Grid.Row="1"
                Margin="0,5"
                Orientation="Vertical"
                Visibility="{Binding ElementName=BtOcultarPanelPijama, Path=IsChecked, Converter={StaticResource cnvVisibilityInverter}}">

                <ToggleButton
                    x:Name="BtResumenMes"
                    Margin="5,10,5,0"
                    Padding="5,0"
                    Content="Pendiente Hasta Mes Actual"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="DarkRed"
                    Style="{StaticResource EstiloToggleBarraPequeña}"
                    ToolTip="Mostrar/Ocultar" />

                <Grid
                    Margin="5,0"
                    Visibility="{Binding ElementName=BtResumenMes, Path=IsChecked, Converter={StaticResource cnvVisibilityInverter}}">
                    <Border
                        Background="AliceBlue"
                        BorderBrush="DarkGray"
                        BorderThickness="1"
                        CornerRadius="5" />

                    <StackPanel Orientation="Vertical">

                        <!--  DNDs, DCs y ACUMULADAS PENDIENTES  -->
                        <StackPanel
                            Margin="0,5,0,0"
                            Orientation="Horizontal">
                            <TextBlock
                                Width="90"
                                Style="{StaticResource TextoPijama1}"
                                Text="DNDs"
                                TextAlignment="Center"
                                ToolTip="Descansos no disfrutados pendientes de disfrutar." />
                            <TextBlock
                                Width="90"
                                Style="{StaticResource TextoPijama1}"
                                Text="DCs"
                                TextAlignment="Center"
                                ToolTip="Descansos compensatorios pendientes de disfrutar." />
                            <TextBlock
                                Width="130"
                                Style="{StaticResource TextoPijama1}"
                                Text="H.Acumuladas"
                                TextAlignment="Center"
                                ToolTip="Horas acumuladas disponibles hasta final del mes." />
                        </StackPanel>

                        <StackPanel
                            Margin="0,5"
                            Orientation="Horizontal">
                            <TextBlock
                                Width="90"
                                FontSize="13"
                                Style="{StaticResource TextoPijama2}"
                                Text="{Binding CalendariosVM.Pijama.DNDsPendientesHastaMes, Converter={StaticResource cnvDecimal6}}"
                                TextAlignment="Center"
                                ToolTip="Descansos no disfrutados pendientes de disfrutar." />
                            <TextBlock
                                Width="90"
                                FontSize="13"
                                Style="{StaticResource TextoPijama2}"
                                Text="{Binding CalendariosVM.Pijama.DCsPendientesHastaMes, Converter={StaticResource cnvDecimal6}}"
                                TextAlignment="Center"
                                ToolTip="Descansos compensatorios pendientes de disfrutar." />
                            <TextBlock
                                Width="130"
                                FontSize="13"
                                Style="{StaticResource TextoPijama2}"
                                Text="{Binding CalendariosVM.Pijama.AcumuladasHastaMes, Converter={StaticResource cnvHoraMixta}, ConverterParameter={x:Static cnv:VerValores.HoraPlus}}"
                                TextAlignment="Center"
                                ToolTip="Horas acumuladas disponibles hasta final del mes." />
                        </StackPanel>

                        <Border
                            Height="1"
                            BorderBrush="DarkGray"
                            BorderThickness="1" />

                        <!--  VACACIONES PENDIENTES EVENTUALES  -->
                        <StackPanel
                            Margin="0,5"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal"
                            ToolTipService.ShowDuration="100000"
                            Visibility="{Binding CalendariosVM.Pijama.NoEsFijo, Converter={StaticResource cnvBoolToVisibility}}">
                            <TextBlock
                                FontFamily="Verdana"
                                FontSize="13"
                                FontWeight="Bold"
                                Foreground="DarkBlue"
                                Text="Vacaciones pendientes:  " />
                            <TextBlock
                                FontFamily="Verdana"
                                FontSize="13"
                                Foreground="DarkBlue"
                                Text="{Binding CalendariosVM.Pijama.VacacionesPendientes, Converter={StaticResource cnvDecimal6}}" />
                            <StackPanel.ToolTip>
                                <TextBlock>
                                    Vacaciones pendientes hasta final del mes actual.<LineBreak />
                                    Si es negativo, ha disfrutado más vacaciones de las que ha generado.</TextBlock>
                            </StackPanel.ToolTip>
                        </StackPanel>

                        <Border
                            Height="1"
                            BorderBrush="DarkGray"
                            BorderThickness="1"
                            Visibility="{Binding CalendariosVM.Pijama.NoEsFijo, Converter={StaticResource cnvBoolToVisibility}}" />

                        <!--  DCs GENERADOS  -->
                        <StackPanel
                            Margin="0,5"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal"
                            ToolTipService.ShowDuration="100000">
                            <TextBlock
                                FontFamily="Verdana"
                                FontSize="13"
                                FontWeight="Bold"
                                Foreground="DarkBlue"
                                Text="DCs Generados:  " />
                            <TextBlock
                                FontFamily="Verdana"
                                FontSize="13"
                                Foreground="DarkBlue"
                                Text="{Binding CalendariosVM.Pijama.DCsGeneradosHastaMes, Converter={StaticResource cnvDecimal6}}" />
                            <StackPanel.ToolTip>
                                <TextBlock>
                                    Descansos compensatorios generados a partir de las horas acumuladas actuales<LineBreak />
                                    (incluyendo las sobrantes del año anterior) y los descansos compensatorios<LineBreak />
                                    pendientes, a disfrutar al año siguiente.</TextBlock>
                            </StackPanel.ToolTip>
                        </StackPanel>


                    </StackPanel>

                </Grid>

            </StackPanel>


            <!--  BOTONES PANELES RESUMEN  -->
            <StackPanel
                Grid.Row="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Orientation="Horizontal"
                Visibility="{Binding ElementName=BtOcultarPanelPijama, Path=IsChecked, Converter={StaticResource cnvVisibilityInverter}}">
                <Button
                    Width="35"
                    Margin="4"
                    Padding="6,3"
                    Click="BtPanelPijama_Click"
                    Content="T"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="Black"
                    Style="{StaticResource EstiloBotonBarraPequeña}" />
                <Button
                    Width="35"
                    Margin="4"
                    Padding="6,3"
                    Click="BtPanelGraficosResumen_Click"
                    Content="&#x1F4CA;"
                    FontSize="16"
                    Foreground="Black"
                    Style="{StaticResource EstiloBotonBarraPequeña}" />
            </StackPanel>


        </Grid>

        <Border
            x:Name="BordePanelResumen"
            Grid.RowSpan="4"
            Grid.Column="1"
            Width="{Binding ElementName=PanelResumen, Path=Width}"
            BorderBrush="DarkBlue"
            BorderThickness="0.5"
            CornerRadius="4"
            Visibility="Collapsed" />

        <!--  ====================================================================================================  -->
        <!--  PANEL CAMBIAR FECHA  -->
        <!--  ====================================================================================================  -->
        <StackPanel
            Grid.Row="2"
            Grid.RowSpan="2"
            Orientation="Vertical">
            <Border
                x:Name="PanelFecha"
                Margin="150,0,0,0"
                Padding="10"
                HorizontalAlignment="Left"
                Background="{StaticResource DegradadoCeleste1}"
                BorderBrush="DarkBlue"
                BorderThickness="1"
                CornerRadius="5"
                Visibility="Collapsed">
                <StackPanel Orientation="Vertical">

                    <!--  BARRA SUPERIOR  -->
                    <Grid Margin="0">
                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="12"
                            FontWeight="Bold"
                            Text="Mes Visualizado" />
                        <Button
                            Height="Auto"
                            Margin="0"
                            Padding="10,5"
                            HorizontalAlignment="Right"
                            Click="BtAbrirPanelFecha_Click"
                            Content="X"
                            FontSize="12"
                            FontWeight="Bold"
                            Foreground="Red"
                            Style="{StaticResource EstiloBotonBarraPequeña}" />
                    </Grid>

                    <!--  CALENDARIO  -->
                    <controls:QCalendar
                        DisplayDate="{Binding CalendariosVM.FechaCalendarios, Mode=TwoWay}"
                        DisplayMode="Month"
                        FirstDayOfWeek="Monday"
                        Focusable="False"
                        SelectedDate="{Binding CalendariosVM.FechaActual, Mode=TwoWay}"
                        SelectedDatesChanged="QCalendar_SelectedDatesChanged"
                        SelectionMode="SingleDate"
                        Style="{StaticResource EstiloCalendario}" />
                    <TextBlock
                        FontSize="10"
                        Text="Selecciona el día 1 del mes deseado." />
                </StackPanel>
            </Border>
        </StackPanel>

    </Grid>

</UserControl>
