                                Text="{Binding CalendariosVM.Pijama.AcumuladasHastaMes, Converter={StaticResource cnvHoraMixta}, ConverterParameter={x:Static cnv:VerValores.HoraPlus}}"
                                TextAlignment="Center"
                                ToolTip="Horas acumuladas disponibles hasta final del mes." />
                        </StackPanel>

                        <Border
                            Height="1"
                            BorderBrush="DarkGray"
                            BorderThickness="1" />

                        <!--  VACACIONES PENDIENTES EVENTUALES  -->
                        <StackPanel
                            Margin="0,5"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal"
                            ToolTipService.ShowDuration="100000"
                            Visibility="{Binding CalendariosVM.Pijama.NoEsFijo, Converter={StaticResource cnvBoolToVisibility}}">
                            <TextBlock
                                FontFamily="Comic Sans MS"
                                FontSize="13"
                                FontWeight="Bold"
                                Foreground="DarkBlue"
                                Text="Vacaciones pendientes:  " />
                            <TextBlock
                                FontFamily="Comic Sans MS"
                                FontSize="13"
                                Foreground="DarkBlue"
                                Text="{Binding CalendariosVM.Pijama.VacacionesPendientes, Converter={StaticResource cnvDecimal6}}" />
                            <StackPanel.ToolTip>
                                <TextBlock>
                                    Vacaciones pendientes hasta final del mes actual.<LineBreak />
                                    Si es negativo, ha disfrutado más vacaciones de las que ha generado.</TextBlock>
                            </StackPanel.ToolTip>
                        </StackPanel>

                        <Border
                            Height="1"
                            BorderBrush="DarkGray"
                            BorderThickness="1"
                            Visibility="{Binding CalendariosVM.Pijama.NoEsFijo, Converter={StaticResource cnvBoolToVisibility}}" />

                        <!--  DCs GENERADOS  -->
                        <StackPanel
                            Margin="0,5"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal"
                            ToolTipService.ShowDuration="100000">
                            <TextBlock
                                FontFamily="Comic Sans MS"
                                FontSize="13"
                                FontWeight="Bold"
                                Foreground="DarkBlue"
                                Text="DCs Generados:  " />
                            <TextBlock
                                FontFamily="Comic Sans MS"
                                FontSize="13"
                                Foreground="DarkBlue"
                                Text="{Binding CalendariosVM.Pijama.DCsGeneradosHastaMes, Converter={StaticResource cnvDecimal6}}" />
                            <StackPanel.ToolTip>
                                <TextBlock>
                                    Descansos compensatorios generados a partir de las horas acumuladas actuales<LineBreak />
                                    (incluyendo las sobrantes del año anterior) y los descansos compensatorios<LineBreak />
                                    pendientes, a disfrutar al año siguiente.</TextBlock>
                            </StackPanel.ToolTip>
                        </StackPanel>


                    </StackPanel>

                </Grid>

            </StackPanel>

        </Grid>

        <!--  DECORACIÓN PANEL LATERAL PIJAMA  -->
        <Border
            x:Name="BordePanelResumen"
            Grid.RowSpan="4"
            Grid.Column="1"
            Width="{Binding ElementName=PanelResumen, Path=Width}"
            BorderBrush="DarkBlue"
            BorderThickness="0.5"
            CornerRadius="4"
            Visibility="Collapsed" />


        <!--  ====================================================================================================  -->
        <!--  PANEL CAMBIAR FECHA  -->
        <!--  ====================================================================================================  -->
        <StackPanel
            Grid.Row="2"
            Grid.RowSpan="2"
            Orientation="Vertical">
            <Border
                x:Name="PanelFecha"
                Margin="150,0,0,0"
                Padding="10"
                HorizontalAlignment="Left"
                Background="{StaticResource DegradadoCeleste1}"
                BorderBrush="DarkBlue"
                BorderThickness="1"
                CornerRadius="5"
                Visibility="Collapsed">
                <StackPanel Orientation="Vertical">

                    <!--  BARRA SUPERIOR  -->
                    <Grid Margin="0">
                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="12"
                            FontWeight="Bold"
                            Text="Mes Visualizado" />
                        <Button
                            Height="Auto"
                            Margin="0"
                            Padding="10,5"
                            HorizontalAlignment="Right"
                            Click="BtAbrirPanelFecha_Click"
                            Content="X"
                            FontSize="12"
                            FontWeight="Bold"
                            Foreground="Red"
                            Style="{StaticResource EstiloBotonBarraPequeña}" />
                    </Grid>

                    <!--  CALENDARIO  -->
                    <controls:QCalendar
                        DisplayDate="{Binding CalendariosVM.FechaCalendarios, Mode=TwoWay}"
                        DisplayMode="Month"
                        FirstDayOfWeek="Monday"
                        Focusable="False"
                        SelectedDate="{Binding CalendariosVM.FechaActual, Mode=TwoWay}"
                        SelectedDatesChanged="QCalendar_SelectedDatesChanged"
                        SelectionMode="SingleDate"
                        Style="{StaticResource EstiloCalendario}" />
                    <TextBlock FontSize="10" Text="Selecciona el día 1 del mes deseado." />
                </StackPanel>
            </Border>
        </StackPanel>

    </Grid>

</UserControl>
