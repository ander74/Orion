<UserControl
    x:Class="Orion.Views.VistaCalendarios"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ch="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:cnv="clr-namespace:Orion.Convertidores"
    xmlns:controls="clr-namespace:Orion.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Orion.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xceed="http://schemas.xceed.com/wpf/xaml/toolkit"
    d:DesignHeight="800"
    d:DesignWidth="1200"
    mc:Ignorable="d">

    <!--  ====================================================================================================  -->
    <!--  RECURSOS  -->
    <!--  ====================================================================================================  -->
    <UserControl.Resources>

        <cnv:ConvertidorPrueba x:Key="cnvPrueba" />

        <cnv:ConvertidorMinutosToHoraMixta x:Key="cnvMinutosToHoraMixta" />
        <cnv:ConvertidorColorDia x:Key="cnvColorDia" />
        <cnv:ConvertidorColorDiaPijama x:Key="cnvColorDiaPijama" />
        <cnv:ConvertidorColorDiaSinGraficos x:Key="cnvColorDiaSinGraficos" />
        <cnv:ConvertidorNegritaDia x:Key="cnvNegritaDia" />
        <cnv:ConvertidorDecoracionDia x:Key="cnvDecoracionDia" />
        <cnv:ConvertidorHora x:Key="cnvHora" />
        <cnv:ConvertidorSuperHora x:Key="cnvSuperHora" />
        <cnv:ConvertidorHoraMixta x:Key="cnvHoraMixta" />
        <cnv:ConvertidorSuperHoraMixta x:Key="cnvSuperHoraMixta" />
        <cnv:ConvertidorDiasF6 x:Key="cnvDiasF6" />
        <cnv:ConvertidorFecha x:Key="cnvFecha" />
        <cnv:ConvertidorDecimal x:Key="cnvDecimal" />
        <cnv:ConvertidorDecimal6 x:Key="cnvDecimal6" />
        <cnv:ConvertidorDecimalEuro x:Key="cnvDecimalEuro" />
        <cnv:ConvertidorDecimalNulable x:Key="cnvDecimalNulable" />
        <cnv:ConvertidorNumeroGrafico x:Key="cnvNumGrafico" />
        <cnv:ConvertidorNumeroGraficoCalendario x:Key="cnvNumGraficoCalendario" />
        <cnv:ConvertidorNumeroGraficoPijama x:Key="cnvNumGraficoPijama" />
        <cnv:ConvertidorRojoSiTrue x:Key="cnvRojoSiTrue" />
        <BooleanToVisibilityConverter x:Key="cnvBoolToVisibility" />
        <cnv:ConvertidorVisibilityInverter x:Key="cnvVisibilityInverter" />
        <cnv:ConvertidorColorColumnaPijama x:Key="cnvColorColumnaPijama" />
        <cnv:ConvertidorNegritaColumnaPijama x:Key="cnvNegritaColumnaPijama" />
        <cnv:ConvertidorNegritaDiaPijama x:Key="cnvNegritaDiaPijama" />
        <cnv:ConvertidorOcultoSiCero x:Key="cnvOcultoSiCero" />

        <Style
            x:Key="EstiloGridCalendarios"
            TargetType="DataGrid">
            <Setter Property="ColumnHeaderStyle" Value="{StaticResource EstiloHeadersVerde}" />
            <Setter Property="RowStyle" Value="{StaticResource EstiloFilasVerde}" />
            <Setter Property="CellStyle" Value="{StaticResource EstiloCeldasCalendarios}" />
        </Style>
        <Style
            x:Key="EstiloGridPijama"
            TargetType="DataGrid">
            <Setter Property="ColumnHeaderStyle" Value="{StaticResource EstiloHeadersAzul}" />
            <Setter Property="RowStyle" Value="{StaticResource EstiloFilasAzul}" />
            <Setter Property="CellStyle" Value="{StaticResource EstiloCeldasNormal}" />
        </Style>
        <Style
            x:Key="TextoPijama1"
            TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Verdana" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style
            x:Key="TextoPijama2"
            TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Verdana" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Width" Value="135" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style
            x:Key="TextBoxPijama"
            TargetType="TextBox">
            <Setter Property="FontFamily" Value="Verdana" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Width" Value="75" />
            <Setter Property="Height" Value="24" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>

        <Style
            x:Key="EstiloItemResumen"
            TargetType="controls:ItemResumen">
            <Setter Property="FontFamily" Value="Verdana" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Margin" Value="5,2" />
            <Setter Property="LineaPuntos" Value="True" />
        </Style>

        <Style
            x:Key="EstiloItemResumenDoble"
            TargetType="controls:ItemResumenDoble">
            <Setter Property="FontFamily" Value="Verdana" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Margin" Value="5,2" />
            <Setter Property="LineaPuntos" Value="True" />
        </Style>

        <Style
            x:Key="EstiloTextoValor"
            TargetType="controls:TextoValorH">
            <Setter Property="FontFamily" Value="Verdana" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Margin" Value="5,2" />
            <Setter Property="MostrarLineaPuntos" Value="True" />
        </Style>

    </UserControl.Resources>


    <!--  ====================================================================================================  -->
    <!--  CONTENIDO  -->
    <!--  ====================================================================================================  -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>


        <!--  ====================================================================================================  -->
        <!--  BARRA DE BOTONES CALENDARIOS  -->
        <!--  ====================================================================================================  -->
        <StackPanel
            x:Name="BotonesCalendarios"
            Height="80"
            Background="{StaticResource DegradadoCeleste0}"
            Orientation="Horizontal"
            Visibility="Visible">

            <!--  BOTON GUARDAR  -->
            <controls:BotonDual
                Command="{Binding cmdGuardarCambios}"
                ImagenActivo="Imagenes/GuardarRojo.png"
                ImagenNormal="Imagenes/Guardar.png"
                IsActivo="{Binding EnOtroCentro}"
                TextoActivo="Guardar"
                TextoNormal="Guardar" />

            <!--  SEPARADOR  -->
            <TextBlock
                Width="2"
                Margin="3,5"
                Background="LightGray" />


            <!--  NAVEGADOR MENSUAL NUEVO  -->
            <!--<controls:NavegadorMes Fecha="{Binding CalendariosVM.FechaActual, Mode=TwoWay}" />-->

            <!--  BOTON RETROCEDE MES  -->
            <controls:BotonBarra
                Command="{Binding CalendariosVM.cmdRetrocedeMes}"
                FontSize="24"
                Foreground="RoyalBlue"
                Imagen="{x:Null}"
                Titulo="&#x25C0;" />

            <!--  ETIQUETA MES  -->
            <StackPanel
                Width="150"
                Margin="6,12,6,6"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <Label
                    HorizontalAlignment="Center"
                    Content="{Binding CalendariosVM.MesActual}"
                    FontFamily="Bookman Old Style"
                    FontSize="20" />
                <Button
                    x:Name="BotonValidezGrupo"
                    Width="Auto"
                    Height="Auto"
                    Padding="15,3"
                    HorizontalAlignment="Center"
                    Click="BtAbrirPanelFecha_Click"
                    Content="{Binding CalendariosVM.AñoActual}"
                    FontFamily="Bookman Old Style"
                    FontSize="20"
                    Style="{StaticResource EstiloBotonValidezFecha}" />
            </StackPanel>

            <!--  BOTON AVANZA MES  -->
            <controls:BotonBarra
                Command="{Binding CalendariosVM.cmdAvanzaMes}"
                FontSize="24"
                Foreground="RoyalBlue"
                Imagen="{x:Null}"
                Titulo="&#x25B6;" />

            <!--  SEPARADOR  -->
            <TextBlock
                Width="2"
                Margin="3,5"
                Background="LightGray" />

            <!--  BOTON BORRAR CALENDARIO  -->
            <Button
                Command="{Binding CalendariosVM.cmdBorrarCalendario}"
                Style="{StaticResource EstiloBotonBarra}">
                <Button.Content>
                    <StackPanel Orientation="Vertical">
                        <Image
                            Source="Imagenes/BorrarFila.png"
                            Style="{StaticResource EstiloImagen}" />
                        <TextBlock
                            Text="Borrar Calendario"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Button.Content>
            </Button>

            <!--  BOTON DESHACER BORRAR  -->
            <Button
                Command="{Binding CalendariosVM.cmdDeshacerBorrar}"
                Style="{StaticResource EstiloBotonBarra}">
                <Button.Content>
                    <StackPanel Orientation="Vertical">
                        <Image
                            Source="Imagenes/ActualizarTabla.png"
                            Style="{StaticResource EstiloImagen}" />
                        <TextBlock
                            Text="Deshacer Borrar"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Button.Content>
            </Button>

            <!--  BOTON BORRAR TODOS  -->
            <Button
                Command="{Binding CalendariosVM.cmdBorrarTodos}"
                Style="{StaticResource EstiloBotonBarra}">
                <Button.Content>
                    <StackPanel Orientation="Vertical">
                        <Image
                            Source="Imagenes/BorrarTabla.png"
                            Style="{StaticResource EstiloImagen}" />
                        <TextBlock
                            Text="Borrar Todos"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Button.Content>
            </Button>

            <!--  SEPARADOR  -->
            <TextBlock
                Width="2"
                Margin="3,5"
                Background="LightGray" />

            <!--  DESPLEGABLE ACCIONES  -->
            <xceed:DropDownButton
                x:Name="BtDropAcciones"
                Style="{StaticResource EstiloBotonDesplegable}">
                <xceed:DropDownButton.Content>
                    <StackPanel Orientation="Vertical">
                        <Image
                            Source="Imagenes/Engranajes.png"
                            Style="{StaticResource EstiloImagen}" />
                        <TextBlock
                            Name="TxtAcciones"
                            FontFamily="Arial"
                            FontSize="10"
                            Text="Acciones"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </xceed:DropDownButton.Content>
                <xceed:DropDownButton.DropDownContent>
                    <Border
                        Background="AliceBlue"
                        BorderBrush="DarkBlue"
                        BorderThickness="2"
                        CornerRadius="5"
                        DataContext="{Binding Source={x:Reference TxtAcciones}, Path=DataContext.CalendariosVM}">
                        <Border
                            Margin="3"
                            Padding="5"
                            BorderBrush="DarkGray"
                            BorderThickness="1"
                            CornerRadius="5">
                            <StackPanel Orientation="Horizontal">

                                <!--  BOTON DETECTAR FALLOS  -->
                                <Button
                                    Width="64"
                                    Height="80"
                                    Command="{Binding cmdDetectarFallos}"
                                    Style="{StaticResource EstiloBotonBarra}">
                                    <Button.Content>
                                        <StackPanel Orientation="Vertical">
                                            <Image
                                                Source="Imagenes/ConfigurarTabla.png"
                                                Style="{StaticResource EstiloImagen}" />
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                Text="Detectar Fallos"
                                                TextAlignment="Center"
                                                TextWrapping="Wrap" />
                                        </StackPanel>
                                    </Button.Content>
                                </Button>

                                <!--  CAMBIAR JD POR DS  -->
                                <Button
                                    Width="64"
                                    Height="80"
                                    Command="{Binding cmdCambiarJDPorDS}"
                                    Style="{StaticResource EstiloBotonBarra}">
                                    <Button.Content>
                                        <StackPanel Orientation="Vertical">
                                            <Image
                                                Source="Imagenes/FlechasCruzadas.png"
                                                Style="{StaticResource EstiloImagen}" />
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                Text="JDs Sueltos a DS"
                                                TextAlignment="Center"
                                                TextWrapping="Wrap" />
                                        </StackPanel>
                                    </Button.Content>
                                </Button>

                                <!--  BOTON ACCIONES POR LOTES  -->
                                <Button
                                    Width="64"
                                    Height="80"
                                    Click="BtAccionesLotes_Click"
                                    Style="{StaticResource EstiloBotonBarra}">
                                    <Button.Content>
                                        <StackPanel Orientation="Vertical">
                                            <Image
                                                Source="Imagenes/Navaja.png"
                                                Style="{StaticResource EstiloImagen}" />
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                Text="Acciones Por Lotes"
                                                TextAlignment="Center"
                                                TextWrapping="Wrap" />
                                        </StackPanel>
                                    </Button.Content>
                                </Button>

                                <!--  SEPARADOR  -->
                                <TextBlock
                                    Height="2"
                                    Margin="5,3"
                                    Background="LightGray" />

                                <!--  BOTON ALTERNAR SELECCION TABLA CALENDARIOS  -->
                                <ToggleButton
                                    Width="64"
                                    Height="80"
                                    Command="{Binding Source={x:Reference TablaCalendarios}, Path=ComandoAlternarModoSeleccion}">
                                    <ToggleButton.Style>
                                        <Style
                                            BasedOn="{StaticResource EstiloToggleBarra}"
                                            TargetType="ToggleButton">
                                            <Style.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter Property="Content">
                                                        <Setter.Value>
                                                            <StackPanel Orientation="Vertical">
                                                                <Image
                                                                    Source="Imagenes/SeleccionFila.png"
                                                                    Style="{StaticResource EstiloImagen}" />
                                                                <TextBlock
                                                                    VerticalAlignment="Center"
                                                                    FontSize="10"
                                                                    Text="Seleccionar Filas"
                                                                    TextAlignment="Center"
                                                                    TextWrapping="Wrap" />
                                                            </StackPanel>

                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <Trigger Property="IsChecked" Value="False">
                                                    <Setter Property="Content">
                                                        <Setter.Value>
                                                            <StackPanel Orientation="Vertical">
                                                                <Image
                                                                    Source="Imagenes/SeleccionCelda.png"
                                                                    Style="{StaticResource EstiloImagen}" />
                                                                <TextBlock
                                                                    VerticalAlignment="Center"
                                                                    FontSize="10"
                                                                    Text="Seleccionar Celdas"
                                                                    TextAlignment="Center"
                                                                    TextWrapping="Wrap" />
                                                            </StackPanel>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>

                            </StackPanel>
                        </Border>
                    </Border>
                </xceed:DropDownButton.DropDownContent>
            </xceed:DropDownButton>

            <!--  SEPARADOR  -->
            <TextBlock
                Width="2"
                Margin="3,5"
                Background="LightGray" />

            <!--  BOTON COPIAR  -->
            <Button
                Command="ApplicationCommands.Copy"
                CommandTarget="{Binding ElementName=TablaCalendarios}"
                Style="{StaticResource EstiloBotonBarra}">
                <Button.Content>
                    <StackPanel Orientation="Vertical">
                        <Image
                            Source="Imagenes/Copiar.png"
                            Style="{StaticResource EstiloImagen}" />
                        <TextBlock
                            Text="Copiar"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Button.Content>
            </Button>

            <!--  BOTON PEGAR  -->
            <Button
                Command="{Binding ElementName=TablaCalendarios, Path=ComandoPegar}"
                Style="{StaticResource EstiloBotonBarra}">
                <Button.Content>
                    <StackPanel Orientation="Vertical">
                        <Image
                            Source="Imagenes/Pegar.png"
                            Style="{StaticResource EstiloImagen}" />
                        <TextBlock
                            Text="Pegar"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Button.Content>
            </Button>

            <!--  DESPLEGABLE FILTRAR TABLA  -->
            <xceed:DropDownButton
                x:Name="BtDropFiltros"
                Style="{StaticResource EstiloBotonDesplegable}">
                <xceed:DropDownButton.Content>
                    <StackPanel Orientation="Vertical">
                        <Image
                            Source="Imagenes/Filtrar.png"
                            Style="{StaticResource EstiloImagen}" />
                        <TextBlock
                            Name="TxtFiltrar"
                            FontFamily="Arial"
                            FontSize="10"
                            Text="Filtrar Tabla"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </xceed:DropDownButton.Content>
                <xceed:DropDownButton.DropDownContent>
                    <Border
                        Background="AliceBlue"
                        BorderBrush="DarkBlue"
                        BorderThickness="2"
                        CornerRadius="5"
                        DataContext="{Binding Source={x:Reference TxtFiltrar}, Path=DataContext.CalendariosVM}">
                        <Border
                            Margin="3"
                            BorderBrush="DarkGray"
                            BorderThickness="1"
                            CornerRadius="5">
                            <StackPanel Orientation="Vertical">

                                <!--  BOTON INDEFINIDOS  -->
                                <Button
                                    Margin="6,6,6,3"
                                    Padding="20,10"
                                    HorizontalAlignment="Stretch"
                                    Click="BotonFiltrado_Click"
                                    Command="{Binding cmdAplicarFiltro}"
                                    CommandParameter="Indefinidos"
                                    Content="Indefinidos"
                                    Style="{StaticResource EstiloBotonBarraPequeña}"
                                    TextBlock.TextAlignment="Center"
                                    ToolTip="Muestra sólo los conductores indefinidos." />

                                <!--  BOTON EVENTUALES  -->
                                <Button
                                    Margin="6,3,6,3"
                                    Padding="20,10"
                                    HorizontalAlignment="Stretch"
                                    Click="BotonFiltrado_Click"
                                    Command="{Binding cmdAplicarFiltro}"
                                    CommandParameter="Eventuales"
                                    Content="Eventuales"
                                    Style="{StaticResource EstiloBotonBarraPequeña}"
                                    TextBlock.TextAlignment="Center"
                                    ToolTip="Muestra sólo los conductores eventuales" />

                                <!--  BOTON EVENTUALES PARCIAL  -->
                                <Button
                                    Margin="6,3,6,6"
                                    Padding="20,10"
                                    HorizontalAlignment="Stretch"
                                    Click="BotonFiltrado_Click"
                                    Command="{Binding cmdAplicarFiltro}"
                                    CommandParameter="EventualesParcial"
                                    Content="Eventuales Parcial"
                                    Style="{StaticResource EstiloBotonBarraPequeña}"
                                    TextBlock.TextAlignment="Center"
                                    ToolTip="Muestra sólo los conductores eventuales que no trabajen todo el mes." />

                            </StackPanel>
                        </Border>
                    </Border>
                </xceed:DropDownButton.DropDownContent>
            </xceed:DropDownButton>

            <!--  BOTON QUITAR FILTRO  -->
            <Button
                Click="BtQuitarFiltro_Click"
                Command="{Binding CalendariosVM.cmdQuitarFiltro}"
                Style="{StaticResource EstiloBotonBarra}">
                <Button.Content>
                    <StackPanel Orientation="Vertical">
                        <Image
                            Source="Imagenes/QuitarFiltro.png"
                            Style="{StaticResource EstiloImagen}" />
                        <TextBlock
                            Text="Quitar Filtro"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Button.Content>
            </Button>

            <!--  SEPARADOR  -->
            <TextBlock
                Width="2"
                Margin="3,5"
                Background="LightGray" />

            <!--  BOTON ABRIR PIJAMA  -->
            <Button
                Click="BtAbrirPijama_Click"
                Command="{Binding CalendariosVM.cmdAbrirPijama}"
                Style="{StaticResource EstiloBotonBarra}">
                <Button.Content>
                    <StackPanel Orientation="Vertical">
                        <Image
                            Source="Imagenes/HojaPijama.png"
                            Style="{StaticResource EstiloImagen}" />
                        <TextBlock
                            Text="Hoja Pijama"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Button.Content>
            </Button>


            <!--  BOTON RESUMEN AÑO  -->
            <Button
                Command="{Binding CalendariosVM.cmdMostrarResumenAño}"
                Style="{StaticResource EstiloBotonBarra}">
                <Button.Content>
                    <StackPanel Orientation="Vertical">
                        <Image
                            Source="Imagenes/TablaDetalle.png"
                            Style="{StaticResource EstiloImagen}" />
                        <TextBlock
                            Text="Resumen Anual"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Button.Content>
            </Button>

            <!--  SEPARADOR  -->
            <TextBlock
                Width="2"
                Margin="3,5"
                Background="LightGray" />

            <!--  DESPLEGABLE CREAR PDF  -->
            <xceed:DropDownButton
                x:Name="BtDropCrearPdf"
                Style="{StaticResource EstiloBotonDesplegable}">
                <xceed:DropDownButton.Content>
                    <StackPanel Orientation="Vertical">
                        <Image
                            Source="Imagenes/GuardarPDF.png"
                            Style="{StaticResource EstiloImagen}" />
                        <TextBlock
                            Name="TxtCrearPdf"
                            FontFamily="Arial"
                            FontSize="10"
                            Text="Crear PDF"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </xceed:DropDownButton.Content>
                <xceed:DropDownButton.DropDownContent>
                    <Border
                        Background="AliceBlue"
                        BorderBrush="DarkBlue"
                        BorderThickness="2"
                        CornerRadius="5"
                        DataContext="{Binding Source={x:Reference TxtCrearPdf}, Path=DataContext.CalendariosVM}">
                        <Border
                            Margin="3"
                            BorderBrush="DarkGray"
                            BorderThickness="1"
                            CornerRadius="5">
                            <StackPanel Orientation="Vertical">

                                <!--  BOTON CREAR PDF  -->
                                <Button
                                    Margin="6,6,6,3"
                                    Padding="20,10"
                                    HorizontalAlignment="Stretch"
                                    Click="BtCreandoPdf_Click"
                                    Command="{Binding cmdCalendariosEnPDF}"
                                    Content="Tabla Calendarios"
                                    Style="{StaticResource EstiloBotonBarraPequeña}"
                                    TextBlock.TextAlignment="Center" />

                                <!--  BOTON PIJAMAS JUNTOS EN  PDF  -->
                                <Button
                                    Margin="6,3,6,3"
                                    Padding="20,10"
                                    HorizontalAlignment="Stretch"
                                    Click="BtCreandoPdf_Click"
                                    Command="{Binding cmdPijamasEnPDF}"
                                    Content="Hojas Pijama Juntas"
                                    Style="{StaticResource EstiloBotonBarraPequeña}"
                                    TextBlock.TextAlignment="Center" />

                                <!--  BOTON PIJAMAS POR SEPARADO EN  PDF  -->
                                <Button
                                    Margin="6,3,6,3"
                                    Padding="20,10"
                                    HorizontalAlignment="Stretch"
                                    Click="BtCreandoPdf_Click"
                                    Command="{Binding cmdPijamasSeparadosEnPdf}"
                                    Content="Hojas Pijama Por Separado"
                                    Style="{StaticResource EstiloBotonBarraPequeña}"
                                    TextBlock.TextAlignment="Center" />

                                <!--  BOTON FALLOS DE CALENDARIO  -->
                                <Button
                                    Margin="6,3,6,6"
                                    Padding="20,10"
                                    HorizontalAlignment="Stretch"
                                    Click="BtCreandoPdf_Click"
                                    Command="{Binding cmdCalendariosEnPdfConFallos}"
                                    Content="Fallos de Calendario"
                                    Style="{StaticResource EstiloBotonBarraPequeña}"
                                    TextBlock.TextAlignment="Center" />

                                <!--  BOTON ESTADÍSTICAS  -->
                                <Button
                                    Margin="6,3,6,6"
                                    Padding="20,10"
                                    HorizontalAlignment="Stretch"
                                    Click="BtCreandoPdf_Click"
                                    Command="{Binding cmdPdfEstadisticas}"
                                    Content="Estadísticas"
                                    Style="{StaticResource EstiloBotonBarraPequeña}"
                                    TextBlock.TextAlignment="Center" />

                                <!--  BOTON ESTADÍSTICAS  -->
                                <Button
                                    Margin="6,3,6,6"
                                    Padding="20,10"
                                    HorizontalAlignment="Stretch"
                                    Click="BtCreandoPdf_Click"
                                    Command="{Binding cmdPdfEstadisticasMes}"
                                    Content="Estadísticas Mes"
                                    Style="{StaticResource EstiloBotonBarraPequeña}"
                                    TextBlock.TextAlignment="Center" />

                            </StackPanel>
                        </Border>
                    </Border>
                </xceed:DropDownButton.DropDownContent>
            </xceed:DropDownButton>

            <!--  SEPARADOR  -->
            <TextBlock
                Width="2"
                Margin="3,5"
                Background="LightGray" />

            <!--  DESPLEGABLE CREAR EXCEL  -->
            <xceed:DropDownButton
                Focusable="False"
                IsTabStop="False"
                Style="{StaticResource EstiloBotonDesplegable}">
                <xceed:DropDownButton.Content>
                    <StackPanel Orientation="Vertical">
