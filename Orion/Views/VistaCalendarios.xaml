                        FontSize="13"
                        Style="{StaticResource TextoPijama1}"
                        Text="Trab: "
                        TextAlignment="Right" />
                    <TextBlock
                        Width="Auto"
                        Margin="0,5"
                        FontSize="14"
                        Style="{StaticResource TextoPijama2}"
                        Text="{Binding CalendariosVM.Pijama.HastaMesActual.DiasTrabajados, StringFormat=00}" />
