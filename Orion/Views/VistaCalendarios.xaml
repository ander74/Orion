        <!--  PANEL DE CONTENIDO  -->
        <!--  ====================================================================================================  -->

        <!--  PANEL ACCIONES POR LOTES  -->
        <Grid
            x:Name="PanelAccionesPorLotes"
            Grid.Row="1"
            Grid.Column="0"
            Visibility="Visible">

            <Border
                x:Name="BordePanelAccionesLotes"
                Height="Auto"
                Margin="0,3"
                Padding="3"
                Background="{StaticResource DegradadoCeleste2}"
                BorderBrush="DarkBlue"
                BorderThickness="0.5"
                CornerRadius="4"
                Visibility="Collapsed">

                <StackPanel
                    x:Name="PanelAccionesLotes"
                    Margin="5"
                    Orientation="Vertical"
                    Visibility="Collapsed">

                    <!--  TITULO  -->
                    <TextBlock
                        FontFamily="Verdana"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="DarkBlue"
                        Text="ACCIONES POR LOTES" />

                    <!--  CONTENIDO PRINCIPAL  -->
                    <StackPanel
                        Margin="10"
                        DataContext="{Binding CalendariosVM.AccionesLotesVM}"
                        Orientation="Horizontal">

                        <!--  GRÁFICO DE APLICACION  -->
                        <StackPanel Margin="5,0" Orientation="Horizontal">
                            <TextBlock
                                Width="Auto"
                                Style="{StaticResource TextoPijama1}"
                                Text="Aplicar al Gráfico: " />
                            <controls:QTextBox
                                Width="70"
                                Style="{StaticResource TextBoxPijama}"
                                Text="{Binding Grafico, Converter={StaticResource cnvNumGrafico}}" />
                            <ComboBox
                                Width="100"
                                Height="24"
                                Margin="5,0"
                                Padding="6"
                                VerticalAlignment="Center"
                                VerticalContentAlignment="Center"
                                FontSize="12"
                                SelectedIndex="{Binding Codigo}">
                                <ComboBox.Items>
                                    <ComboBoxItem Content="Normal" />
                                    <ComboBoxItem Content="Comite CO" />
                                    <ComboBoxItem Content="Comite CE" />
                                    <ComboBoxItem Content="Trabajo JD" />
                                    <ComboBoxItem Content="Todos" />
                                </ComboBox.Items>
                            </ComboBox>

                        </StackPanel>

                        <!--  DIAS DE APLICACION  -->
                        <StackPanel Margin="5,0" Orientation="Horizontal">
                            <TextBlock
                                Width="Auto"
                                Style="{StaticResource TextoPijama1}"
                                Text="Aplicar a los días: " />
                            <controls:QTextBox
                                Width="40"
                                Style="{StaticResource TextBoxPijama}"
                                Text="{Binding DelDia, StringFormat=00, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock
                                Width="Auto"
                                Style="{StaticResource TextoPijama2}"
                                Text="  Al  " />
                            <controls:QTextBox
                                Width="40"
                                Style="{StaticResource TextBoxPijama}"
                                Text="{Binding AlDia, StringFormat=00, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>

                        <!--  ACCIÓN  -->
                        <StackPanel Margin="5,0" Orientation="Horizontal">
                            <TextBlock
                                Width="Auto"
                                Style="{StaticResource TextoPijama1}"
                                Text="Acción: " />
                            <ComboBox
                                Width="160"
                                Height="24"
                                Padding="3"
                                VerticalAlignment="Center"
                                VerticalContentAlignment="Center"
                                FontSize="12"
                                SelectedIndex="{Binding CodigoAccion}">
                                <ComboBox.Items>
                                    <ComboBoxItem Content="Exceso Jornada" />
                                    <ComboBoxItem Content="Facturado Paquetería" />
                                    <ComboBoxItem Content="Limpieza" />
                                    <ComboBoxItem Content="Media Limpieza" />
                                    <ComboBoxItem Content="Quitar Limpieza" />
                                    <ComboBoxItem Content="Cambiar Número" />
                                    <ComboBoxItem Content="Borrar Notas" />
                                </ComboBox.Items>
                            </ComboBox>
                        </StackPanel>

                        <!--  VALOR PEDIDO  -->
                        <StackPanel Margin="5,0" Orientation="Horizontal">
                            <TextBlock
                                Width="Auto"
                                Style="{StaticResource TextoPijama1}"
                                Text="{Binding TextoValorPedido}" />
                            <controls:QTextBox
                                Width="70"
                                Style="{StaticResource TextBoxPijama}"
                                Text="{Binding Horas, Converter={StaticResource cnvHora}}"
                                Visibility="{Binding VisibilidadHoras}" />
                            <controls:QTextBox
                                Width="80"
                                Style="{StaticResource TextBoxPijama}"
                                Text="{Binding Importe, Converter={StaticResource cnvDecimal}}"
                                Visibility="{Binding VisibilidadImporte}" />
                            <controls:QTextBox
                                Width="70"
                                Style="{StaticResource TextBoxPijama}"
                                Text="{Binding NuevoGrafico, Converter={StaticResource cnvNumGrafico}}"
                                Visibility="{Binding VisibilidadNumero}" />
                            <ComboBox
                                Width="100"
                                Height="24"
                                Margin="5,0"
                                Padding="6"
                                VerticalAlignment="Center"
                                VerticalContentAlignment="Center"
                                FontSize="12"
                                SelectedIndex="{Binding NuevoCodigo}"
                                Visibility="{Binding VisibilidadNumero}">
                                <ComboBox.Items>
                                    <ComboBoxItem Content="Normal" />
                                    <ComboBoxItem Content="Comite CO" />
                                    <ComboBoxItem Content="Comite CE" />
                                    <ComboBoxItem Content="Trabajo JD" />
                                    <ComboBoxItem Content="No cambiar" />
                                </ComboBox.Items>
                            </ComboBox>

                        </StackPanel>

                    </StackPanel>

                    <!--  BOTÓN Y NOTAS  -->
                    <StackPanel Margin="10" Orientation="Horizontal">

                        <!--  BOTÓN APLICAR  -->
                        <Button
                            Margin="5,0"
                            Padding="15,8"
                            Command="{Binding CalendariosVM.cmdAplicarAccionLotes}"
                            Content="Aplicar Acción"
                            Focusable="True"
                            FontSize="12"
                            Style="{StaticResource EstiloBoton}" />

                        <!--  BOTÓN MARCAR  -->
                        <Button
                            Margin="5,0"
                            Padding="15,8"
                            Command="{Binding CalendariosVM.cmdMarcarAccionesLotes}"
                            Content="Marcar"
                            Focusable="True"
                            FontSize="12"
                            Style="{StaticResource EstiloBoton}" />

                        <!--  BOTÓN VACIAR  -->
                        <Button
                            Margin="5,0"
                            Padding="15,8"
                            Command="{Binding CalendariosVM.cmdBorrarAccionLotes}"
                            Content="Vaciar"
                            Focusable="True"
                            FontSize="12"
                            Style="{StaticResource EstiloBoton}" />

                        <!--  NOTAS  -->
                        <StackPanel
                            Margin="20,0,5,0"
                            DataContext="{Binding CalendariosVM.AccionesLotesVM}"
                            Orientation="Horizontal">
                            <CheckBox
                                Margin="10,0"
                                VerticalAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="Sumar Valor"
                                FontFamily="Verdana"
                                FontSize="12"
                                FontWeight="Bold"
                                IsChecked="{Binding SumarValor}" />
                            <TextBlock
                                Width="Auto"
                                Margin="10,0"
                                Style="{StaticResource TextoPijama1}"
                                Text="Notas: " />
                            <controls:QTextBox
                                Width="500"
                                Style="{StaticResource TextBoxPijama}"
                                Text="{Binding Notas, UpdateSourceTrigger=PropertyChanged}"
                                TextAlignment="Left" />
                        </StackPanel>

                    </StackPanel>

                </StackPanel>

            </Border>

            <!--  BOTÓN CERRAR  -->
            <Button
                x:Name="BtCerrarAccionesLotes"
                Margin="5,7"
                Padding="8,5"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Click="BtAccionesLotes_Click"
                Content="X"
                FontSize="14"
                FontWeight="Bold"
                Foreground="Red"
                Style="{StaticResource EstiloBotonBarraPequeña}"
                Visibility="Collapsed" />

        </Grid>


        <!--  PANEL FILTRO APLICADO  -->
        <Grid
            x:Name="PanelFiltroAplicado"
            Grid.Row="2"
            Grid.Column="0"
            HorizontalAlignment="Stretch"
            Visibility="Visible">
            <Border
                Height="Auto"
                Margin="0,3"
                Padding="3"
                Background="{StaticResource DegradadoCeleste1}"
                BorderBrush="DarkBlue"
                BorderThickness="0.5"
                CornerRadius="4">
                <Grid HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        VerticalContentAlignment="Center"
                        FontFamily="Verdana"
                        FontSize="14"
                        FontWeight="Normal">
