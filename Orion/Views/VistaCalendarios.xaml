                        Width="50"
                        Margin="0,5"
                        FontSize="13"
                        Style="{StaticResource TextoPijama1}"
                        Text="J-D: "
                        TextAlignment="Right" />
                    <TextBlock
                        Width="Auto"
                        Margin="0,5"
                        FontSize="14"
                        Style="{StaticResource TextoPijama2}"
                        Text="{Binding CalendariosVM.Pijama.HastaMesActual.DiasDescansados, StringFormat=00}" />
