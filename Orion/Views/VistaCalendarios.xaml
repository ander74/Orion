                                        Valor="{Binding CalendariosVM.Pijama.TrabajoEnDescanso, StringFormat=00}"
                                        Visibility="{Binding CalendariosVM.Pijama.TrabajoEnDescanso, Converter={StaticResource cnvOcultoSiCero}}" />

                                    <!--  DESCANSOS  -->
