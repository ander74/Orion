            <!--  SEPARADOR  -->
            <TextBlock
                Width="2"
                Margin="3,5"
                Background="LightGray" />

            <!--  BOTON RECLAMAR  -->
            <Button
                Width="Auto"
                Command="{Binding CalendariosVM.cmdReclamacion}"
                Style="{StaticResource EstiloBotonBarra}">
                <Button.Content>
                    <StackPanel Orientation="Vertical">
                        <Image
                            Source="Imagenes/Reclamar.png"
                            Style="{StaticResource EstiloImagen}" />
                        <TextBlock
                            TextAlignment="Center"
                            TextWrapping="Wrap">
                            Generar<LineBreak />
                            Reclamación</TextBlock>
                    </StackPanel>
                </Button.Content>
            </Button>

            <!--  SEPARADOR  -->
            <TextBlock
                Width="2"
                Margin="3,5"
                Background="LightGray" />

            <!--  PENDIENTE  -->
