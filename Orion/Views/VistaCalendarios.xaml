        <!--  TABLA PIJAMA  -->
        <controls:QDataGrid
            x:Name="TablaPijama"
            Grid.Row="3"
            Grid.Column="0"
            CanUserReorderColumns="False"
            CanUserSortColumns="False"
            ElementoSeleccionado="{Binding CalendariosVM.Pijama.DiaSeleccionado}"
            FontFamily="Comic Sans MS"
            FontSize="11"
            IsReadOnly="True"
            ItemsSource="{Binding CalendariosVM.Pijama.ListaDias}"
            Style="{StaticResource EstiloGridPijama}"
            Visibility="Collapsed">

            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="0.5*"
                    Binding="{Binding DiaFecha.Day, StringFormat=00}"
                    Header="Día">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="Foreground" Value="{Binding DiaFecha, Converter={StaticResource cnvColorDiaSinGraficos}}" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding ComboGrafico, Converter={StaticResource cnvNumGraficoPijama}}"
                    Header="Gráfico">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight">
                                <Setter.Value>
                                    <MultiBinding Converter="{StaticResource cnvNegritaDiaPijama}">
                                        <Binding Path="ComboGrafico" />
                                        <Binding Path="TieneHorarioAlternativo" />
                                    </MultiBinding>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground">
                                <Setter.Value>
                                    <MultiBinding Converter="{StaticResource cnvColorDiaPijama}">
                                        <Binding Path="ComboGrafico" />
                                        <Binding Path="DiaFecha" />
                                        <Binding Path="DiaFecha.Day" />
                                        <Binding Path="TieneHorarioAlternativo" />
                                    </MultiBinding>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="ToolTip" Value="{Binding TextoInicioFinal}" />
                            <Setter Property="ToolTipService.ShowDuration" Value="1000000" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding GraficoTrabajado.Trabajadas, Converter={StaticResource cnvHora}, ConverterParameter={x:Static cnv:VerValores.NoCeros}}"
                    Header="Horas">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="ToolTip" Value="{Binding TrabajadasReales, Converter={StaticResource cnvHora}}" />
                            <Setter Property="ToolTipService.ShowDuration" Value="1000000" />
                            <Setter Property="FontWeight" Value="{Binding TrabajadasAlt, Converter={StaticResource cnvNegritaColumnaPijama}}" />
                            <Setter Property="Foreground" Value="{Binding ReclamaTrabajadas, Converter={StaticResource cnvColorColumnaPijama}}" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding GraficoTrabajado.Acumuladas, Converter={StaticResource cnvHora}, ConverterParameter={x:Static cnv:VerValores.NoCeros}}"
                    Header="Acumulad.">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="{Binding AcumuladasAlt, Converter={StaticResource cnvNegritaColumnaPijama}}" />
                            <Setter Property="Foreground" Value="{Binding ReclamaAcumuladas, Converter={StaticResource cnvColorColumnaPijama}}" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding GraficoTrabajado.Nocturnas, Converter={StaticResource cnvHora}, ConverterParameter={x:Static cnv:VerValores.NoCeros}}"
                    Header="Nocturnas">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="{Binding NocturnasAlt, Converter={StaticResource cnvNegritaColumnaPijama}}" />
                            <Setter Property="Foreground" Value="{Binding ReclamaNocturnas, Converter={StaticResource cnvColorColumnaPijama}}" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding ExcesoJornada, Converter={StaticResource cnvSuperHora}, ConverterParameter={x:Static cnv:VerValores.NoCeros}}"
                    Header="Ex.Jornada" />
                <DataGridTextColumn Width="*" Binding="{Binding GraficoTrabajado.Desayuno, Converter={StaticResource cnvDecimal}, ConverterParameter={x:Static cnv:VerValores.NoCeros}}">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="Desayuno" ToolTip="El importe incluye el porcentaje aplicado." />
                    </DataGridTextColumn.Header>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="ToolTip" Value="{Binding ImporteDesayuno, Converter={StaticResource cnvDecimalEuro}}" />
                            <Setter Property="ToolTipService.ShowDuration" Value="1000000" />
                            <Setter Property="FontWeight" Value="{Binding DesayunoAlt, Converter={StaticResource cnvNegritaColumnaPijama}}" />
                            <Setter Property="Foreground" Value="{Binding ReclamaDesayuno, Converter={StaticResource cnvColorColumnaPijama}}" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding GraficoTrabajado.Comida, Converter={StaticResource cnvDecimal}, ConverterParameter={x:Static cnv:VerValores.NoCeros}}"
                    Header="Comida">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="ToolTip" Value="{Binding ImporteComida, Converter={StaticResource cnvDecimalEuro}}" />
                            <Setter Property="ToolTipService.ShowDuration" Value="1000000" />
                            <Setter Property="FontWeight" Value="{Binding ComidaAlt, Converter={StaticResource cnvNegritaColumnaPijama}}" />
                            <Setter Property="Foreground" Value="{Binding ReclamaComida, Converter={StaticResource cnvColorColumnaPijama}}" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding GraficoTrabajado.Cena, Converter={StaticResource cnvDecimal}, ConverterParameter={x:Static cnv:VerValores.NoCeros}}"
                    Header="Cena">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="ToolTip" Value="{Binding ImporteCena, Converter={StaticResource cnvDecimalEuro}}" />
                            <Setter Property="ToolTipService.ShowDuration" Value="1000000" />
                            <Setter Property="FontWeight" Value="{Binding CenaAlt, Converter={StaticResource cnvNegritaColumnaPijama}}" />
                            <Setter Property="Foreground" Value="{Binding ReclamaCena, Converter={StaticResource cnvColorColumnaPijama}}" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding GraficoTrabajado.PlusCena, Converter={StaticResource cnvDecimal}, ConverterParameter={x:Static cnv:VerValores.NoCeros}}"
                    Header="PlusCena">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="ToolTip" Value="{Binding ImportePlusCena, Converter={StaticResource cnvDecimalEuro}}" />
                            <Setter Property="ToolTipService.ShowDuration" Value="1000000" />
                            <Setter Property="FontWeight" Value="{Binding PlusCenaAlt, Converter={StaticResource cnvNegritaColumnaPijama}}" />
                            <Setter Property="Foreground" Value="{Binding ReclamaPlusCena, Converter={StaticResource cnvColorColumnaPijama}}" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding TotalDietas, Converter={StaticResource cnvDecimal}, ConverterParameter={x:Static cnv:VerValores.NoCeros}}"
                    Header="TotalDietas">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="ToolTip" Value="{Binding ImporteTotalDietas, Converter={StaticResource cnvDecimalEuro}}" />
                            <Setter Property="ToolTipService.ShowDuration" Value="1000000" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding PlusMenorDescanso, Converter={StaticResource cnvDecimalEuro}, ConverterParameter={x:Static cnv:VerValores.NoCeros}}"
                    Header="Menor Des.">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="ToolTip" Value="{Binding TiempoMenorDescanso}" />
                            <Setter Property="ToolTipService.ShowDuration" Value="1000000" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding PlusPaqueteria, Converter={StaticResource cnvDecimalEuro}, ConverterParameter={x:Static cnv:VerValores.NoCeros}}"
                    Header="Paquetería">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="ToolTip" Value="{Binding FacturadoPaqueteria, Converter={StaticResource cnvDecimalEuro}}" />
                            <Setter Property="ToolTipService.ShowDuration" Value="1000000" />
                            <Setter Property="FontWeight" Value="{Binding PlusPaqueteriaAlt, Converter={StaticResource cnvNegritaColumnaPijama}}" />
                            <Setter Property="Foreground" Value="{Binding ReclamaPlusPaqueteria, Converter={StaticResource cnvColorColumnaPijama}}" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding PlusLimpieza, Converter={StaticResource cnvDecimalEuro}, ConverterParameter={x:Static cnv:VerValores.NoCeros}}"
                    Header="Limpieza">
                    <!--<DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="{Binding PlusLimpiezaAlt, Converter={StaticResource cnvNegritaColumnaPijama}}" />
                            <Setter Property="Foreground" Value="{Binding ReclamaPlusLimpieza, Converter={StaticResource cnvColorColumnaPijama}}" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>-->
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding OtrosPluses, Converter={StaticResource cnvDecimalEuro}, ConverterParameter={x:Static cnv:VerValores.NoCeros}}"
                    Header="Otros" />
            </DataGrid.Columns>
        </controls:QDataGrid>


        <!--  PANEL LATERAL PIJAMA  -->
        <Grid
            x:Name="PanelResumen"
            Grid.Row="0"
            Grid.RowSpan="4"
            Grid.Column="1"
            Width="Auto"
            Background="{StaticResource DegradadoCeleste1}"
            Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  PESTAÑAS DEL RESUMEN  -->
            <TabControl
                Grid.Row="0"
                Width="320"
                Padding="0"
                FontFamily="Comic Sans MS"
                Visibility="{Binding ElementName=BtOcultarPanelPijama, Path=IsChecked, Converter={StaticResource cnvVisibilityInverter}}">

                <!--  PESTAÑA MES ACTUAL  -->
                <TabItem
                    Width="80"
                    Height="22"
                    Panel.ZIndex="50"
                    FontSize="11"
                    Header="Mes Actual"
                    Style="{StaticResource EstiloPestañasPijama}">

                    <ScrollViewer Background="{StaticResource DegradadoCeleste1}" VerticalScrollBarVisibility="Hidden">

                        <StackPanel
                            x:Name="PanelPijama"
                            Orientation="Vertical"
                            ScrollViewer.VerticalScrollBarVisibility="Hidden">

                            <!--  HORAS  -->
                            <ToggleButton
                                x:Name="BtHorasMes"
                                Margin="5,10,5,0"
                                Padding="5,0"
                                HorizontalAlignment="Left"
                                Content="Horas Mes Actual"
                                FontSize="14"
                                FontWeight="Bold"
                                Foreground="DarkRed"
                                Style="{StaticResource EstiloToggleBarraPequeña}"
                                ToolTip="Mostrar/Ocultar" />

                            <Grid Margin="5,0" Visibility="{Binding ElementName=BtHorasMes, Path=IsChecked, Converter={StaticResource cnvVisibilityInverter}}">
                                <Border
                                    Background="AliceBlue"
                                    BorderBrush="DarkGray"
                                    BorderThickness="1"
                                    CornerRadius="5" />
                                <StackPanel Margin="0,4" Orientation="Vertical">

                                    <!--  TRABAJADAS, ACUMULADAS Y NOCTURNAS  -->
                                    <controls:ItemResumen
                                        Descripcion="Horas Trabajadas"
                                        Style="{StaticResource EstiloItemResumen}"
                                        Valor="{Binding CalendariosVM.Pijama.Trabajadas, Converter={StaticResource cnvHoraMixta}, ConverterParameter={x:Static cnv:VerValores.HoraPlus}}"
                                        Visibility="{Binding CalendariosVM.Pijama.Trabajadas, Converter={StaticResource cnvOcultoSiCero}}" />
                                    <controls:ItemResumen
                                        Descripcion="Horas Acumuladas"
                                        Style="{StaticResource EstiloItemResumen}"
                                        Valor="{Binding CalendariosVM.Pijama.Acumuladas, Converter={StaticResource cnvHoraMixta}, ConverterParameter={x:Static cnv:VerValores.HoraPlus}}"
                                        Visibility="{Binding CalendariosVM.Pijama.Acumuladas, Converter={StaticResource cnvOcultoSiCero}}" />
                                    <controls:ItemResumen
                                        Descripcion="Horas Nocturnas"
                                        Style="{StaticResource EstiloItemResumen}"
                                        Valor="{Binding CalendariosVM.Pijama.Nocturnas, Converter={StaticResource cnvHoraMixta}, ConverterParameter={x:Static cnv:VerValores.HoraPlus}}"
                                        Visibility="{Binding CalendariosVM.Pijama.Nocturnas, Converter={StaticResource cnvOcultoSiCero}}" />

                                    <!--  COBRADAS, EXCESO JORNADA y REGULADAS  -->
                                    <controls:ItemResumen
                                        Descripcion="Horas Cobradas"
                                        Style="{StaticResource EstiloItemResumen}"
                                        Valor="{Binding CalendariosVM.Pijama.HorasCobradas, Converter={StaticResource cnvHoraMixta}, ConverterParameter={x:Static cnv:VerValores.HoraPlus}}"
                                        Visibility="{Binding CalendariosVM.Pijama.HorasCobradas, Converter={StaticResource cnvOcultoSiCero}}" />
                                    <controls:ItemResumen
                                        Descripcion="Exceso Jornada"
                                        Style="{StaticResource EstiloItemResumen}"
                                        Valor="{Binding CalendariosVM.Pijama.ExcesoJornada, Converter={StaticResource cnvHoraMixta}, ConverterParameter={x:Static cnv:VerValores.HoraPlus}}"
                                        Visibility="{Binding CalendariosVM.Pijama.ExcesoJornada, Converter={StaticResource cnvOcultoSiCero}}" />
                                    <controls:ItemResumen
                                        Descripcion="Otras Horas"
                                        Style="{StaticResource EstiloItemResumen}"
                                        ToolTip="Horas reguladas que no son horas cobradas ni regulaciones de final de año."
                                        Valor="{Binding CalendariosVM.Pijama.OtrasHoras, Converter={StaticResource cnvHoraMixta}, ConverterParameter={x:Static cnv:VerValores.HoraPlus}}"
                                        Visibility="{Binding CalendariosVM.Pijama.OtrasHoras, Converter={StaticResource cnvOcultoSiCero}}" />
                                </StackPanel>
                            </Grid>


                            <!--  DÍAS  -->
                            <ToggleButton
                                x:Name="BtDiasMes"
                                Margin="5,10,5,0"
                                Padding="5,0"
                                Content="Días Mes Actual"
                                FontSize="14"
                                FontWeight="Bold"
                                Foreground="DarkRed"
                                Style="{StaticResource EstiloToggleBarraPequeña}"
                                ToolTip="Mostrar/Ocultar" />

                            <Grid Margin="5,0" Visibility="{Binding ElementName=BtDiasMes, Path=IsChecked, Converter={StaticResource cnvVisibilityInverter}}">
                                <Border
                                    Background="AliceBlue"
                                    BorderBrush="DarkGray"
                                    BorderThickness="1"
                                    CornerRadius="5" />
                                <StackPanel Margin="0,4" Orientation="Vertical">

                                    <!--  TRABAJO Y DESCANSOS  -->
