                            <TextBlock
                                Margin="4,0"
                                VerticalAlignment="Center"
                                FontWeight="Bold"
                                Text="Filtro aplicado:" />
                            <TextBlock
                                Width="Auto"
                                Margin="4,0"
                                VerticalAlignment="Center"
                                Text="{Binding CalendariosVM.FiltroAplicado}" />
                        </StackPanel>
                    </Label>
                    <Label
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        VerticalContentAlignment="Center"
                        FontFamily="Verdana"
                        FontSize="14"
                        FontWeight="Normal">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Margin="4,0"
                                VerticalAlignment="Center"
                                FontWeight="Bold"
                                Text="Grupos de Gráficos:" />
                            <TextBlock
                                Width="Auto"
                                Margin="4,0"
                                VerticalAlignment="Center"
                                Text="{Binding CalendariosVM.GruposGraficos}" />
                        </StackPanel>
                    </Label>

                </Grid>

            </Border>
        </Grid>


