							  Content="Días Mes Actual" ToolTip="Mostrar/Ocultar" Style="{StaticResource EstiloToggleBarraPequeña}"/>

				<Grid Margin="5,0" Visibility="{Binding ElementName=BtDiasMes, Path=IsChecked, Converter={StaticResource cnvVisibilityInverter}}">
                    <Border BorderBrush="DarkGray" BorderThickness="1" CornerRadius="5" Background="AliceBlue"/>

                    <StackPanel Orientation="Vertical">

                        <!-- TRABAJO Y DESCANSOS -->
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="Trabajo" Width="60" TextAlignment="Center"/>
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="J-D" Width="60" TextAlignment="Center"
                                       ToolTip="Descansos ordinarios."/>
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="O-V" Width="60" TextAlignment="Center"
                                       ToolTip="Días de vacaciones."/>
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="DND" Width="60" TextAlignment="Center"
                                       ToolTip="Descansos no disfrutados."/>
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="Trabajo(JD)" Width="120" TextAlignment="Center"
                                       ToolTip="Días de trabajo en descanso (J-D)."/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="60" TextAlignment="Center"
                                       Text="{Binding CalendariosVM.Pijama.Trabajo, StringFormat=00}"/>
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="60" TextAlignment="Center"
                                       Text="{Binding CalendariosVM.Pijama.Descanso, StringFormat=00}"
                                       ToolTip="Descansos ordinarios."/>
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="60" TextAlignment="Center"
                                       Text="{Binding CalendariosVM.Pijama.Vacaciones, StringFormat=00}"
                                       ToolTip="Días de vacaciones."/>
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="60" TextAlignment="Center"
                                       Text="{Binding CalendariosVM.Pijama.DescansosNoDisfrutados, StringFormat=00}"
                                       ToolTip="Descansos no disfrutados."/>
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="120" TextAlignment="Center"
                                       Text="{Binding CalendariosVM.Pijama.TrabajoEnDescanso, StringFormat=00}"
                                       ToolTip="Días de trabajo en descanso (J-D)."/>
                        </StackPanel>

                        <!-- CÓMPUTO NO FIJOS -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5"
                                Visibility="{Binding CalendariosVM.Pijama.NoEsFijo, Converter={StaticResource cnvBoolToVisibility}}">
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="60" TextAlignment="Center" FontSize="10" Foreground="DarkBlue"
                                   Text="{Binding CalendariosVM.Pijama.DiasComputoTrabajo, StringFormat='(\{0:00.##})'}"
                                   ToolTip="Días que debe trabajar."/>
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="60" TextAlignment="Center" FontSize="10" Foreground="DarkBlue"
                                   Text="{Binding CalendariosVM.Pijama.DiasComputoDescanso, StringFormat='(\{0:00.##})'}"
                                   ToolTip="Días que debe descansar."/>
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="60" TextAlignment="Center" FontSize="10" Foreground="DarkBlue"
                                   Text="{Binding CalendariosVM.Pijama.DiasComputoVacaciones, StringFormat='(\{0:00.##})'}"
                                   ToolTip="Días de vacaciones que le corresponden."/>
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="180" TextAlignment="Center" FontSize="10" Foreground="DarkBlue"
                                   Text="{Binding CalendariosVM.Pijama.TextoComputoEventuales}"/>
                        </StackPanel>

                        <Border Height="1" BorderBrush="DarkGray" BorderThickness="1"/>

                        <!-- DESCANSOS -->
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="FN" Width="60" TextAlignment="Center"
                                   ToolTip="Descansos en fin de semana."/>
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="E" Width="60" TextAlignment="Center"
                                   ToolTip="Días de enfermedad."/>
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="DS" Width="60" TextAlignment="Center"
                                   ToolTip="Descansos sueltos."/>
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="DC" Width="60" TextAlignment="Center"
                                   ToolTip="Descansos compensatorios."/>
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="PER" Width="60" TextAlignment="Center"
                                   ToolTip="Días de permiso."/>
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="F6" Width="60" TextAlignment="Center"
                                   ToolTip="Días de libre disposición."/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="60" TextAlignment="Center"
                                       Text="{Binding CalendariosVM.Pijama.DescansoEnFinde, StringFormat=00}"
                                       ToolTip="Descansos en fin de semana."/>
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="60" TextAlignment="Center"
                                       Text="{Binding CalendariosVM.Pijama.Enfermo, StringFormat=00}"
                                       ToolTip="Días de enfermedad."/>
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="60" TextAlignment="Center"
                                       Text="{Binding CalendariosVM.Pijama.DescansoSuelto, StringFormat=00}"
                                       ToolTip="Descansos sueltos."/>
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="60" TextAlignment="Center"
                                       Text="{Binding CalendariosVM.Pijama.DescansoCompensatorio, StringFormat=00}"
                                       ToolTip="Descansos compensatorios."/>
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="60" TextAlignment="Center"
                                       Text="{Binding CalendariosVM.Pijama.Permiso, StringFormat=00}"
                                       ToolTip="Días de permiso."/>
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="60" TextAlignment="Center"
                                       Text="{Binding CalendariosVM.Pijama.DiasF6Totales, StringFormat=00}"
                                       ToolTip="Días de libre disposición."/>
                            <!--ToolTip="{Binding CalendariosVM.Pijama.LibreDisposicionF6, Converter={StaticResource cnvDiasF6}}"/>-->
                        </StackPanel>

                        <Border Height="1" BorderBrush="DarkGray" BorderThickness="1"/>

                        <!-- COMITÉ EN JD Y EN DC -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                                Visibility="{Binding CalendariosVM.Pijama.VerComite, Converter={StaticResource cnvBoolToVisibility}}">
                            <Label  Width="160" HorizontalContentAlignment="Center" Margin="0"
                                    ToolTip="Total días de comité.">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Style="{StaticResource TextoPijama1}" Text="Días Comité:  " Width="Auto"  FontSize="12"/>
                                    <TextBlock Style="{StaticResource TextoPijama2}" Width="Auto"
                                       Text="{Binding CalendariosVM.Pijama.Comite, StringFormat=00}"/>
                                </StackPanel>
                            </Label>
                            <Label  Width="100" HorizontalContentAlignment="Center" Margin="0"
                                    ToolTip="Del total de días de comité, los realizados en descanso (J-D).">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Style="{StaticResource TextoPijama1}" Text="En JD:  " Width="Auto"  FontSize="12"/>
                                    <TextBlock Style="{StaticResource TextoPijama2}" Width="Auto"
                                       Text="{Binding CalendariosVM.Pijama.ComiteEnDescanso, StringFormat=00}"/>
                                </StackPanel>
                            </Label>
                            <Label  Width="100" HorizontalContentAlignment="Center" Margin="0"
                                    ToolTip="Del total de días de comité, los realizados en descanso compensatorio (DC).">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Style="{StaticResource TextoPijama1}" Text="En DC:  " Width="Auto"  FontSize="12"/>
                                    <TextBlock Style="{StaticResource TextoPijama2}" Width="Auto"
                                       Text="{Binding CalendariosVM.Pijama.ComiteEnDC, StringFormat=00}"/>
                                </StackPanel>
                            </Label>
                        </StackPanel>

                        <Border Height="1" BorderBrush="DarkGray" BorderThickness="1"
                            Visibility="{Binding CalendariosVM.Pijama.VerComite, Converter={StaticResource cnvBoolToVisibility}}"/>

                        <!-- TOTAL DÍAS -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5"
                                    ToolTip="Total de los días en los que el trabajador está activo.">
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="Total Días: " Width="Auto"  FontSize="12" Foreground="DarkBlue"/>
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="Auto" FontSize="12" Foreground="DarkBlue">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0:00} de {1:00}">
                                        <Binding Path="CalendariosVM.Pijama.DiasActivo"/>
                                        <Binding Path="CalendariosVM.Pijama.DiasMes"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>

                    </StackPanel>
                </Grid>


                <!-- FINES DE SEMANA -->
				<ToggleButton x:Name="BtFindesMes" Margin="5,10,5,0" Padding="5,0" FontSize="14" Foreground="DarkRed" FontWeight="Bold"
							  Content="Fines de Semana Mes Actual" ToolTip="Mostrar/Ocultar" Style="{StaticResource EstiloToggleBarraPequeña}"/>

				<Grid Margin="5,0" Visibility="{Binding ElementName=BtFindesMes, Path=IsChecked, Converter={StaticResource cnvVisibilityInverter}}">
					<Border BorderBrush="DarkGray" BorderThickness="1" CornerRadius="5" Background="AliceBlue"/>

                    <StackPanel Orientation="Vertical">
                        <!-- FINES DE SEMANA -->
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="" Width="90" TextAlignment="Center"/>
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="Sábados" Width="90" TextAlignment="Center"/>
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="Domingos" Width="90" TextAlignment="Center"/>
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="Festivos" Width="90" TextAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="Descanso" Width="90" TextAlignment="Center"/>
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="90" TextAlignment="Center"
                                       Text="{Binding CalendariosVM.Pijama.SabadosDescansados, StringFormat=00}"/>
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="90" TextAlignment="Center"
                                       Text="{Binding CalendariosVM.Pijama.DomingosDescansados, StringFormat=00}"/>
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="90" TextAlignment="Center"
                                       Text="{Binding CalendariosVM.Pijama.FestivosDescansados, StringFormat=00}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="Trabajo" Width="90" TextAlignment="Center"/>
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="90" TextAlignment="Center"
                                       Text="{Binding CalendariosVM.Pijama.SabadosTrabajados, StringFormat=00}"/>
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="90" TextAlignment="Center"
                                       Text="{Binding CalendariosVM.Pijama.DomingosTrabajados, StringFormat=00}"/>
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="90" TextAlignment="Center"
                                       Text="{Binding CalendariosVM.Pijama.FestivosTrabajados, StringFormat=00}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="Pluses" Width="90" TextAlignment="Center"/>
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="90" TextAlignment="Center"
                                       Text="{Binding CalendariosVM.Pijama.PlusSabados,  Converter={StaticResource cnvDecimalEuro}}"/>
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="90" TextAlignment="Center"
                                       Text="{Binding CalendariosVM.Pijama.PlusDomingos,  Converter={StaticResource cnvDecimalEuro}}"/>
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="90" TextAlignment="Center"
                                       Text="{Binding CalendariosVM.Pijama.PlusFestivos,  Converter={StaticResource cnvDecimalEuro}}"/>
                        </StackPanel>

                        <Border Height="1" BorderBrush="DarkGray" BorderThickness="1"/>

                        <!-- FINES DE SEMANA COMPLETOS -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5"
                                    ToolTip="Fines de semana completos disfrutados.">
                            <TextBlock Style="{StaticResource TextoPijama1}" Width="Auto" Text="Fines de Semana Completos: " FontSize="12" Foreground="DarkBlue"/>
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="Auto" Foreground="DarkBlue" FontSize="12"
                                Text="{Binding CalendariosVM.Pijama.FindesCompletos,  Converter={StaticResource cnvDecimal}}"/>
                        </StackPanel>

                    </StackPanel>

                </Grid>


                <!-- DIETAS Y PLUSES -->
				<ToggleButton x:Name="BtDietasMes" Margin="5,10,5,0" Padding="5,0" FontSize="14" Foreground="DarkRed" FontWeight="Bold"
							  Content="Dietas y Pluses Mes Actual" ToolTip="Mostrar/Ocultar" Style="{StaticResource EstiloToggleBarraPequeña}"/>

				<Grid Margin="5,0" Visibility="{Binding ElementName=BtDietasMes, Path=IsChecked, Converter={StaticResource cnvVisibilityInverter}}">
					<Border BorderBrush="DarkGray" BorderThickness="1" CornerRadius="5" Background="AliceBlue"/>

                    <StackPanel Orientation="Vertical">

                        <!-- DIETAS -->
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="Desayuno" Width="90" TextAlignment="Center"
                                       ToolTip="Dieta de desayuno, sin aplicar el porcentaje de descuento."/>
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="Comida" Width="90" TextAlignment="Center"
                                       ToolTip="Dieta de comida."/>
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="Cena" Width="90" TextAlignment="Center"
                                       ToolTip="Dieta de cena."/>
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="P.Cena" Width="90" TextAlignment="Center"
                                       ToolTip="Dieta de plus cena (con el porcentaje ya aplicado)."/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="90" TextAlignment="Center"
                                       Text="{Binding CalendariosVM.Pijama.DietaDesayuno, Converter={StaticResource cnvDecimal}}"
                                       ToolTip="Dieta de desayuno, sin aplicar el porcentaje de descuento."/>
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="90" TextAlignment="Center"
                                       Text="{Binding CalendariosVM.Pijama.DietaComida, Converter={StaticResource cnvDecimal}}"
                                       ToolTip="Dieta de comida."/>
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="90" TextAlignment="Center"
                                       Text="{Binding CalendariosVM.Pijama.DietaCena, Converter={StaticResource cnvDecimal}}"
                                       ToolTip="Dieta de cena."/>
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="90" TextAlignment="Center"
                                       Text="{Binding CalendariosVM.Pijama.DietaPlusCena, Converter={StaticResource cnvDecimal}}"
                                       ToolTip="Dieta de plus cena (con el porcentaje ya aplicado)."/>
                        </StackPanel>

                        <Border Height="1" BorderBrush="DarkGray" BorderThickness="1"/>

                        <!-- PLUSES -->
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="Menor D." Width="90" TextAlignment="Center"
                                       ToolTip="Plus por menor descanso."/>
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="Limpieza" Width="90" TextAlignment="Center"
                                       ToolTip="Suma de los pluses de limpieza (fijos y variables)."/>
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="Paquet." Width="90" TextAlignment="Center"
                                       ToolTip="Suma de los pluses de paquetería (fijos y variables)."/>
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="Otros" Width="90" TextAlignment="Center"
                                       ToolTip="Suma de los pluses de nocturnidad , viaje y Navidad."/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="90" TextAlignment="Center"
                                       Text="{Binding CalendariosVM.Pijama.PlusMenorDescanso, Converter={StaticResource cnvDecimalEuro}}"
                                       ToolTip="Plus por menor descanso."/>
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="90" TextAlignment="Center"
                                       Text="{Binding CalendariosVM.Pijama.PlusLimpieza, Converter={StaticResource cnvDecimalEuro}}"
                                       ToolTip="Suma de los pluses de limpieza (fijos y variables)."/>
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="90" TextAlignment="Center"
                                       Text="{Binding CalendariosVM.Pijama.PlusPaqueteria, Converter={StaticResource cnvDecimalEuro}}"
                                       ToolTip="Suma de los pluses de paquetería (fijos y variables)."/>
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="90" TextAlignment="Center"
                                       Text="{Binding CalendariosVM.Pijama.OtrosPluses, Converter={StaticResource cnvDecimalEuro}}"
                                       ToolTip="{Binding CalendariosVM.Pijama.ToolTipOtrosPluses}"/>
                        </StackPanel>

                        <Border Height="1" BorderBrush="DarkGray" BorderThickness="1"/>

                        <!-- TOTALES -->
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="Total Findes" Width="120" TextAlignment="Center"
                                       ToolTip="Suma de todos los pluses de fin de semana y festivos."/>
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="Total Dietas" Width="120" TextAlignment="Center"
                                       ToolTip="Suma de todas las dietas, así como su importe total."/>
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="Total Pluses" Width="120" TextAlignment="Center"
                                       ToolTip="Suma de todos los pluses (excepto los de fin de semana y festivos)."/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="120" TextAlignment="Center"
                                       Text="{Binding CalendariosVM.Pijama.ImporteTotalFindes,  Converter={StaticResource cnvDecimalEuro}}"
                                       ToolTip="Suma de todos los pluses de fin de semana y festivos."/>
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="120" TextAlignment="Center"
                                       ToolTip="Suma de todas las dietas, así como su importe total.">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} ({1} €)">
                                        <Binding Path="CalendariosVM.Pijama.TotalDietas" Converter="{StaticResource cnvDecimal}"/>
                                        <Binding Path="CalendariosVM.Pijama.ImporteTotalDietas" Converter="{StaticResource cnvDecimal}"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <TextBlock Style="{StaticResource TextoPijama2}" Width="120" TextAlignment="Center"
                                       Text="{Binding CalendariosVM.Pijama.ImporteTotalPluses,  Converter={StaticResource cnvDecimalEuro}}"
                                       ToolTip="Suma de todos los pluses (excepto los de fin de semana y festivos)."/>
                        </StackPanel>

                        <Border Height="1" BorderBrush="DarkGray" BorderThickness="1"/>

                        <!-- IMPORTE TOTAL FINDES + DIETAS + PLUSES -->
                        <StackPanel Orientation="Horizontal" Margin="0,5" HorizontalAlignment="Center"
                                    ToolTip="Importe total a cobrar por dietas y pluses.">
                            <TextBlock FontFamily="Verdana" FontSize="13" FontWeight="Bold" Foreground="DarkBlue"
                                       Text="Importe Total:  "/>
                            <TextBlock FontFamily="Verdana" FontSize="13" Foreground="DarkBlue"
                                       Text="{Binding CalendariosVM.Pijama.ImporteTotal, Converter={StaticResource cnvDecimalEuro}}"/>

                        </StackPanel>

                    </StackPanel>

                </Grid>


                <!-- RESUMEN HASTA MES ACTUAL -->
				<ToggleButton x:Name="BtResumenMes" Margin="5,10,5,0" Padding="5,0" FontSize="14" Foreground="DarkRed" FontWeight="Bold" 
							  Content="Resumen Hasta Mes Actual" ToolTip="Mostrar/Ocultar" Style="{StaticResource EstiloToggleBarraPequeña}"/>

				<Grid Margin="5,0" Visibility="{Binding ElementName=BtResumenMes, Path=IsChecked, Converter={StaticResource cnvVisibilityInverter}}">
					<Border BorderBrush="DarkGray" BorderThickness="1" CornerRadius="5" Background="AliceBlue"/>

                    <StackPanel Orientation="Vertical">

                        <!-- TOTALES -->
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="DNDs Pend." Width="120" TextAlignment="Center"
                                       ToolTip="Descansos no disfrutados pendientes de disfrutar."/>
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="DCs Pend." Width="120" TextAlignment="Center"
                                       ToolTip="Descansos compensatorios pendientes de disfrutar."/>
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="H.Acumuladas" Width="120" TextAlignment="Center"
                                       ToolTip="Horas acumuladas generadas en el año en curso."/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Style="{StaticResource TextoPijama2}" FontSize="13" Width="120" TextAlignment="Center"
                                       Text="{Binding CalendariosVM.Pijama.DNDsPendientesHastaMes, Converter={StaticResource cnvDecimal6}}"
                                       ToolTip="Descansos no disfrutados pendientes de disfrutar."/>
                            <TextBlock Style="{StaticResource TextoPijama2}" FontSize="13" Width="120" TextAlignment="Center"
                                       Text="{Binding CalendariosVM.Pijama.DCsPendientesHastaMes, Converter={StaticResource cnvDecimal6}}"
                                       ToolTip="Descansos compensatorios pendientes de disfrutar."/>
                            <TextBlock Style="{StaticResource TextoPijama2}" FontSize="13" Width="120" TextAlignment="Center"
                                       Text="{Binding CalendariosVM.Pijama.AcumuladasHastaMes, Converter={StaticResource cnvHoraMixta},
                                              ConverterParameter={x:Static cnv:VerValores.HoraPlus}}"
                                       ToolTip="Horas acumuladas disponibles hasta final del mes."/>
                        </StackPanel>

                        <Border Height="1" BorderBrush="DarkGray" BorderThickness="1"/>

                        <!-- DCs GENERADOS -->
                        <StackPanel Orientation="Horizontal" Margin="0,5" HorizontalAlignment="Center" ToolTipService.ShowDuration="100000">
                            <TextBlock FontFamily="Verdana" FontSize="13" FontWeight="Bold" Foreground="DarkBlue"
                                       Text="DCs Generados:  "/>
                            <TextBlock FontFamily="Verdana" FontSize="13" Foreground="DarkBlue"
                                       Text="{Binding CalendariosVM.Pijama.DCsGeneradosHastaMes,  Converter={StaticResource cnvDecimal6}}"/>
                            <StackPanel.ToolTip>
                                <TextBlock>
                                    Descansos compensatorios generados a partir de las horas acumuladas actuales <LineBreak/>
                                    (incluyendo las sobrantes del año anterior) y los descansos compensatorios <LineBreak/>
                                    pendientes, a disfrutar al año siguiente.
                                </TextBlock>
                            </StackPanel.ToolTip>
                        </StackPanel>


                    </StackPanel>

                </Grid>
            
        </StackPanel>
        </ScrollViewer>

        <Border Grid.RowSpan="4" Grid.Column="1" BorderBrush="DarkBlue" BorderThickness="0.5" Width="{Binding ElementName=PanelResumen, Path=Width}"
                    Visibility="{Binding CalendariosVM.VisibilidadTablaCalendarios, Converter={StaticResource cnvVisibilityInverter}}" CornerRadius="4"/>


		<!-- ==================================================================================================== -->
		<!-- PANEL CAMBIAR FECHA -->
		<!-- ==================================================================================================== -->
		<StackPanel Grid.Row="2" Grid.RowSpan="2" Orientation="Vertical">
			<Border x:Name="PanelFecha" BorderBrush="DarkBlue" BorderThickness="1" CornerRadius="5" Padding="10" Margin="150,0,0,0" 
                    HorizontalAlignment="Left" Visibility="{Binding CalendariosVM.VisibilidadPanelFecha, Mode=TwoWay}" 
					Background="{StaticResource DegradadoCeleste1}">
				<StackPanel Orientation="Vertical">

					<!-- BARRA SUPERIOR -->
					<Grid Margin="0">
						<TextBlock FontSize="12" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Text="Mes Visualizado"/>
						<Button Style="{StaticResource EstiloBotonBarraPequeña}" Content="X" Foreground="Red" FontWeight="Bold" FontSize="12" Margin="0"
                                Padding="10,5" HorizontalAlignment="Right" Height="Auto"
                                Command="{Binding CalendariosVM.cmdAbrirPanelFecha}"/>
					</Grid>

					<!-- CALENDARIO -->
					<controls:QCalendar Style="{StaticResource EstiloCalendario}"
										DisplayMode="Month"  FirstDayOfWeek="Monday" SelectionMode="SingleDate"  Focusable="False"
										SelectedDate="{Binding CalendariosVM.FechaActual, Mode=TwoWay}"
										DisplayDate="{Binding CalendariosVM.FechaCalendarios, Mode=TwoWay}">

					</controls:QCalendar>
					<TextBlock FontSize="10" Text="Selecciona el día 1 del mes deseado."/>
				</StackPanel>
			</Border>
		</StackPanel>




	</Grid>


</UserControl>
