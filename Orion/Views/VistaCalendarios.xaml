                                        Valor="{Binding CalendariosVM.Pijama.DiasF6Totales, StringFormat=00}"
                                        Visibility="{Binding CalendariosVM.Pijama.DiasF6Totales, Converter={StaticResource cnvOcultoSiCero}}" />

                                    <!--  COMITÉ EN JD Y EN DC  -->
                                    <controls:ItemResumen
                                        Descripcion="Días de comité"
                                        Style="{StaticResource EstiloItemResumen}"
                                        Valor="{Binding CalendariosVM.Pijama.Comite, StringFormat=00}"
                                        Visibility="{Binding CalendariosVM.Pijama.Comite, Converter={StaticResource cnvOcultoSiCero}}" />
                                    <controls:ItemResumen
                                        Descripcion="    En JD"
                                        Style="{StaticResource EstiloItemResumen}"
                                        ToolTip="Del total de días de comité, los realizados en descanso (J-D)."
                                        Valor="{Binding CalendariosVM.Pijama.ComiteEnDescanso, StringFormat=00}"
