                  SelectionUnit="FullRow" Background="Transparent" CanUserSortColumns="False"
                  Style="{StaticResource EstiloGridPijama}"
                  Visibility="{Binding CalendariosVM.VisibilidadTablaCalendarios, Converter={StaticResource cnvVisibilityInverter}}"
                  ItemsSource="{Binding CalendariosVM.Pijama.ListaDias}" SelectedItem="{Binding CalendariosVM.Pijama.DiaSeleccionado}">

            <DataGrid.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="PaleGoldenrod"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black"/>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Día" Width="0.5*" Binding="{Binding DiaFecha.Day, StringFormat=00}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Foreground" Value="{Binding DiaFecha, Converter={StaticResource cnvColorDiaSinGraficos}}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Gráfico" Width="*" Binding="{Binding ComboGrafico, Converter={StaticResource cnvNumGraficoPijama}}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <!--<Setter Property="FontWeight" Value="{Binding ComboGrafico, Converter={StaticResource cnvNegritaDia}}"/>-->
							<Setter Property="FontWeight">
								<Setter.Value>
									<MultiBinding Converter="{StaticResource cnvNegritaDiaPijama}">
										<Binding Path="ComboGrafico"/>
										<Binding Path="TieneHorarioAlternativo"/>
									</MultiBinding>
								</Setter.Value>
							</Setter>
							<Setter Property="Foreground">
                                <Setter.Value>
                                    <MultiBinding Converter="{StaticResource cnvColorDiaPijama}">
                                        <Binding Path="ComboGrafico"/>
                                        <Binding Path="DiaFecha"/>
                                        <Binding Path="DiaFecha.Day"/>
										<Binding Path="TieneHorarioAlternativo"/>
									</MultiBinding>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="ToolTip" Value="{Binding TextoInicioFinal}"/>
                            <Setter Property="ToolTipService.ShowDuration" Value="1000000"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Horas" Width="*" Binding="{Binding GraficoTrabajado.Trabajadas, 
                                    Converter={StaticResource cnvHora}, ConverterParameter={x:Static cnv:VerValores.NoCeros}}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="ToolTip" Value="{Binding TrabajadasReales, Converter={StaticResource cnvHora}}"/>
                            <Setter Property="ToolTipService.ShowDuration" Value="1000000"/>
							<Setter Property="FontWeight" Value="{Binding TrabajadasAlt, Converter={StaticResource cnvNegritaColumnaPijama}}"/>
							<Setter Property="Foreground" Value="{Binding TrabajadasAlt, Converter={StaticResource cnvColorColumnaPijama}}"/>
						</Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
				<DataGridTextColumn Header="Acumulad." Width="*" Binding="{Binding GraficoTrabajado.Acumuladas, 
                                    Converter={StaticResource cnvHora}, ConverterParameter={x:Static cnv:VerValores.NoCeros}}">
					<DataGridTextColumn.ElementStyle>
						<Style TargetType="TextBlock">
							<Setter Property="FontWeight" Value="{Binding AcumuladasAlt, Converter={StaticResource cnvNegritaColumnaPijama}}"/>
							<Setter Property="Foreground" Value="{Binding AcumuladasAlt, Converter={StaticResource cnvColorColumnaPijama}}"/>
						</Style>
					</DataGridTextColumn.ElementStyle>
				</DataGridTextColumn>
                <DataGridTextColumn Header="Nocturnas" Width="*" Binding="{Binding GraficoTrabajado.Nocturnas, 
                                    Converter={StaticResource cnvHora}, ConverterParameter={x:Static cnv:VerValores.NoCeros}}">
					<DataGridTextColumn.ElementStyle>
						<Style TargetType="TextBlock">
							<Setter Property="FontWeight" Value="{Binding NocturnasAlt, Converter={StaticResource cnvNegritaColumnaPijama}}"/>
							<Setter Property="Foreground" Value="{Binding NocturnasAlt, Converter={StaticResource cnvColorColumnaPijama}}"/>
						</Style>
					</DataGridTextColumn.ElementStyle>
				</DataGridTextColumn>
                <DataGridTextColumn Header="Ex.Jornada" Width="*" Binding="{Binding ExcesoJornada, 
                                    Converter={StaticResource cnvSuperHora}, ConverterParameter={x:Static cnv:VerValores.NoCeros}}"/>
