<UserControl x:Class="Orion.Views.VistaCalendarios"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Orion.Views"
			 xmlns:controls="clr-namespace:Orion.Controls"
             xmlns:cnv="clr-namespace:Orion.Convertidores"
             xmlns:xceed="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <!-- ==================================================================================================== -->
    <!-- RECURSOS -->
    <!-- ==================================================================================================== -->
    <UserControl.Resources>

        <cnv:ConvertidorPrueba x:Key="cnvPrueba"/>

        <cnv:ConvertidorMinutosToHoraMixta x:Key="cnvMinutosToHoraMixta"/>
        <cnv:ConvertidorColorDia x:Key="cnvColorDia"/>
        <cnv:ConvertidorColorDiaPijama x:Key="cnvColorDiaPijama"/>
        <cnv:ConvertidorColorDiaSinGraficos x:Key="cnvColorDiaSinGraficos"/>
        <cnv:ConvertidorNegritaDia x:Key="cnvNegritaDia"/>
        <cnv:ConvertidorDecoracionDia x:Key="cnvDecoracionDia"/>
        <cnv:ConvertidorHora x:Key="cnvHora"/>
        <cnv:ConvertidorSuperHora x:Key="cnvSuperHora"/>
        <cnv:ConvertidorHoraMixta x:Key="cnvHoraMixta"/>
        <cnv:ConvertidorSuperHoraMixta x:Key="cnvSuperHoraMixta"/>
        <cnv:ConvertidorDiasF6 x:Key="cnvDiasF6"/>
        <cnv:ConvertidorFecha x:Key="cnvFecha"/>
        <cnv:ConvertidorDecimal x:Key="cnvDecimal"/>
		<cnv:ConvertidorDecimal6 x:Key="cnvDecimal6"/>
		<cnv:ConvertidorDecimalEuro x:Key="cnvDecimalEuro"/>
		<cnv:ConvertidorDecimalNulable x:Key="cnvDecimalNulable"/>
		<cnv:ConvertidorNumeroGrafico x:Key="cnvNumGrafico"/>
        <cnv:ConvertidorNumeroGraficoCalendario x:Key="cnvNumGraficoCalendario"/>
        <cnv:ConvertidorNumeroGraficoPijama x:Key="cnvNumGraficoPijama"/>
        <cnv:ConvertidorRojoSiTrue x:Key="cnvRojoSiTrue"/>
        <BooleanToVisibilityConverter x:Key="cnvBoolToVisibility"/>
        <cnv:ConvertidorVisibilityInverter x:Key="cnvVisibilityInverter"/>
		<cnv:ConvertidorColorColumnaPijama x:Key="cnvColorColumnaPijama"/>
		<cnv:ConvertidorNegritaColumnaPijama x:Key="cnvNegritaColumnaPijama"/>
		<cnv:ConvertidorNegritaDiaPijama x:Key="cnvNegritaDiaPijama"/>
        <cnv:ConvertidorOcultoSiCero x:Key="cnvOcultoSiCero"/>

        <Style x:Key="EstiloGridCalendarios" TargetType="DataGrid">
            <Setter Property="ColumnHeaderStyle" Value="{StaticResource EstiloHeadersVerde}"/>
            <Setter Property="RowStyle" Value="{StaticResource EstiloFilasVerde}"/>
            <Setter Property="CellStyle" Value="{StaticResource EstiloCeldasCalendarios}"/>
        </Style>
        <Style x:Key="EstiloGridPijama" TargetType="DataGrid">
            <Setter Property="ColumnHeaderStyle" Value="{StaticResource EstiloHeadersAzul}"/>
            <Setter Property="RowStyle" Value="{StaticResource EstiloFilasAzul}"/>
            <Setter Property="CellStyle" Value="{StaticResource EstiloCeldasNormal}"/>
        </Style>
        <Style x:Key="TextoPijama1" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Verdana"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="TextoPijama2" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Verdana"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Width" Value="135"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="TextBoxPijama" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Verdana"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="75"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="EstiloItemResumen" TargetType="controls:ItemResumen">
            <Setter Property="FontFamily" Value="Verdana"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="5,2"/>
            <Setter Property="LineaPuntos" Value="True"/>
        </Style>

        <Style x:Key="EstiloItemResumenDoble" TargetType="controls:ItemResumenDoble">
            <Setter Property="FontFamily" Value="Verdana"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="5,2"/>
            <Setter Property="LineaPuntos" Value="True"/>
        </Style>

    </UserControl.Resources>


    <!-- ==================================================================================================== -->
    <!-- CONTENIDO -->
    <!-- ==================================================================================================== -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- ==================================================================================================== -->
        <!-- BARRA DE BOTONES CALENDARIOS -->
        <!-- ==================================================================================================== -->
        <StackPanel x:Name="BotonesCalendarios" Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" Height="80" Background="{StaticResource DegradadoCeleste0}"
                    Visibility="Visible">

            <!--BOTON GUARDAR-->
            <Button Style="{StaticResource EstiloBotonBarra}" Command="{Binding cmdGuardarCambios}">
                <Button.Content>
                    <StackPanel Orientation="Vertical">
                        <Image Source="Imagenes/Guardar.png" Style="{StaticResource EstiloImagen}" Visibility="{Binding BotonGuardarAzul}"/>
                        <Image Source="Imagenes/GuardarRojo.png" Style="{StaticResource EstiloImagen}" Visibility="{Binding BotonGuardarRojo}"/>
                        <TextBlock Text="Guardar" TextWrapping="Wrap" TextAlignment="Center"/>
                    </StackPanel>
                </Button.Content>
            </Button>

            <!--SEPARADOR-->
            <TextBlock Width="2" Margin="3,5" Background="LightGray"/>

            <!--BOTON RETROCEDE MES-->
            <Button Style="{StaticResource EstiloBotonBarra}" Command="{Binding CalendariosVM.cmdRetrocedeMes}">
                <Button.Content>
                    <Image Source="Imagenes/Anterior.png" Style="{StaticResource EstiloImagen}"/>
                </Button.Content>
            </Button>

            <!--ETIQUETA MES-->
            <StackPanel Orientation="Vertical" Margin="6,12,6,6" VerticalAlignment="Center" Width="150">
                <Label FontFamily="Bookman Old Style" FontSize="20" HorizontalAlignment="Center" Content="{Binding CalendariosVM.MesActual}"/>
                <Button x:Name="BotonValidezGrupo" FontFamily="Bookman Old Style" FontSize="20" HorizontalAlignment="Center"
                        Style="{StaticResource EstiloBotonValidezFecha}" Width="Auto" Height="Auto" Padding="15, 3"
                        Click="BtAbrirPanelFecha_Click" Content="{Binding CalendariosVM.AñoActual}"/>
            </StackPanel>

            <!--BOTON AVANZA MES-->
            <Button Style="{StaticResource EstiloBotonBarra}" Command="{Binding CalendariosVM.cmdAvanzaMes}">
                <Button.Content>
                    <Image Source="Imagenes/Siguiente.png" Style="{StaticResource EstiloImagen}"/>
                </Button.Content>
            </Button>

            <!--SEPARADOR-->
            <TextBlock Width="2" Margin="3,5" Background="LightGray"/>

            <!--BOTON BORRAR CALENDARIO-->
            <Button Style="{StaticResource EstiloBotonBarra}" Command="{Binding CalendariosVM.cmdBorrarCalendario}">
                <Button.Content>
                    <StackPanel Orientation="Vertical">
                        <Image Source="Imagenes/BorrarFila.png" Style="{StaticResource EstiloImagen}"/>
                        <TextBlock Text="Borrar Calendario" TextWrapping="Wrap" TextAlignment="Center"/>
                    </StackPanel>
                </Button.Content>
            </Button>

            <!--BOTON DESHACER BORRAR-->
            <Button Style="{StaticResource EstiloBotonBarra}" Command="{Binding CalendariosVM.cmdDeshacerBorrar}">
                <Button.Content>
                    <StackPanel Orientation="Vertical">
                        <Image Source="Imagenes/ActualizarTabla.png" Style="{StaticResource EstiloImagen}"/>
                        <TextBlock Text="Deshacer Borrar" TextWrapping="Wrap" TextAlignment="Center"/>
                    </StackPanel>
                </Button.Content>
            </Button>

            <!--SEPARADOR-->
            <TextBlock Width="2" Margin="3,5" Background="LightGray"/>

            <!-- DESPLEGABLE ACCIONES -->
            <xceed:DropDownButton x:Name="BtDropAcciones" Style="{StaticResource EstiloBotonDesplegable}">
                <xceed:DropDownButton.Content>
                    <StackPanel Orientation="Vertical">
                        <Image Source="Imagenes/Engranajes.png" Style="{StaticResource EstiloImagen}"/>
                        <TextBlock Name="TxtAcciones" Text="Acciones" FontSize="10" FontFamily="Arial" TextWrapping="Wrap" TextAlignment="Center"/>
                    </StackPanel>
                </xceed:DropDownButton.Content>
                <xceed:DropDownButton.DropDownContent>
                    <Border BorderBrush="DarkBlue" BorderThickness="2" CornerRadius="5" Background="AliceBlue"
                            DataContext="{Binding Source={x:Reference TxtAcciones}, Path=DataContext.CalendariosVM}">
                        <Border BorderBrush="DarkGray" BorderThickness="1" CornerRadius="5" Margin="3" Padding="5">
                            <StackPanel Orientation="Horizontal">

                                <!-- BOTON DETECTAR FALLOS -->
                                <Button Style="{StaticResource EstiloBotonBarra}" Height="80" Width="64"
                                        Command="{Binding cmdDetectarFallos}">
                                    <Button.Content>
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="Imagenes/ConfigurarTabla.png" Style="{StaticResource EstiloImagen}"/>
                                            <TextBlock Text="Detectar Fallos" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button.Content>
                                </Button>

                                <!-- CAMBIAR JD POR DS -->
                                <Button Style="{StaticResource EstiloBotonBarra}" Height="80" Width="64"
                                        Command="{Binding cmdCambiarJDPorDS}">
                                    <Button.Content>
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="Imagenes/FlechasCruzadas.png" Style="{StaticResource EstiloImagen}"/>
                                            <TextBlock Text="JDs Sueltos a DS" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button.Content>
                                </Button>

                                <!--BOTON ACCIONES POR LOTES -->
                                <Button Style="{StaticResource EstiloBotonBarra}" Height="80" Width="64" Click="BtAccionesLotes_Click">
                                    <Button.Content>
                                        <StackPanel Orientation="Vertical">
                                            <Image Source="Imagenes/Navaja.png" Style="{StaticResource EstiloImagen}"/>
                                            <TextBlock Text="Acciones Por Lotes" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button.Content>
                                </Button>

                                <!--SEPARADOR-->
                                <TextBlock Height="2" Margin="5,3" Background="LightGray"/>

                                <!--BOTON ALTERNAR SELECCION TABLA CALENDARIOS -->
                                <ToggleButton Height="80" Width="64" Command="{Binding Source={x:Reference TablaCalendarios}, Path=ComandoAlternarModoSeleccion}">
                                    <ToggleButton.Style>
                                        <Style BasedOn="{StaticResource EstiloToggleBarra}" TargetType="ToggleButton">
                                            <Style.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter Property="Content">
                                                        <Setter.Value>
                                                            <StackPanel Orientation="Vertical">
                                                                <Image Source="Imagenes/SeleccionFila.png" Style="{StaticResource EstiloImagen}"/>
                                                                <TextBlock Text="Seleccionar Filas" TextWrapping="Wrap" TextAlignment="Center"
																		   VerticalAlignment="Center" FontSize="10"/>
                                                            </StackPanel>

                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <Trigger Property="IsChecked" Value="False">
                                                    <Setter Property="Content">
                                                        <Setter.Value>
                                                            <StackPanel Orientation="Vertical">
                                                                <Image Source="Imagenes/SeleccionCelda.png" Style="{StaticResource EstiloImagen}"/>
                                                                <TextBlock Text="Seleccionar Celdas" TextWrapping="Wrap" TextAlignment="Center" 
																		   VerticalAlignment="Center" FontSize="10"/>
                                                            </StackPanel>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>

                            </StackPanel>
                        </Border>
                    </Border>
                </xceed:DropDownButton.DropDownContent>
            </xceed:DropDownButton>

            <!--SEPARADOR-->
            <TextBlock Width="2" Margin="3,5" Background="LightGray"/>

            <!--BOTON COPIAR-->
            <Button Style="{StaticResource EstiloBotonBarra}" Command="ApplicationCommands.Copy"
                    CommandTarget="{Binding ElementName=TablaCalendarios}">
                <Button.Content>
                    <StackPanel Orientation="Vertical">
                        <Image Source="Imagenes/Copiar.png" Style="{StaticResource EstiloImagen}"/>
                        <TextBlock Text="Copiar" TextWrapping="Wrap" TextAlignment="Center"/>
                    </StackPanel>
                </Button.Content>
            </Button>

            <!--BOTON PEGAR-->
            <Button Style="{StaticResource EstiloBotonBarra}" Command="{Binding ElementName=TablaCalendarios, Path=ComandoPegar}">
                <Button.Content>
                    <StackPanel Orientation="Vertical">
                        <Image Source="Imagenes/Pegar.png" Style="{StaticResource EstiloImagen}"/>
                        <TextBlock Text="Pegar" TextWrapping="Wrap" TextAlignment="Center"/>
                    </StackPanel>
                </Button.Content>
            </Button>

            <!-- DESPLEGABLE FILTRAR TABLA -->
            <xceed:DropDownButton x:Name="BtDropFiltros" Style="{StaticResource EstiloBotonDesplegable}">
                <xceed:DropDownButton.Content>
                    <StackPanel Orientation="Vertical">
                        <Image Source="Imagenes/Filtrar.png" Style="{StaticResource EstiloImagen}"/>
                        <TextBlock Name="TxtFiltrar" Text="Filtrar Tabla" FontSize="10" FontFamily="Arial" TextWrapping="Wrap" TextAlignment="Center"/>
                    </StackPanel>
                </xceed:DropDownButton.Content>
                <xceed:DropDownButton.DropDownContent>
                    <Border BorderBrush="DarkBlue" BorderThickness="2" CornerRadius="5" Background="AliceBlue"
                            DataContext="{Binding Source={x:Reference TxtFiltrar}, Path=DataContext.CalendariosVM}">
                        <Border BorderBrush="DarkGray" BorderThickness="1" CornerRadius="5" Margin="3">
                            <StackPanel Orientation="Vertical">

                                <!--BOTON INDEFINIDOS-->
                                <Button Style="{StaticResource EstiloBotonBarraPequeña}" Margin="6,6,6,3" Padding="20,10"
                                        Content="Indefinidos" TextBlock.TextAlignment="Center" HorizontalAlignment="Stretch"
                                        Command="{Binding cmdAplicarFiltro}"
                                        CommandParameter="Indefinidos" ToolTip="Muestra sólo los conductores indefinidos."
										Click="BotonFiltrado_Click"/>

                                <!--BOTON EVENTUALES-->
                                <Button Style="{StaticResource EstiloBotonBarraPequeña}" Margin="6,3,6,3" Padding="20,10" 
                                        Content="Eventuales" TextBlock.TextAlignment="Center" HorizontalAlignment="Stretch"
                                        Command="{Binding cmdAplicarFiltro}"
                                        CommandParameter="Eventuales" ToolTip="Muestra sólo los conductores eventuales"
										Click="BotonFiltrado_Click"/>

                                <!--BOTON EVENTUALES PARCIAL-->
                                <Button Style="{StaticResource EstiloBotonBarraPequeña}" Margin="6,3,6,6" Padding="20,10" 
                                        Content="Eventuales Parcial" TextBlock.TextAlignment="Center" HorizontalAlignment="Stretch"
                                        Command="{Binding cmdAplicarFiltro}"
                                        CommandParameter="EventualesParcial" ToolTip="Muestra sólo los conductores eventuales que no trabajen todo el mes."
										Click="BotonFiltrado_Click"/>

                            </StackPanel>
                        </Border>
                    </Border>
                </xceed:DropDownButton.DropDownContent>
            </xceed:DropDownButton>

            <!--BOTON QUITAR FILTRO-->
            <Button Style="{StaticResource EstiloBotonBarra}" Command="{Binding CalendariosVM.cmdQuitarFiltro}"
                    Click="BtQuitarFiltro_Click">
                <Button.Content>
                    <StackPanel Orientation="Vertical">
                        <Image Source="Imagenes/QuitarFiltro.png" Style="{StaticResource EstiloImagen}"/>
                        <TextBlock Text="Quitar Filtro" TextWrapping="Wrap" TextAlignment="Center"/>
                    </StackPanel>
                </Button.Content>
            </Button>

            <!--SEPARADOR-->
            <TextBlock Width="2" Margin="3,5" Background="LightGray"/>

            <!--BOTON ABRIR PIJAMA-->
            <Button Style="{StaticResource EstiloBotonBarra}" Command="{Binding CalendariosVM.cmdAbrirPijama}"
					Click="BtAbrirPijama_Click">
                <Button.Content>
                    <StackPanel Orientation="Vertical">
                        <Image Source="Imagenes/HojaPijama.png" Style="{StaticResource EstiloImagen}"/>
                        <TextBlock Text="Hoja Pijama" TextWrapping="Wrap" TextAlignment="Center"/>
                    </StackPanel>
                </Button.Content>
            </Button>


            <!--BOTON RESUMEN AÑO-->
            <Button Style="{StaticResource EstiloBotonBarra}" Command="{Binding CalendariosVM.cmdMostrarResumenAño}">
                <Button.Content>
                    <StackPanel Orientation="Vertical">
                        <Image Source="Imagenes/TablaDetalle.png" Style="{StaticResource EstiloImagen}"/>
                        <TextBlock Text="Resumen Anual" TextWrapping="Wrap" TextAlignment="Center"/>
                    </StackPanel>
                </Button.Content>
            </Button>

            <!--SEPARADOR-->
            <TextBlock Width="2" Margin="3,5" Background="LightGray"/>

            <!-- DESPLEGABLE CREAR PDF -->
            <xceed:DropDownButton x:Name="BtDropCrearPdf" Style="{StaticResource EstiloBotonDesplegable}">
                <xceed:DropDownButton.Content>
                    <StackPanel Orientation="Vertical">
                        <Image Source="Imagenes/GuardarPDF.png" Style="{StaticResource EstiloImagen}"/>
                        <TextBlock Name="TxtCrearPdf" Text="Crear PDF" FontSize="10" FontFamily="Arial" TextWrapping="Wrap" TextAlignment="Center"/>
                    </StackPanel>
                </xceed:DropDownButton.Content>
                <xceed:DropDownButton.DropDownContent>
                    <Border BorderBrush="DarkBlue" BorderThickness="2" CornerRadius="5" Background="AliceBlue"
                            DataContext="{Binding Source={x:Reference TxtCrearPdf}, Path=DataContext.CalendariosVM}">
                        <Border BorderBrush="DarkGray" BorderThickness="1" CornerRadius="5" Margin="3">
                            <StackPanel Orientation="Vertical">

                                <!--BOTON CREAR PDF-->
                                <Button Style="{StaticResource EstiloBotonBarraPequeña}" Margin="6,6,6,3" Padding="20,10"
                                Content="Tabla Calendarios" TextBlock.TextAlignment="Center" HorizontalAlignment="Stretch"
                                Command="{Binding cmdCalendariosEnPDF}" Click="BtCreandoPdf_Click"/>

                                <!--BOTON PIJAMAS JUNTOS EN  PDF-->
                                <Button Style="{StaticResource EstiloBotonBarraPequeña}" Margin="6,3,6,3" Padding="20,10" 
                                Content="Hojas Pijama Juntas" TextBlock.TextAlignment="Center" HorizontalAlignment="Stretch"
                                Command="{Binding cmdPijamasEnPDF}" Click="BtCreandoPdf_Click"/>

                                <!--BOTON PIJAMAS POR SEPARADO EN  PDF-->
                                <Button Style="{StaticResource EstiloBotonBarraPequeña}" Margin="6,3,6,3" Padding="20,10" 
                                Content="Hojas Pijama Por Separado" TextBlock.TextAlignment="Center" HorizontalAlignment="Stretch"
                                Command="{Binding cmdPijamasSeparadosEnPdf}" Click="BtCreandoPdf_Click"/>

                                <!--BOTON FALLOS DE CALENDARIO-->
                                <Button Style="{StaticResource EstiloBotonBarraPequeña}" Margin="6,3,6,6" Padding="20,10" 
                                Content="Fallos de Calendario" TextBlock.TextAlignment="Center" HorizontalAlignment="Stretch"
                                Command="{Binding cmdCalendariosEnPdfConFallos}" Click="BtCreandoPdf_Click"/>

                                <!--BOTON ESTADÍSTICAS-->
                                <Button Style="{StaticResource EstiloBotonBarraPequeña}" Margin="6,3,6,6" Padding="20,10" 
                                Content="Estadísticas" TextBlock.TextAlignment="Center" HorizontalAlignment="Stretch"
                                Command="{Binding cmdPdfEstadisticas}" Click="BtCreandoPdf_Click"/>

                                <!--BOTON ESTADÍSTICAS-->
                                <Button Style="{StaticResource EstiloBotonBarraPequeña}" Margin="6,3,6,6" Padding="20,10" 
                                Content="Estadísticas Mes" TextBlock.TextAlignment="Center" HorizontalAlignment="Stretch"
                                Command="{Binding cmdPdfEstadisticasMes}" Click="BtCreandoPdf_Click"/>

                            </StackPanel>
                        </Border>
                    </Border>
                </xceed:DropDownButton.DropDownContent>
            </xceed:DropDownButton>

            <!--SEPARADOR-->
            <TextBlock Width="2" Margin="3,5" Background="LightGray"/>

        </StackPanel>

        <!-- ==================================================================================================== -->
        <!-- BARRA DE BOTONES PIJAMAS -->
        <!-- ==================================================================================================== -->
        <StackPanel x:Name="BotonesPijama" Grid.Row="0" Orientation="Horizontal" Height="95" Background="{StaticResource DegradadoCeleste0}"
                    Visibility="Collapsed">

            <!--BOTON ACTUALIZAR-->
            <Button Style="{StaticResource EstiloBotonBarra}" Command="{Binding CalendariosVM.cmdActualizarPijama}">
                <Button.Content>
                    <StackPanel Orientation="Vertical">
                        <Image Source="Imagenes/Actualizar.png" Style="{StaticResource EstiloImagen}"/>
                        <TextBlock Text="Actualizar" TextWrapping="Wrap" TextAlignment="Center"/>
                    </StackPanel>
                </Button.Content>
            </Button>

            <!--BOTON VOLVER-->
            <Button Style="{StaticResource EstiloBotonBarra}" Command="{Binding CalendariosVM.cmdCerrarPijama}"
					Click="BtCerrarPijama_Click">
                <Button.Content>
                    <StackPanel Orientation="Vertical">
                        <Image Source="Imagenes/Volver.png" Style="{StaticResource EstiloImagen}"/>
                        <TextBlock Text="Volver" TextWrapping="Wrap" TextAlignment="Center"/>
                    </StackPanel>
                </Button.Content>
            </Button>

            <!--SEPARADOR-->
            <TextBlock Width="2" Margin="3,5" Background="LightGray"/>

            <!-- COBRAR Y REGULAR HORAS-->
            <StackPanel Orientation="Vertical" Margin="3,5" VerticalAlignment="Center">
                <Button Style="{StaticResource EstiloBotonBarraPequeña}" Padding="10,3" Margin="0,5"
                            Command="{Binding CalendariosVM.cmdCobrarHoras}" ToolTip="Inicia el sistema de cobro de horas.">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Imagenes/Cobrar.png" Style="{StaticResource EstiloImagenPequeña}"/>
                            <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="Cobrar Horas" VerticalAlignment="Center"/>
                        </StackPanel>

                    </Button.Content>
                </Button>
                <Button Style="{StaticResource EstiloBotonBarraPequeña}" Padding="10,3" Margin="0,5"
                            Command="{Binding CalendariosVM.cmdRegularHoras}"
                            ToolTip="Inicia el sistema para la regulación de las horas acumuladas por DCs.">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Imagenes/Calendario.png" Style="{StaticResource EstiloImagenPequeña}"/>
                            <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="Regular Horas" VerticalAlignment="Center"/>
                        </StackPanel>

                    </Button.Content>
                </Button>
            </StackPanel>

            <!--SEPARADOR-->
            <TextBlock Width="2" Margin="3,5" Background="LightGray"/>

            <!--BOTON CREAR PDF-->
            <Button Style="{StaticResource EstiloBotonBarra}" Command="{Binding CalendariosVM.cmdCrearPdfPijama}">
                <Button.Content>
                    <StackPanel Orientation="Vertical">
                        <Image Source="Imagenes/GuardarPDF.png" Style="{StaticResource EstiloImagen}"/>
                        <TextBlock Text="Crear PDF" TextWrapping="Wrap" TextAlignment="Center"/>
                    </StackPanel>
                </Button.Content>
            </Button>

            <!--SEPARADOR-->
            <TextBlock Width="2" Margin="3,5" Background="LightGray"/>

            <!--BOTON RECLAMAR -->
            <Button Style="{StaticResource EstiloBotonBarra}" Width="Auto" Command="{Binding CalendariosVM.cmdReclamacion}">
                <Button.Content>
                    <StackPanel Orientation="Vertical">
                        <Image Source="Imagenes/Reclamar.png" Style="{StaticResource EstiloImagen}"/>
                        <TextBlock TextWrapping="Wrap" TextAlignment="Center">Generar<LineBreak/>Reclamación</TextBlock>
                    </StackPanel>
                </Button.Content>
            </Button>

            <!--SEPARADOR-->
            <TextBlock Width="2" Margin="3,5" Background="LightGray"/>

            <!-- PENDIENTE -->
            <TextBlock Style="{StaticResource TextoPijama1}" Text="Año Anter." TextAlignment="Center" FontSize="12" Foreground="DarkGray" Margin="3,5">
                <TextBlock.LayoutTransform>
                    <RotateTransform Angle="-90"/>
                </TextBlock.LayoutTransform>
            </TextBlock>

            <StackPanel Orientation="Vertical" VerticalAlignment="Top" Margin="10">

                <!-- DCs PENDIENTES AÑO ANTERIOR -->
                <StackPanel Orientation="Horizontal" ToolTipService.ShowDuration="100000">
                    <TextBlock Style="{StaticResource TextoPijama1}" Text="DCs Pendientes:  " Margin="0,5" FontSize="13" Width="150" TextAlignment="Right"/>
                    <TextBlock Style="{StaticResource TextoPijama2}" Margin="0,5" FontSize="14" Width="Auto"
                               Text="{Binding CalendariosVM.Pijama.DCsPendientesHastaAñoAnterior, Converter={StaticResource cnvDecimal6}}" />
                    <StackPanel.ToolTip>
                        <TextBlock>
