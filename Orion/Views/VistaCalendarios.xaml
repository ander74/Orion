                                        Visibility="{Binding CalendariosVM.Pijama.DescansoEnFinde, Converter={StaticResource cnvOcultoSiCero}}" />
                                    <controls:ItemResumen
                                        Descripcion="Días de enfermedad (E)"
                                        Style="{StaticResource EstiloItemResumen}"
                                        Valor="{Binding CalendariosVM.Pijama.Enfermo, StringFormat=00}"
                                        Visibility="{Binding CalendariosVM.Pijama.Enfermo, Converter={StaticResource cnvOcultoSiCero}}" />
                                    <controls:ItemResumen
                                        Descripcion="Descansos sueltos (DS)"
                                        Style="{StaticResource EstiloItemResumen}"
                                        Valor="{Binding CalendariosVM.Pijama.DescansoSuelto, StringFormat=00}"
                                        Visibility="{Binding CalendariosVM.Pijama.DescansoSuelto, Converter={StaticResource cnvOcultoSiCero}}" />
                                    <controls:ItemResumen
                                        Descripcion="Descansos compensatorios (DC)"
                                        Style="{StaticResource EstiloItemResumen}"
                                        Valor="{Binding CalendariosVM.Pijama.DescansoCompensatorio, StringFormat=00}"
                                        Visibility="{Binding CalendariosVM.Pijama.DescansoCompensatorio, Converter={StaticResource cnvOcultoSiCero}}" />
                                    <controls:ItemResumen
                                        Descripcion="Días de permiso (PER)"
                                        Style="{StaticResource EstiloItemResumen}"
                                        Valor="{Binding CalendariosVM.Pijama.Permiso, StringFormat=00}"
                                        Visibility="{Binding CalendariosVM.Pijama.Permiso, Converter={StaticResource cnvOcultoSiCero}}" />
                                    <controls:ItemResumen
                                        Descripcion="Días de libre disposición (F6)"
