                        <TextBlock Text="Desayuno" ToolTip="El importe incluye el porcentaje aplicado."/>
                    </DataGridTextColumn.Header>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="ToolTip" Value="{Binding ImporteDesayuno, Converter={StaticResource cnvDecimalEuro}}"/>
                            <Setter Property="ToolTipService.ShowDuration" Value="1000000"/>
							<Setter Property="FontWeight" Value="{Binding DesayunoAlt, Converter={StaticResource cnvNegritaColumnaPijama}}"/>
							<Setter Property="Foreground" Value="{Binding DesayunoAlt, Converter={StaticResource cnvColorColumnaPijama}}"/>
						</Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Comida" Width="*" Binding="{Binding GraficoTrabajado.Comida, 
                                    Converter={StaticResource cnvDecimal}, ConverterParameter={x:Static cnv:VerValores.NoCeros}}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="ToolTip" Value="{Binding ImporteComida, Converter={StaticResource cnvDecimalEuro}}"/>
                            <Setter Property="ToolTipService.ShowDuration" Value="1000000"/>
							<Setter Property="FontWeight" Value="{Binding ComidaAlt, Converter={StaticResource cnvNegritaColumnaPijama}}"/>
							<Setter Property="Foreground" Value="{Binding ComidaAlt, Converter={StaticResource cnvColorColumnaPijama}}"/>
						</Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Cena" Width="*" Binding="{Binding GraficoTrabajado.Cena, 
                                    Converter={StaticResource cnvDecimal}, ConverterParameter={x:Static cnv:VerValores.NoCeros}}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="ToolTip" Value="{Binding ImporteCena, Converter={StaticResource cnvDecimalEuro}}"/>
                            <Setter Property="ToolTipService.ShowDuration" Value="1000000"/>
							<Setter Property="FontWeight" Value="{Binding CenaAlt, Converter={StaticResource cnvNegritaColumnaPijama}}"/>
							<Setter Property="Foreground" Value="{Binding CenaAlt, Converter={StaticResource cnvColorColumnaPijama}}"/>
						</Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="PlusCena" Width="*" Binding="{Binding GraficoTrabajado.PlusCena, 
                                    Converter={StaticResource cnvDecimal}, ConverterParameter={x:Static cnv:VerValores.NoCeros}}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="ToolTip" Value="{Binding ImportePlusCena, Converter={StaticResource cnvDecimalEuro}}"/>
                            <Setter Property="ToolTipService.ShowDuration" Value="1000000"/>
							<Setter Property="FontWeight" Value="{Binding PlusCenaAlt, Converter={StaticResource cnvNegritaColumnaPijama}}"/>
							<Setter Property="Foreground" Value="{Binding PlusCenaAlt, Converter={StaticResource cnvColorColumnaPijama}}"/>
						</Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="TotalDietas" Width="*" Binding="{Binding TotalDietas,
                                    Converter={StaticResource cnvDecimal}, ConverterParameter={x:Static cnv:VerValores.NoCeros}}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="ToolTip" Value="{Binding ImporteTotalDietas, Converter={StaticResource cnvDecimalEuro}}"/>
                            <Setter Property="ToolTipService.ShowDuration" Value="1000000"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Menor Des." Width="*" Binding="{Binding PlusMenorDescanso, 
                                    Converter={StaticResource cnvDecimalEuro}, ConverterParameter={x:Static cnv:VerValores.NoCeros}}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="ToolTip" Value="{Binding TiempoMenorDescanso}"/>
                            <Setter Property="ToolTipService.ShowDuration" Value="1000000"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Paquetería" Width="*" Binding="{Binding PlusPaqueteria, 
                                    Converter={StaticResource cnvDecimalEuro}, ConverterParameter={x:Static cnv:VerValores.NoCeros}}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="ToolTip" Value="{Binding FacturadoPaqueteria, Converter={StaticResource cnvDecimalEuro}}"/>
                            <Setter Property="ToolTipService.ShowDuration" Value="1000000"/>
							<Setter Property="FontWeight" Value="{Binding PlusPaqueteriaAlt, Converter={StaticResource cnvNegritaColumnaPijama}}"/>
							<Setter Property="Foreground" Value="{Binding PlusPaqueteriaAlt, Converter={StaticResource cnvColorColumnaPijama}}"/>
						</Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Limpieza" Width="*" Binding="{Binding PlusLimpieza, 
                                    Converter={StaticResource cnvDecimalEuro}, ConverterParameter={x:Static cnv:VerValores.NoCeros}}">
					<DataGridTextColumn.ElementStyle>
						<Style TargetType="TextBlock">
							<Setter Property="FontWeight" Value="{Binding PlusLimpiezaAlt, Converter={StaticResource cnvNegritaColumnaPijama}}"/>
							<Setter Property="Foreground" Value="{Binding PlusLimpiezaAlt, Converter={StaticResource cnvColorColumnaPijama}}"/>
