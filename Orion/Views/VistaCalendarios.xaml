                                        Valor="{Binding CalendariosVM.Pijama.DescansosNoDisfrutados, StringFormat=00}"
                                        Visibility="{Binding CalendariosVM.Pijama.DescansosNoDisfrutados, Converter={StaticResource cnvOcultoSiCero}}" />
                                    <controls:ItemResumen
                                        Descripcion="Días Trabajado en J-D"
