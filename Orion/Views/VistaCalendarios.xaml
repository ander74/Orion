                    </StackPanel.ToolTip>
                </StackPanel>

                <!--  DNDs PENDIENTES AÑO ANTERIOR  -->
                <StackPanel
                    Orientation="Horizontal"
                    ToolTipService.ShowDuration="100000">
                    <TextBlock
                        Width="50"
                        Margin="0,5"
                        FontSize="13"
                        Style="{StaticResource TextoPijama1}"
                        Text="DNDs: "
                        TextAlignment="Right" />
                    <TextBlock
                        Width="Auto"
                        Margin="0,5"
                        FontSize="14"
                        Style="{StaticResource TextoPijama2}"
