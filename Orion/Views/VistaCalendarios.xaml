                </StackPanel>

                <!--  DÍAS VACACIONES AÑO  -->
                <StackPanel
                    Orientation="Horizontal"
                    ToolTipService.ShowDuration="100000">
                    <TextBlock
                        Width="50"
                        Margin="0,5"
                        FontSize="13"
                        Style="{StaticResource TextoPijama1}"
                        Text="O-V: "
                        TextAlignment="Right" />
                    <TextBlock
                        Width="Auto"
                        Margin="0,5"
                        FontSize="14"
                        Style="{StaticResource TextoPijama2}"
                        Text="{Binding CalendariosVM.Pijama.HastaMesActual.DiasVacaciones, StringFormat=00}" />
                    <StackPanel.ToolTip>
                        <TextBlock>
                            Días de vacaciones desde el 1 de enero de este año.
                        </TextBlock>
                    </StackPanel.ToolTip>
                </StackPanel>


            </StackPanel>

            <StackPanel
                Margin="10"
                VerticalAlignment="Top"
                Orientation="Vertical">

                <!--  DÍAS DE BAJA AÑO  -->
                <StackPanel
                    Orientation="Horizontal"
                    ToolTipService.ShowDuration="100000">
                    <TextBlock
                        Width="50"
                        Margin="0,5"
                        FontSize="13"
                        Style="{StaticResource TextoPijama1}"
                        Text="E: "
                        TextAlignment="Right" />
                    <TextBlock
                        Width="Auto"
                        Margin="0,5"
                        FontSize="14"
                        Style="{StaticResource TextoPijama2}"
                        Text="{Binding CalendariosVM.Pijama.HastaMesActual.DiasEnfermo, StringFormat=00}" />
                    <StackPanel.ToolTip>
                        <TextBlock>
                            Días enfermo desde el 1 de enero de este año.
                        </TextBlock>
                    </StackPanel.ToolTip>
                </StackPanel>

                <!--  DÍAS DESCANSO COMPENSATORIO AÑO  -->
                <StackPanel
                    Orientation="Horizontal"
                    ToolTipService.ShowDuration="100000">
                    <TextBlock
                        Width="50"
                        Margin="0,5"
                        FontSize="13"
                        Style="{StaticResource TextoPijama1}"
                        Text="DCs: "
                        TextAlignment="Right" />
                    <TextBlock
                        Width="Auto"
                        Margin="0,5"
                        FontSize="14"
                        Style="{StaticResource TextoPijama2}"
                        Text="{Binding CalendariosVM.Pijama.HastaMesActual.DiasDC, StringFormat=00}" />
                    <StackPanel.ToolTip>
                        <TextBlock>
                            Días de descanso compensatorio desde el 1 de enero de este año.
                        </TextBlock>
                    </StackPanel.ToolTip>
                </StackPanel>

                <!--  HORAS TRABAJADAS AÑO  -->
                <StackPanel
                    Orientation="Horizontal"
                    ToolTipService.ShowDuration="100000">
                    <TextBlock
                        Width="50"
                        Margin="0,5"
                        FontSize="13"
                        Style="{StaticResource TextoPijama1}"
                        Text="Horas: "
                        TextAlignment="Right" />
                    <TextBlock
                        Width="Auto"
                        Margin="0,5"
                        FontSize="14"
                        Style="{StaticResource TextoPijama2}"
                        Text="{Binding CalendariosVM.Pijama.HastaMesActual.HorasAnuales, Converter={StaticResource cnvDecimal6}}" />
                    <StackPanel.ToolTip>
                        <TextBlock>
                            Horas computadas como trabajo desde el 1 de enero de este año.
                        </TextBlock>
                    </StackPanel.ToolTip>
                </StackPanel>


