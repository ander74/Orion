                                        Descripcion="Días Trabajados"
                                        Style="{StaticResource EstiloItemResumen}"
                                        Valor="{Binding CalendariosVM.Pijama.Trabajo, StringFormat=00}"
                                        Visibility="{Binding CalendariosVM.Pijama.Trabajo, Converter={StaticResource cnvOcultoSiCero}}" />
                                    <controls:ItemResumen
                                        Descripcion="   (Debería trabajar)"
                                        FontSize="10"
                                        Foreground="DarkBlue"
                                        Style="{StaticResource EstiloItemResumen}"
                                        ToolTip="Días que debe trabajar."
                                        Valor="{Binding CalendariosVM.Pijama.DiasComputoTrabajo, StringFormat='(\{0:00.00})'}"
                                        Visibility="{Binding CalendariosVM.Pijama.NoEsFijo, Converter={StaticResource cnvBoolToVisibility}}" />
