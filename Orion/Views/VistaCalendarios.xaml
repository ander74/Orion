                                              Valor2="{Binding CalendariosVM.Pijama.DomingosDescansados, StringFormat=00}"
                                              Visibility="{Binding CalendariosVM.Pijama.DomingosTrabajados, Converter={StaticResource cnvOcultoSiCero}}"/>
                            <controls:ItemResumen Descripcion="Total Plus Domingos"  Style="{StaticResource EstiloItemResumen}"
                                              Valor="{Binding CalendariosVM.Pijama.PlusDomingos, Converter={StaticResource cnvDecimalEuro}}"
                                              Visibility="{Binding CalendariosVM.Pijama.PlusDomingos, Converter={StaticResource cnvOcultoSiCero}}"/>
                            <controls:ItemResumenDoble Descripcion="Festivos Trabajados/Descansados"  Style="{StaticResource EstiloItemResumenDoble}"
                                              Valor1="{Binding CalendariosVM.Pijama.FestivosTrabajados, StringFormat=00}"
                                              Separador="/"
                                              Valor2="{Binding CalendariosVM.Pijama.FestivosDescansados, StringFormat=00}"
                                              Visibility="{Binding CalendariosVM.Pijama.FestivosTrabajados, Converter={StaticResource cnvOcultoSiCero}}"/>
                            <controls:ItemResumen Descripcion="Total Plus Festivos"  Style="{StaticResource EstiloItemResumen}"
                                              Valor="{Binding CalendariosVM.Pijama.PlusFestivos, Converter={StaticResource cnvDecimalEuro}}"
                                              Visibility="{Binding CalendariosVM.Pijama.PlusFestivos, Converter={StaticResource cnvOcultoSiCero}}"/>
                            <controls:ItemResumen Descripcion="Findes completos disfrutados"  Style="{StaticResource EstiloItemResumen}"
                                              Valor="{Binding CalendariosVM.Pijama.FindesCompletos,  Converter={StaticResource cnvDecimal}}"
                                              Visibility="{Binding CalendariosVM.Pijama.FindesCompletos, Converter={StaticResource cnvOcultoSiCero}}"/>

                            <controls:ItemResumen Descripcion="TOTAL FINDES" Style="{StaticResource EstiloItemResumen}" Margin="5,10,5,2"
                                              Valor="{Binding CalendariosVM.Pijama.ImporteTotalFindes, Converter={StaticResource cnvDecimalEuro}}"
                                              ToolTip="Suma de todos los pluses de fin de semana y festivos."
                                              Visibility="{Binding CalendariosVM.Pijama.ImporteTotalFindes, Converter={StaticResource cnvOcultoSiCero}}"/>
                        </StackPanel>
                </Grid>


                <!-- DIETAS Y PLUSES -->
                <ToggleButton x:Name="BtDietasMes" Margin="5,10,5,0" Padding="5,0" FontSize="14" Foreground="DarkRed" FontWeight="Bold"
							  Content="Dietas y Pluses Mes Actual" ToolTip="Mostrar/Ocultar" Style="{StaticResource EstiloToggleBarraPequeña}"/>

                <Grid Margin="5,0" Visibility="{Binding ElementName=BtDietasMes, Path=IsChecked, Converter={StaticResource cnvVisibilityInverter}}">
                    <Border BorderBrush="DarkGray" BorderThickness="1" CornerRadius="5" Background="AliceBlue"/>
                        <StackPanel Orientation="Vertical" Margin="0,4">

                        <!-- DIETAS -->
                            <controls:ItemResumen Descripcion="Dietas Desayuno" Style="{StaticResource EstiloItemResumen}"
                                              Valor="{Binding CalendariosVM.Pijama.DietaDesayuno, Converter={StaticResource cnvDecimal}}"
                                              ToolTip="Dieta de desayuno, sin aplicar el porcentaje de descuento."
                                              Visibility="{Binding CalendariosVM.Pijama.DietaDesayuno, Converter={StaticResource cnvOcultoSiCero}}"/>
                            <controls:ItemResumen Descripcion="Dietas Comida" Style="{StaticResource EstiloItemResumen}"
                                              Valor="{Binding CalendariosVM.Pijama.DietaComida, Converter={StaticResource cnvDecimal}}"
                                              Visibility="{Binding CalendariosVM.Pijama.DietaComida, Converter={StaticResource cnvOcultoSiCero}}"/>
                            <controls:ItemResumen Descripcion="Dietas Cena" Style="{StaticResource EstiloItemResumen}"
                                              Valor="{Binding CalendariosVM.Pijama.DietaCena, Converter={StaticResource cnvDecimal}}"
                                              Visibility="{Binding CalendariosVM.Pijama.DietaCena, Converter={StaticResource cnvOcultoSiCero}}"/>
                            <controls:ItemResumen Descripcion="Plus Cena" Style="{StaticResource EstiloItemResumen}"
                                              Valor="{Binding CalendariosVM.Pijama.DietaPlusCena, Converter={StaticResource cnvDecimal}}"
                                              ToolTip="Dieta de plus cena (con el porcentaje ya aplicado)."
                                              Visibility="{Binding CalendariosVM.Pijama.DietaPlusCena, Converter={StaticResource cnvOcultoSiCero}}"/>

                        <!-- PLUSES -->
                            <controls:ItemResumen Descripcion="Plus Menor Descanso" Style="{StaticResource EstiloItemResumen}"
                                              Valor="{Binding CalendariosVM.Pijama.PlusMenorDescanso, Converter={StaticResource cnvDecimalEuro}}"
                                              Visibility="{Binding CalendariosVM.Pijama.PlusMenorDescanso, Converter={StaticResource cnvOcultoSiCero}}"/>
                            <controls:ItemResumen Descripcion="Plus Limpieza" Style="{StaticResource EstiloItemResumen}"
                                              Valor="{Binding CalendariosVM.Pijama.PlusLimpieza, Converter={StaticResource cnvDecimalEuro}}"
                                              ToolTip="Suma de los pluses de limpieza (fijos y variables)."
                                              Visibility="{Binding CalendariosVM.Pijama.PlusLimpieza, Converter={StaticResource cnvOcultoSiCero}}"/>
                            <controls:ItemResumen Descripcion="Plus Paquetería" Style="{StaticResource EstiloItemResumen}"
                                              Valor="{Binding CalendariosVM.Pijama.PlusPaqueteria, Converter={StaticResource cnvDecimalEuro}}"
                                              ToolTip="Suma de los pluses de paquetería (fijos y variables)."
                                              Visibility="{Binding CalendariosVM.Pijama.PlusPaqueteria, Converter={StaticResource cnvOcultoSiCero}}"/>
                            <controls:ItemResumen Descripcion="Otros Pluses" Style="{StaticResource EstiloItemResumen}"
                                              Valor="{Binding CalendariosVM.Pijama.OtrosPluses, Converter={StaticResource cnvDecimalEuro}}"
                                              ToolTip="{Binding CalendariosVM.Pijama.ToolTipOtrosPluses}"
                                              Visibility="{Binding CalendariosVM.Pijama.OtrosPluses, Converter={StaticResource cnvOcultoSiCero}}"/>

                        <!-- TOTALES -->
                            <controls:ItemResumenDoble Descripcion="TOTAL DIETAS / IMPORTE" Style="{StaticResource EstiloItemResumenDoble}" Margin="5,10,5,2"
                                              Valor1="{Binding CalendariosVM.Pijama.TotalDietas, Converter={StaticResource cnvDecimal}}"
                                                       Separador=" / "
                                              Valor2="{Binding CalendariosVM.Pijama.ImporteTotalDietas, Converter={StaticResource cnvDecimalEuro}}"
                                              ToolTip="Suma de todas las dietas y el importe que representa."
                                              Visibility="{Binding CalendariosVM.Pijama.TotalDietas, Converter={StaticResource cnvOcultoSiCero}}"/>
                            <controls:ItemResumen Descripcion="TOTAL PLUSES" Style="{StaticResource EstiloItemResumen}"
                                              Valor="{Binding CalendariosVM.Pijama.ImporteTotalPluses, Converter={StaticResource cnvDecimalEuro}}"
                                              ToolTip="Suma de todos los pluses (excepto los de fin de semana y festivos)."
                                              Visibility="{Binding CalendariosVM.Pijama.ImporteTotalPluses, Converter={StaticResource cnvOcultoSiCero}}"/>

                        <!-- IMPORTE TOTAL FINDES + DIETAS + PLUSES -->
                            <controls:ItemResumen Descripcion="IMPORTE TOTAL A PERCIBIR" Style="{StaticResource EstiloItemResumen}" Margin="5,10,5,2"
                                              Valor="{Binding CalendariosVM.Pijama.ImporteTotal, Converter={StaticResource cnvDecimalEuro}}"
                                              ToolTip="Importe total a cobrar por dietas y pluses."/>

                    </StackPanel>
                </Grid>

            </StackPanel>
        </ScrollViewer>


            <!-- PENDIENTE HASTA MES ACTUAL -->
            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,5"
                        Visibility="{Binding ElementName=BtOcultarPanelPijama, Path=IsChecked, Converter={StaticResource cnvVisibilityInverter}}">
            
                <ToggleButton x:Name="BtResumenMes" Margin="5,10,5,0" Padding="5,0" FontSize="14" Foreground="DarkRed" FontWeight="Bold" 
						    Content="Pendiente Hasta Mes Actual" ToolTip="Mostrar/Ocultar" Style="{StaticResource EstiloToggleBarraPequeña}"/>

                <Grid Margin="5,0" Visibility="{Binding ElementName=BtResumenMes, Path=IsChecked, Converter={StaticResource cnvVisibilityInverter}}">
                    <Border BorderBrush="DarkGray" BorderThickness="1" CornerRadius="5" Background="AliceBlue"/>

                    <StackPanel Orientation="Vertical">

                        <!-- DNDs, DCs y ACUMULADAS PENDIENTES -->
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="DNDs Pend." Width="100" TextAlignment="Center"
                                    ToolTip="Descansos no disfrutados pendientes de disfrutar."/>
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="DCs Pend." Width="100" TextAlignment="Center"
                                    ToolTip="Descansos compensatorios pendientes de disfrutar."/>
                            <TextBlock Style="{StaticResource TextoPijama1}" Text="H.Acumuladas" Width="130" TextAlignment="Center"
                                    ToolTip="Horas acumuladas generadas en el año en curso."/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Style="{StaticResource TextoPijama2}" FontSize="13" Width="100" TextAlignment="Center"
                                    Text="{Binding CalendariosVM.Pijama.DNDsPendientesHastaMes, Converter={StaticResource cnvDecimal6}}"
                                    ToolTip="Descansos no disfrutados pendientes de disfrutar."/>
                            <TextBlock Style="{StaticResource TextoPijama2}" FontSize="13" Width="100" TextAlignment="Center"
                                    Text="{Binding CalendariosVM.Pijama.DCsPendientesHastaMes, Converter={StaticResource cnvDecimal6}}"
                                    ToolTip="Descansos compensatorios pendientes de disfrutar."/>
                            <TextBlock Style="{StaticResource TextoPijama2}" FontSize="13" Width="130" TextAlignment="Center"
                                    Text="{Binding CalendariosVM.Pijama.AcumuladasHastaMes, Converter={StaticResource cnvHoraMixta},
                                            ConverterParameter={x:Static cnv:VerValores.HoraPlus}}"
                                    ToolTip="Horas acumuladas disponibles hasta final del mes."/>
                        </StackPanel>

                        <Border Height="1" BorderBrush="DarkGray" BorderThickness="1"/>

                        <!-- VACACIONES PENDIENTES EVENTUALES -->
                        <StackPanel Orientation="Horizontal" Margin="0,5" HorizontalAlignment="Center" ToolTipService.ShowDuration="100000"
                                    Visibility="{Binding CalendariosVM.Pijama.NoEsFijo, Converter={StaticResource cnvBoolToVisibility}}">
                            <TextBlock FontFamily="Verdana" FontSize="13" FontWeight="Bold" Foreground="DarkBlue"
                                    Text="Vacaciones pendientes:  "/>
                            <TextBlock FontFamily="Verdana" FontSize="13" Foreground="DarkBlue"
                                    Text="{Binding CalendariosVM.Pijama.VacacionesPendientes,  Converter={StaticResource cnvDecimal6}}"/>
                            <StackPanel.ToolTip>
                                <TextBlock>
                                Vacaciones pendientes hasta final del mes actual.<LineBreak/>
                                Si es negativo, ha disfrutado más vacaciones de las que ha generado.
                                </TextBlock>
                            </StackPanel.ToolTip>
                        </StackPanel>

                        <Border Height="1" BorderBrush="DarkGray" BorderThickness="1"
                                Visibility="{Binding CalendariosVM.Pijama.NoEsFijo, Converter={StaticResource cnvBoolToVisibility}}"/>

                        <!-- DCs GENERADOS -->
                        <StackPanel Orientation="Horizontal" Margin="0,5" HorizontalAlignment="Center" ToolTipService.ShowDuration="100000">
                            <TextBlock FontFamily="Verdana" FontSize="13" FontWeight="Bold" Foreground="DarkBlue"
                                    Text="DCs Generados:  "/>
                            <TextBlock FontFamily="Verdana" FontSize="13" Foreground="DarkBlue"
                                    Text="{Binding CalendariosVM.Pijama.DCsGeneradosHastaMes,  Converter={StaticResource cnvDecimal6}}"/>
                            <StackPanel.ToolTip>
                                <TextBlock>
                                Descansos compensatorios generados a partir de las horas acumuladas actuales <LineBreak/>
                                (incluyendo las sobrantes del año anterior) y los descansos compensatorios <LineBreak/>
                                pendientes, a disfrutar al año siguiente.
                                </TextBlock>
                            </StackPanel.ToolTip>
                        </StackPanel>


                    </StackPanel>

                </Grid>
            
            </StackPanel>

        </Grid>

        <Border x:Name="BordePanelResumen" Grid.RowSpan="4" Grid.Column="1" BorderBrush="DarkBlue" BorderThickness="0.5" 
                Width="{Binding ElementName=PanelPijama, Path=Width}" Visibility="Collapsed" CornerRadius="4"/>
        
        <!-- ==================================================================================================== -->
        <!-- PANEL CAMBIAR FECHA -->
        <!-- ==================================================================================================== -->
        <StackPanel Grid.Row="2" Grid.RowSpan="2" Orientation="Vertical">
            <Border x:Name="PanelFecha" BorderBrush="DarkBlue" BorderThickness="1" CornerRadius="5" Padding="10" Margin="150,0,0,0" 
                    HorizontalAlignment="Left" Visibility="Collapsed" 
					Background="{StaticResource DegradadoCeleste1}">
                <StackPanel Orientation="Vertical">

                    <!-- BARRA SUPERIOR -->
                    <Grid Margin="0">
                        <TextBlock FontSize="12" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Text="Mes Visualizado"/>
                        <Button Style="{StaticResource EstiloBotonBarraPequeña}" Content="X" Foreground="Red" FontWeight="Bold" FontSize="12" Margin="0"
                                Padding="10,5" HorizontalAlignment="Right" Height="Auto" Click="BtAbrirPanelFecha_Click"/>
                    </Grid>

                    <!-- CALENDARIO -->
                    <controls:QCalendar Style="{StaticResource EstiloCalendario}"
										DisplayMode="Month"  FirstDayOfWeek="Monday" SelectionMode="SingleDate"  Focusable="False"
										SelectedDate="{Binding CalendariosVM.FechaActual, Mode=TwoWay}"
										DisplayDate="{Binding CalendariosVM.FechaCalendarios, Mode=TwoWay}"
										SelectedDatesChanged="QCalendar_SelectedDatesChanged">

                    </controls:QCalendar>
                    <TextBlock FontSize="10" Text="Selecciona el día 1 del mes deseado."/>
                </StackPanel>
            </Border>
        </StackPanel>

    </Grid>
    
</UserControl>
