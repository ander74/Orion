                                        Descripcion="Días Descanso (J-D)"
                                        Style="{StaticResource EstiloItemResumen}"
                                        Valor="{Binding CalendariosVM.Pijama.Descanso, StringFormat=00}"
                                        Visibility="{Binding CalendariosVM.Pijama.Descanso, Converter={StaticResource cnvOcultoSiCero}}" />
                                    <controls:ItemResumen
                                        Descripcion="   (Debería descansar)"
                                        FontSize="10"
                                        Foreground="DarkBlue"
                                        Style="{StaticResource EstiloItemResumen}"
                                        ToolTip="Días que debe descansar."
                                        Valor="{Binding CalendariosVM.Pijama.DiasComputoDescanso, StringFormat='(\{0:00.00})'}"
                                        Visibility="{Binding CalendariosVM.Pijama.NoEsFijo, Converter={StaticResource cnvBoolToVisibility}}" />
                                    <controls:ItemResumen
                                        Descripcion="Días Vacaciones (O-V)"
                                        Style="{StaticResource EstiloItemResumen}"
                                        Valor="{Binding CalendariosVM.Pijama.Vacaciones, StringFormat=00}"
                                        Visibility="{Binding CalendariosVM.Pijama.Vacaciones, Converter={StaticResource cnvOcultoSiCero}}" />
                                    <controls:ItemResumen
                                        Descripcion="   (Debería tener de vacaciones)"
                                        FontSize="10"
                                        Foreground="DarkBlue"
                                        Style="{StaticResource EstiloItemResumen}"
                                        ToolTip="Días de vacaciones que le corresponden."
                                        Valor="{Binding CalendariosVM.Pijama.DiasComputoVacaciones, StringFormat='(\{0:00.00})'}"
