<UserControl
    x:Class="Orion.Views.VistaOpciones"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cnv="clr-namespace:Orion.Convertidores"
    xmlns:controls="clr-namespace:Orion.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Orion.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:p="clr-namespace:Orion.Properties"
    xmlns:pp="clr-namespace:Orion"
    xmlns:xceed="http://schemas.xceed.com/wpf/xaml/toolkit"
    d:DesignHeight="800"
    d:DesignWidth="1500"
    mc:Ignorable="d">


    <!--  ====================================================================================================  -->
    <!--  RECURSOS  -->
    <!--  ====================================================================================================  -->
    <UserControl.Resources>

        <cnv:ConvertidorHora x:Key="cnvHora" />
        <cnv:ConvertidorFecha x:Key="cnvFecha" />
        <cnv:ConvertidorDecimal x:Key="cnvDecimal" />
        <cnv:ConvertidorNumeroGrafico x:Key="cnvNumGrafico" />
        <BooleanToVisibilityConverter x:Key="cnvBoolToVisibility" />

        <Style
            x:Key="EstiloPanelOpciones"
            TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="12,6,12,6" />
            <Setter Property="Height" Value="24" />
        </Style>

        <Style
            x:Key="EstiloTextoOpciones"
            TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Width" Value="180" />
            <Setter Property="TextAlignment" Value="Right" />
        </Style>

        <Style
            x:Key="EstiloTextBoxOpciones"
            TargetType="TextBox">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Padding" Value="4" />
            <Setter Property="FontSize" Value="14" />
        </Style>

        <Style
            x:Key="EstiloTextoNegrita"
            BasedOn="{StaticResource EstiloTextoOpciones}"
            TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <Style
            x:Key="EstiloTextoGraficosDias"
            BasedOn="{StaticResource EstiloTextoOpciones}"
            TargetType="TextBlock">
            <Setter Property="Width" Value="140" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <Style
            x:Key="EstiloTextoConvenio"
            BasedOn="{StaticResource EstiloTextoOpciones}"
            TargetType="TextBlock">
            <Setter Property="Width" Value="200" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <Style
            x:Key="EstiloTextoPluses"
            BasedOn="{StaticResource EstiloTextoOpciones}"
            TargetType="TextBlock">
            <Setter Property="Width" Value="160" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <Style
            x:Key="EstiloTextoCarpetas"
            BasedOn="{StaticResource EstiloTextoOpciones}"
            TargetType="TextBlock">
            <Setter Property="Width" Value="130" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <Style
            x:Key="EstiloColorIncidencias"
            BasedOn="{StaticResource EstiloTextoOpciones}"
            TargetType="TextBlock">
            <Setter Property="Width" Value="200" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <Style
            x:Key="EstiloTextBoxCarpetas"
            BasedOn="{StaticResource EstiloTextBoxOpciones}"
            TargetType="TextBox">
            <Setter Property="Width" Value="400" />
        </Style>

        <Style
            x:Key="EstiloTextBoxConvenio"
            BasedOn="{StaticResource EstiloTextBoxOpciones}"
            TargetType="TextBox">
            <Setter Property="Width" Value="65" />
        </Style>

        <Style
            x:Key="EstiloColores"
            TargetType="xceed:ColorPicker">
            <Setter Property="Width" Value="50" />
            <Setter Property="Padding" Value="4" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="ShowDropDownButton" Value="False" />
            <Setter Property="AdvancedTabHeader" Value="Avanzado" />
            <Setter Property="StandardTabHeader" Value="Colores" />
            <Setter Property="AvailableColorsHeader" Value="Colores Disponibles" />
            <Setter Property="RecentColorsHeader" Value="Colores Recientes" />
            <Setter Property="StandardColorsHeader" Value="Colores Estandard" />
            <Setter Property="AvailableColorsSortingMode" Value="HueSaturationBrightness" />
        </Style>


        <!--
            Si queremos que el comando se ejecute en el ViewModel del DataGrid,
            tenemos que poner el datacontext del menú de esta manera.
        -->
        <!--<ContextMenu x:Key="MenuFestivos"
                         DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType={x:Type controls:QDataGrid}}}">-->
        <ContextMenu x:Key="MenuFestivos">
            <MenuItem
                Command="{Binding cmdBorrarFestivo}"
                Header="Borrar">
                <MenuItem.Icon>
                    <Image Source="Imagenes/Cerrar.png" />
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>

        <Style
            x:Key="EstiloGridFestivos"
            TargetType="DataGrid">
            <Setter Property="ColumnHeaderStyle" Value="{StaticResource EstiloHeadersAzul}" />
            <Setter Property="RowStyle" Value="{StaticResource EstiloFilasAzul}" />
            <Setter Property="CellStyle" Value="{StaticResource EstiloCeldasNormal}" />
            <Setter Property="RowStyle">
                <Setter.Value>
                    <Style
                        BasedOn="{StaticResource EstiloFilasAzul}"
                        TargetType="DataGridRow">
                        <Setter Property="ContextMenu" Value="{StaticResource MenuFestivos}" />
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>


    </UserControl.Resources>

    <!--  ====================================================================================================  -->
    <!--  CONTENIDO  -->
    <!--  ====================================================================================================  -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  ====================================================================================================  -->
        <!--  BARRA DE BOTONES  -->
        <!--  ====================================================================================================  -->
        <StackPanel
            Grid.Row="0"
            Height="80"
            Background="{StaticResource DegradadoCeleste0}"
            Orientation="Horizontal">

            <!--  BOTON GUARDAR  -->
            <controls:BotonDual
                Command="{Binding cmdGuardarCambios}"
                ImagenActivo="Imagenes/GuardarRojo.png"
                ImagenNormal="Imagenes/Guardar.png"
                IsActivo="{Binding EnOtroCentro}"
                TextoActivo="Guardar"
                TextoNormal="Guardar" />

            <!--  SEPARADOR  -->
            <TextBlock
                Width="2"
                Margin="3,5"
                Background="LightGray" />

            <!--  BOTON GENERALES  -->
            <Button
                Command="{Binding OpcionesVM.cmdMostrarGenerales}"
                Style="{StaticResource EstiloBotonBarra}">
                <Button.Content>
                    <StackPanel Orientation="Vertical">
                        <Image
                            Source="Imagenes/Herramientas.png"
                            Style="{StaticResource EstiloImagen}" />
                        <TextBlock
                            Text="Opciones Generales"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Button.Content>
            </Button>

            <!--  BOTON CONVENIO  -->
            <Button
                Command="{Binding OpcionesVM.cmdMostrarConvenio}"
                Style="{StaticResource EstiloBotonBarra}">
                <Button.Content>
                    <StackPanel Orientation="Vertical">
                        <Image
                            Source="Imagenes/Calendario.png"
                            Style="{StaticResource EstiloImagen}" />
                        <TextBlock
                            Text="Opciones Convenio"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Button.Content>
            </Button>

            <!--  BOTON CONVENIO  -->
            <Button
                Command="{Binding OpcionesVM.cmdMostrarPorCentro}"
                Style="{StaticResource EstiloBotonBarra}">
                <Button.Content>
                    <StackPanel Orientation="Vertical">
                        <Image
                            Source="Imagenes/Fabrica.png"
                            Style="{StaticResource EstiloImagen}" />
                        <TextBlock
                            Text="Opciones Por Centro"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Button.Content>
            </Button>

            <!--  SEPARADOR  -->
            <TextBlock
                Width="2"
                Margin="3,5"
                Background="LightGray" />

            <!--  BOTON CAMBIAR CONTRASEÑA  -->
            <Button
                Command="{Binding OpcionesVM.cmdCambiarContraseña}"
                Style="{StaticResource EstiloBotonBarra}">
                <Button.Content>
                    <StackPanel Orientation="Vertical">
                        <Image
                            Source="Imagenes/Llave.png"
                            Style="{StaticResource EstiloImagen}" />
                        <TextBlock
                            Text="Cambiar Contraseña"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Button.Content>
            </Button>

            <!--  SEPARADOR  -->
            <TextBlock
                Width="2"
                Margin="3,5"
                Background="LightGray" />

            <!--  BOTON ACERCA DE  -->
            <Button
                Command="{Binding OpcionesVM.cmdAcercaDe}"
                Style="{StaticResource EstiloBotonBarra}">
                <Button.Content>
                    <StackPanel Orientation="Vertical">
                        <Image
                            Source="Imagenes/Informacion.png"
                            Style="{StaticResource EstiloImagen}" />
                        <TextBlock
                            Text="Acerca De"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Button.Content>
            </Button>



        </StackPanel>


        <!--  ====================================================================================================  -->
        <!--  IMAGEN DE FONDO  -->
        <!--  ====================================================================================================  -->
        <Image
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Opacity="0.1"
            Source="Imagenes\Orion.png" />


        <!--  ====================================================================================================  -->
        <!--  BORDE DEL CONTENIDO  -->
        <!--  ====================================================================================================  -->
        <Border
            Grid.Row="1"
            Background="Transparent"
            BorderBrush="DarkBlue"
            BorderThickness="0.5" />


        <!--  ====================================================================================================  -->
        <!--  PANEL DE CONTENIDO GENERAL  -->
        <!--  ====================================================================================================  -->
        <ScrollViewer
            Grid.Row="1"
            Margin="6"
            VerticalScrollBarVisibility="Hidden"
            Visibility="{Binding OpcionesVM.VisibilidadPanelGenerales}">

            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>


                <!--  COLUMNA 0 y 1 FILAS 0 y 1  -->
                <StackPanel
                    Grid.RowSpan="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="2">

                    <!--  OPCIONES INICIALES  -->
                    <controls:GrupoOpciones
                        Margin="6"
                        FondoTitulo="{StaticResource orDegradadoAzul}"
                        Titulo="OPCIONES GENERALES">
                        <controls:GrupoOpciones.Contenido>
                            <StackPanel
                                HorizontalAlignment="Center"
                                Orientation="Vertical">

                                <!--  INICIAL  -->
                                <StackPanel
                                    Height="28"
                                    Style="{StaticResource EstiloPanelOpciones}">
                                    <TextBlock
                                        Width="160"
                                        Style="{StaticResource EstiloTextoNegrita}"
                                        Text="Centro Inicial: " />
                                    <ComboBox
                                        Width="150"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        FontSize="14"
                                        SelectedIndex="{Binding Configuracion.CentroInicial, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                        <ComboBox.Items>
                                            <ComboBoxItem Content="Ninguno" />
                                            <ComboBoxItem Content="Bilbao" />
                                            <ComboBoxItem Content="Donosti" />
                                            <ComboBoxItem Content="Arrasate" />
                                            <ComboBoxItem Content="Gasteiz" />
                                        </ComboBox.Items>
                                    </ComboBox>
                                </StackPanel>

                                <!--  PROGRAMAR COPIAS DE SEGURIDAD  -->
                                <StackPanel
                                    Height="28"
                                    Style="{StaticResource EstiloPanelOpciones}">
                                    <TextBlock
                                        Width="160"
                                        Style="{StaticResource EstiloTextoNegrita}"
                                        Text="Copia Automática: " />
                                    <ComboBox
                                        Width="150"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        FontSize="14"
                                        SelectedIndex="{Binding Configuracion.CopiaAutomatica, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                        <ComboBox.Items>
                                            <ComboBoxItem Content="Nunca" />
                                            <ComboBoxItem Content="Semanal" />
                                            <ComboBoxItem Content="Quincenal" />
                                            <ComboBoxItem Content="Mensual" />
                                        </ComboBox.Items>
                                    </ComboBox>
                                    <Button
                                        Height="28"
                                        Margin="5,0,0,0"
                                        Padding="12,0"
                                        Command="{Binding OpcionesVM.cmdCopiaSeguridadManual}"
                                        Content="Hacer Copia"
                                        Style="{StaticResource EstiloBoton}"
                                        ToolTip="Realiza una copia de seguridad con los datos del programa." />

                                </StackPanel>

                            </StackPanel>
                        </controls:GrupoOpciones.Contenido>
                    </controls:GrupoOpciones>


                    <!--  CARPETAS  -->
                    <controls:GrupoOpciones
                        Margin="6"
                        FondoTitulo="{StaticResource orDegradadoCalabaza}"
                        Titulo="CARPETAS">
                        <controls:GrupoOpciones.Contenido>
                            <StackPanel
                                HorizontalAlignment="Center"
                                Orientation="Vertical">

                                <!--  CARPETA CON LAS BASES DE DATOS  -->
                                <StackPanel
                                    Height="30"
                                    Style="{StaticResource EstiloPanelOpciones}">
                                    <TextBlock
                                        Style="{StaticResource EstiloTextoCarpetas}"
                                        Text="Bases de Datos: " />
                                    <controls:QTextBox
                                        Style="{StaticResource EstiloTextBoxCarpetas}"
                                        Text="{Binding Configuracion.CarpetaDatos, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    <Button
                                        Width="40"
                                        Height="28"
                                        Margin="5,0,0,0"
                                        Command="{Binding OpcionesVM.cmdCambiarCarpeta}"
                                        CommandParameter="Datos"
                                        Content="..."
                                        Style="{StaticResource EstiloBoton}" />
                                </StackPanel>

                                <!--  CARPETA CON LOS ARCHIVOS DE AYUDA  -->
                                <StackPanel
                                    Height="30"
                                    Style="{StaticResource EstiloPanelOpciones}">
                                    <TextBlock
                                        Style="{StaticResource EstiloTextoCarpetas}"
                                        Text="Archivos Ayuda: " />
                                    <controls:QTextBox
                                        Style="{StaticResource EstiloTextBoxCarpetas}"
                                        Text="{Binding Configuracion.CarpetaAyuda, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    <Button
                                        Width="40"
                                        Height="28"
                                        Margin="5,0,0,0"
                                        Command="{Binding OpcionesVM.cmdCambiarCarpeta}"
                                        CommandParameter="Ayuda"
                                        Content="..."
                                        Style="{StaticResource EstiloBoton}" />
                                </StackPanel>

                                <!--  CARPETA DE COPIAS DE SEGURIDAD  -->
                                <StackPanel
                                    Height="30"
                                    Style="{StaticResource EstiloPanelOpciones}">
                                    <TextBlock
                                        Style="{StaticResource EstiloTextoCarpetas}"
                                        Text="Copias Seguridad: " />
                                    <controls:QTextBox
                                        Style="{StaticResource EstiloTextBoxCarpetas}"
                                        Text="{Binding Configuracion.CarpetaCopiasSeguridad, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    <Button
                                        Width="40"
                                        Height="28"
                                        Margin="5,0,0,0"
                                        Command="{Binding OpcionesVM.cmdCambiarCarpeta}"
                                        CommandParameter="CopiasSeguridad"
                                        Content="..."
                                        Style="{StaticResource EstiloBoton}" />
                                </StackPanel>

                                <!--  CARPETA DE INFORMES  -->
                                <StackPanel
                                    Height="30"
                                    Style="{StaticResource EstiloPanelOpciones}">
                                    <TextBlock
                                        Style="{StaticResource EstiloTextoCarpetas}"
                                        Text="Informes PDF: " />
                                    <controls:QTextBox
                                        Style="{StaticResource EstiloTextBoxCarpetas}"
                                        Text="{Binding Configuracion.CarpetaInformes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    <Button
                                        Width="40"
                                        Height="28"
                                        Margin="5,0,0,0"
                                        Command="{Binding OpcionesVM.cmdCambiarCarpeta}"
                                        CommandParameter="Informes"
                                        Content="..."
                                        Style="{StaticResource EstiloBoton}" />
                                </StackPanel>

                                <!--  CREAR INFORMES DIRECTAMENTE  -->
                                <StackPanel Style="{StaticResource EstiloPanelOpciones}">
                                    <TextBlock Width="130" />
                                    <CheckBox
                                        Width="Auto"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Content="Crear informes sin pedir nombre de archivo."
                                        FontSize="14"
                                        IsChecked="{Binding Configuracion.CrearInformesDirectamente, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </StackPanel>

                                <!--  ABRIR ARCHIVOS DESPUÉS DE CREAR  -->
                                <StackPanel Style="{StaticResource EstiloPanelOpciones}">
                                    <TextBlock Width="130" />
                                    <CheckBox
                                        Width="Auto"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Content="Abrir PDFs después de crearlos."
                                        FontSize="14"
                                        IsChecked="{Binding Configuracion.AbrirPDFs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </StackPanel>

                            </StackPanel>
                        </controls:GrupoOpciones.Contenido>
                    </controls:GrupoOpciones>


                    <!--  OPCIONES EN LA NUBE  -->
                    <controls:GrupoOpciones
                        Margin="6"
                        FondoTitulo="{StaticResource orDegradadoVioleta}"
                        Titulo="OPCIONES EN LA NUBE">
                        <controls:GrupoOpciones.Contenido>
                            <StackPanel
                                HorizontalAlignment="Center"
                                Orientation="Vertical">

                                <!--  SINCRONIZAR EN ONEDRIVE  -->
                                <StackPanel
                                    Height="Auto"
                                    HorizontalAlignment="Left"
                                    IsEnabled="{Binding OpcionesVM.SePuedeSincronizarNube}"
                                    Style="{StaticResource EstiloPanelOpciones}">
                                    <CheckBox
                                        Width="Auto"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Command="{Binding OpcionesVM.cmdSincronizarNubePulsado}"
                                        Content="Sincronizar en la Nube."
                                        FontSize="14"
                                        IsChecked="{Binding Configuracion.SincronizarEnDropbox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                    <StackPanel
                                        Height="Auto"
                                        HorizontalAlignment="Right"
                                        Style="{StaticResource EstiloPanelOpciones}">
                                        <Button
                                            Padding="12,6"
                                            Command="{Binding OpcionesVM.cmdDropboxAPc}"
                                            Style="{StaticResource EstiloBotonBarraPequeña}"
                                            ToolTip="Copia las bases de datos que hay en la carpeta de la nube a la carpeta local del ordenador.">
                                            <Button.Content>
                                                <StackPanel Orientation="Horizontal">
                                                    <Image
                                                        VerticalAlignment="Center"
                                                        Source="Imagenes/BajarNube.png"
                                                        Style="{StaticResource EstiloImagenPequeña}" />
                                                    <TextBlock
                                                        Margin="10,0,0,0"
                                                        VerticalAlignment="Center"
                                                        FontSize="14"
                                                        Text="De la Nube al PC" />
                                                </StackPanel>
                                            </Button.Content>
                                        </Button>
                                        <Button
                                            Padding="12,6"
                                            Command="{Binding OpcionesVM.cmdPcADropbox}"
                                            Style="{StaticResource EstiloBotonBarraPequeña}"
                                            ToolTip="Copia las bases de datos que hay en la carpeta local del ordenador a la carpeta de la Nube.">
                                            <Button.Content>
                                                <StackPanel Orientation="Horizontal">
                                                    <Image
                                                        VerticalAlignment="Center"
                                                        Source="Imagenes/SubirNube.png"
                                                        Style="{StaticResource EstiloImagenPequeña}" />
                                                    <TextBlock
                                                        Margin="10,0,0,0"
                                                        VerticalAlignment="Center"
                                                        FontSize="14"
                                                        Text="Del PC a la Nube" />
                                                </StackPanel>
                                            </Button.Content>
                                        </Button>
                                    </StackPanel>
                                </StackPanel>


                                <!--  CARPETA EN LA NUBE  -->
                                <StackPanel
                                    Height="30"
                                    Style="{StaticResource EstiloPanelOpciones}">
                                    <TextBlock
                                        Width="130"
                                        Style="{StaticResource EstiloTextoOpciones}"
                                        Text="Carpeta en la Nube: " />
                                    <controls:QTextBox
                                        Width="400"
                                        Style="{StaticResource EstiloTextBoxOpciones}"
                                        Text="{Binding Configuracion.CarpetaDropbox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    <Button
                                        Width="40"
                                        Height="28"
                                        Margin="5,0,0,0"
                                        Command="{Binding OpcionesVM.cmdCambiarCarpeta}"
                                        CommandParameter="Dropbox"
                                        Content="..."
                                        Style="{StaticResource EstiloBoton}" />
                                </StackPanel>

                            </StackPanel>
                        </controls:GrupoOpciones.Contenido>
                    </controls:GrupoOpciones>

                </StackPanel>


                <!--  COLUMNA 2 y 3 FILA 0  -->
                <StackPanel
                    Grid.Row="0"
                    Grid.Column="2"
                    Grid.ColumnSpan="2">

                    <!--  ACTUALIZACION AUTOMÁTICA  -->
                    <controls:GrupoOpciones
                        Margin="6"
                        FondoTitulo="{StaticResource orDegradadoNaranja}"
                        Titulo="ACTUALIZACIÓN AUTOMÁTICA">
                        <controls:GrupoOpciones.Contenido>
                            <StackPanel
                                HorizontalAlignment="Center"
                                Orientation="Vertical">

                                <!--  CARPETA ORIGEN ACTUALIZACIÓN  -->
                                <StackPanel
                                    Height="30"
                                    Margin="12,6,0,0"
                                    Style="{StaticResource EstiloPanelOpciones}">
                                    <TextBlock
                                        Width="Auto"
                                        Style="{StaticResource EstiloTextoCarpetas}"
                                        Text="Origen Actualización: " />
                                </StackPanel>
                                <StackPanel
                                    Height="30"
                                    Margin="12,6,0,6"
                                    Style="{StaticResource EstiloPanelOpciones}">
                                    <controls:QTextBox
                                        Style="{StaticResource EstiloTextBoxCarpetas}"
                                        Text="{Binding Configuracion.CarpetaOrigenActualizar, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    <Button
                                        Width="40"
                                        Height="28"
                                        Margin="5,0,0,0"
                                        Command="{Binding OpcionesVM.cmdCambiarCarpeta}"
                                        CommandParameter="OrigenActualizar"
                                        Content="..."
                                        Style="{StaticResource EstiloBoton}" />
                                </StackPanel>


                                <!--  ABRIR ARCHIVOS DESPUÉS DE CREAR  -->
                                <StackPanel Style="{StaticResource EstiloPanelOpciones}">
                                    <CheckBox
                                        Width="Auto"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Content="Buscar actualizaciones de Orion automáticamente."
                                        FontSize="14"
                                        IsChecked="{Binding Configuracion.ActualizarPrograma, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </StackPanel>

                            </StackPanel>
                        </controls:GrupoOpciones.Contenido>
                    </controls:GrupoOpciones>

                    <!--  LOGOS Y MARCAS DE AGUA  -->
                    <controls:GrupoOpciones
                        Margin="6"
                        FondoTitulo="{StaticResource orDegradadoRojo}"
                        Titulo="LOGOS Y MARCAS DE AGUA">
                        <controls:GrupoOpciones.Contenido>
                            <StackPanel
                                HorizontalAlignment="Center"
                                Orientation="Vertical">

                                <!--  RUTA LOGO SINDICATO  -->
                                <StackPanel
                                    Height="30"
                                    Style="{StaticResource EstiloPanelOpciones}">
                                    <TextBlock
                                        Style="{StaticResource EstiloTextoCarpetas}"
                                        Text="Logo Sindicato: " />
                                    <controls:QTextBox
                                        Style="{StaticResource EstiloTextBoxCarpetas}"
                                        Text="{Binding Configuracion.RutaLogoSindicato, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    <Button
                                        Width="40"
                                        Height="28"
                                        Margin="5,0,0,0"
                                        Command="{Binding OpcionesVM.cmdRutaLogos}"
                                        CommandParameter="Logo"
                                        Content="..."
                                        Style="{StaticResource EstiloBoton}" />
                                </StackPanel>

                                <!--  RUTA MARCA DE AGUA  -->
                                <StackPanel
                                    Height="30"
                                    Style="{StaticResource EstiloPanelOpciones}">
                                    <TextBlock
                                        Style="{StaticResource EstiloTextoCarpetas}"
                                        Text="Marca de Agua: " />
                                    <controls:QTextBox
                                        Style="{StaticResource EstiloTextBoxCarpetas}"
                                        Text="{Binding Configuracion.RutaMarcaAgua, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    <Button
                                        Width="40"
                                        Height="28"
                                        Margin="5,0,0,0"
