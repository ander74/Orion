                                HorizontalAlignment="Center"
                                Style="{StaticResource EstiloPanelOpciones}">
                                <TextBlock
                                    Style="{StaticResource EstiloTextoPluses}"
                                    Text="Porcentaje: " />
                                <controls:QTextBox
                                    Style="{StaticResource EstiloTextBoxConvenio}"
                                    Text="{Binding OpcionesVM.PorcentajeIncremento, Converter={StaticResource cnvDecimal}}" />
                            </StackPanel>

                            <Button
                                Margin="10"
                                Padding="20,10"
                                HorizontalAlignment="Center"
                                Command="{Binding OpcionesVM.cmdIncrementarImportes}"
                                Content="Incrementar Porcentajes"
                                Focusable="True"
                                FontFamily="Verdana"
                                FontSize="12"
                                Style="{StaticResource EstiloBoton}" />

                        </StackPanel>

                    </Border>
                </StackPanel>

            </StackPanel>


            <!--  COLUMNA 2  -->
            <StackPanel Grid.Column="2">

                <!--  FESTIVOS  -->
                <StackPanel Margin="6">

                    <!--  SELECTOR DE AÑO  -->
                    <Grid>

                        <Border
                            Background="{StaticResource orDegradadoAzul}"
                            BorderBrush="DarkBlue"
                            BorderThickness="1" />

                        <Button
                            Height="Auto"
                            Margin="6"
                            Padding="10,5"
                            HorizontalAlignment="Left"
                            Command="{Binding OpcionesVM.cmdAñoFestivosMenos}"
                            Content="&lt;"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="Blue"
                            Style="{StaticResource EstiloBotonBarraPequeña}" />

                        <StackPanel
                            Margin="0,6"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="16"
                                FontWeight="Bold"
                                Text="FESTIVOS" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="22"
                                FontWeight="Bold"
                                Text="{Binding FestivosVM.AñoActual}" />
                        </StackPanel>

                        <Button
                            Height="Auto"
                            Margin="6"
                            Padding="10,5"
                            HorizontalAlignment="Right"
                            Command="{Binding OpcionesVM.cmdAñoFestivosMas}"
                            Content="&gt;"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="Blue"
                            Style="{StaticResource EstiloBotonBarraPequeña}" />

                    </Grid>

                    <!--  TABLA DÍAS FESTIVOS  -->
                    <controls:QDataGrid
                        x:Name="TablaFestivos"
                        AlternationCount="2"
                        AutoGenerateColumns="False"
                        Background="Transparent"
                        CanUserAddRows="True"
                        CanUserReorderColumns="False"
                        CanUserSortColumns="True"
                        FontFamily="Comic Sans MS"
                        FontSize="11"
                        HeadersVisibility="None"
                        HorizontalGridLinesBrush="Transparent"
                        IsReadOnly="False"
                        ItemsSource="{Binding FestivosVM.VistaFestivos}"
                        SelectionMode="Extended"
                        SelectionUnit="Cell"
                        Style="{StaticResource EstiloGridFestivos}"
                        VerticalGridLinesBrush="Lavender">

                        <controls:QDataGrid.Columns>
                            <DataGridTextColumn
                                Width="*"
                                MinWidth="60"
                                Binding="{Binding Fecha, Converter={StaticResource cnvFecha}}"
                                FontFamily="Verdana"
                                FontSize="14"
                                Header="Días" />
                        </controls:QDataGrid.Columns>

                    </controls:QDataGrid>

                </StackPanel>

            </StackPanel>


        </Grid>



    </Grid>
</UserControl>
